@page "/doctor/prescriptions/review"
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@using MediChatAI_BlazorWebAssembly.Core.Services.UI
@using Microsoft.AspNetCore.Components.Authorization
@inject IPrescriptionService PrescriptionService
@inject IToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Prescription Review - MediChatAI</PageTitle>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 pb-12">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 shadow-md border-b border-gray-200 dark:border-gray-700">
        <div class="px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <button @onclick="NavigateBack" class="p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                    </button>
                    <div class="p-3 bg-gradient-to-r from-primary to-accent rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Prescription Review & Signing</h1>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                            Review and sign pending prescriptions
                        </p>
                    </div>
                </div>
                @if (pendingPrescriptions.Any())
                {
                    <div class="flex items-center space-x-2 bg-yellow-100 dark:bg-yellow-900 dark:bg-opacity-20 px-4 py-2 rounded-lg">
                        <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="text-yellow-800 dark:text-yellow-300 font-semibold">@pendingPrescriptions.Count pending signature(s)</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="px-4 sm:px-6 lg:px-8 py-6">
        @if (isLoading)
        {
            <div class="flex items-center justify-center py-20">
                <div class="relative">
                    <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-200 border-t-blue-600"></div>
                    <div class="absolute inset-0 animate-ping rounded-full h-16 w-16 border border-blue-400 opacity-20"></div>
                </div>
            </div>
        }
        else if (!pendingPrescriptions.Any())
        {
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-12 text-center">
                <svg class="w-24 h-24 mx-auto text-green-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <h3 class="text-2xl font-bold text-gray-600 dark:text-gray-400 mb-2">All Caught Up!</h3>
                <p class="text-gray-500 dark:text-gray-500">No prescriptions awaiting your signature</p>
                <button @onclick="NavigateBack" class="mt-6 px-6 py-3 bg-gradient-to-r from-primary to-accent text-white rounded-lg hover:shadow-lg transition-all font-semibold">
                    Back to Prescriptions
                </button>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
                @foreach (var prescription in pendingPrescriptions.OrderBy(p => p.PrescriptionDate))
                {
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden border-2 border-yellow-300 dark:border-yellow-700 hover:shadow-xl transition-all">
                        <!-- Header -->
                        <div class="bg-gradient-to-r from-yellow-500 to-amber-600 px-6 py-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-lg font-bold text-white">@prescription.PrescriptionId</h3>
                                    <p class="text-yellow-100 text-sm">Pending Signature</p>
                                </div>
                                <div class="p-3 bg-white bg-opacity-20 rounded-lg">
                                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <!-- Patient Info -->
                        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center space-x-3 mb-3">
                                <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center">
                                    <span class="text-white font-bold">@GetInitials(prescription.PatientName)</span>
                                </div>
                                <div>
                                    <h4 class="text-lg font-bold text-gray-900 dark:text-white">@prescription.PatientName</h4>
                                    <p class="text-sm text-gray-600 dark:text-gray-400">
                                        Created @prescription.PrescriptionDate.ToString("MMM dd, yyyy h:mm tt")
                                    </p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(prescription.Diagnosis))
                            {
                                <div class="bg-blue-50 dark:bg-blue-900 dark:bg-opacity-20 rounded-lg p-3 mb-3">
                                    <p class="text-xs font-semibold text-blue-800 dark:text-blue-400 mb-1">Diagnosis:</p>
                                    <p class="text-sm text-gray-900 dark:text-white">@prescription.Diagnosis</p>
                                </div>
                            }
                        </div>

                        <!-- Prescription Items -->
                        <div class="px-6 py-4 max-h-64 overflow-y-auto">
                            <h5 class="text-sm font-bold text-gray-700 dark:text-gray-300 mb-3">
                                Medications (@prescription.Items.Count)
                            </h5>
                            <div class="space-y-3">
                                @foreach (var item in prescription.Items)
                                {
                                    <div class="bg-gray-50 dark:bg-gray-750 rounded-lg p-3 border border-gray-200 dark:border-gray-600">
                                        <div class="flex items-start justify-between mb-2">
                                            <h6 class="font-semibold text-gray-900 dark:text-white text-sm">@item.DrugName</h6>
                                            <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300 rounded text-xs font-semibold">
                                                @item.Route
                                            </span>
                                        </div>
                                        <div class="grid grid-cols-2 gap-2 text-xs text-gray-600 dark:text-gray-400">
                                            <div><strong>Dosage:</strong> @item.Dosage</div>
                                            <div><strong>Frequency:</strong> @item.Frequency</div>
                                            <div><strong>Duration:</strong> @item.DurationDays days</div>
                                            <div><strong>Quantity:</strong> @item.Quantity</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(item.TimingInstructions))
                                        {
                                            <p class="text-xs text-gray-600 dark:text-gray-400 mt-2">
                                                <strong>Timing:</strong> @item.TimingInstructions
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Instructions))
                                        {
                                            <p class="text-xs text-gray-600 dark:text-gray-400 mt-2">
                                                <strong>Instructions:</strong> @item.Instructions
                                            </p>
                                        }
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Special Instructions -->
                        @if (!string.IsNullOrEmpty(prescription.SpecialInstructions))
                        {
                            <div class="px-6 py-3 bg-gray-50 dark:bg-gray-750 border-t border-gray-200 dark:border-gray-700">
                                <p class="text-xs font-semibold text-gray-700 dark:text-gray-300 mb-1">Special Instructions:</p>
                                <p class="text-sm text-gray-600 dark:text-gray-400">@prescription.SpecialInstructions</p>
                            </div>
                        }

                        <!-- Actions -->
                        <div class="px-6 py-4 bg-gray-50 dark:bg-gray-750 border-t border-gray-200 dark:border-gray-700">
                            <button @onclick="() => ShowSignatureModal(prescription)"
                                    disabled="@isProcessing"
                                    class="w-full px-4 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-lg hover:shadow-lg transition-all font-semibold flex items-center justify-center space-x-2">
                                @if (isProcessing && selectedPrescription?.PrescriptionId == prescription.PrescriptionId)
                                {
                                    <span class="loading loading-spinner loading-sm"></span>
                                    <span>Signing...</span>
                                }
                                else
                                {
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                                    </svg>
                                    <span>Review & Sign</span>
                                }
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Signature Modal -->
@if (showSignatureModal && selectedPrescription != null)
{
    <div class="modal modal-open">
        <div class="modal-box max-w-2xl bg-gray-800 border border-gray-700">
            <h3 class="font-bold text-lg text-white mb-4">Sign Prescription</h3>

            <div class="mb-6">
                <div class="bg-blue-900 bg-opacity-20 border border-blue-700 rounded-lg p-4 mb-4">
                    <p class="text-blue-400 font-semibold mb-2">@selectedPrescription.PrescriptionId</p>
                    <p class="text-gray-300 text-sm">
                        Patient: <strong>@selectedPrescription.PatientName</strong>
                    </p>
                    <p class="text-gray-300 text-sm">
                        Items: <strong>@selectedPrescription.Items.Count medication(s)</strong>
                    </p>
                </div>

                <div class="mb-4">
                    <label class="text-gray-400 text-sm mb-2 block">Digital Signature</label>
                    <div class="bg-white dark:bg-gray-700 rounded-lg border-2 border-gray-300 dark:border-gray-600 p-4 text-center">
                        <svg class="w-16 h-16 mx-auto text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                        </svg>
                        <p class="text-gray-500 dark:text-gray-400 text-sm">
                            By signing below, you certify that this prescription is accurate and appropriate for the patient.
                        </p>
                        <div class="mt-4">
                            <input @bind="signatureName"
                                   placeholder="Type your full name to sign"
                                   class="w-full bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white rounded px-4 py-3 text-center text-lg font-serif italic focus:outline-none focus:ring-2 focus:ring-primary-500" />
                        </div>
                    </div>
                </div>

                <div class="bg-yellow-900 bg-opacity-20 border border-yellow-700 rounded-lg p-3 mb-4">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-yellow-400 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        <p class="text-yellow-300 text-sm">
                            Once signed, this prescription will become active and cannot be modified. Please review all details carefully.
                        </p>
                    </div>
                </div>
            </div>

            <div class="modal-action">
                <button @onclick="CancelSignature"
                        disabled="@isProcessing"
                        class="btn btn-ghost text-gray-400">
                    Cancel
                </button>
                <button @onclick="ConfirmSignature"
                        disabled="@(string.IsNullOrWhiteSpace(signatureName) || isProcessing)"
                        class="btn btn-success">
                    @if (isProcessing)
                    {
                        <span class="loading loading-spinner loading-sm mr-2"></span>
                    }
                    Sign & Activate Prescription
                </button>
            </div>
        </div>
        <div class="modal-backdrop" @onclick="CancelSignature"></div>
    </div>
}

@code {
    private List<PrescriptionModel> pendingPrescriptions = new();
    private bool isLoading = true;
    private bool isProcessing = false;
    private bool showSignatureModal = false;
    private PrescriptionModel? selectedPrescription;
    private string signatureName = string.Empty;
    private string doctorId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        doctorId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty;

        await LoadPendingPrescriptions();
    }

    private async Task LoadPendingPrescriptions()
    {
        isLoading = true;
        try
        {
            pendingPrescriptions = await PrescriptionService.GetPendingPrescriptionsAsync(doctorId);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading prescriptions: {ex.Message}");
            pendingPrescriptions = new List<PrescriptionModel>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ShowSignatureModal(PrescriptionModel prescription)
    {
        selectedPrescription = prescription;
        signatureName = string.Empty;
        showSignatureModal = true;
    }

    private void CancelSignature()
    {
        showSignatureModal = false;
        selectedPrescription = null;
        signatureName = string.Empty;
    }

    private async Task ConfirmSignature()
    {
        if (selectedPrescription == null || string.IsNullOrWhiteSpace(signatureName)) return;

        isProcessing = true;
        try
        {
            // Generate a simple signature representation (in production, this would be more sophisticated)
            var signatureBase64 = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(signatureName));

            var success = await PrescriptionService.SignPrescriptionAsync(
                selectedPrescription.PrescriptionId,
                signatureBase64
            );

            if (success)
            {
                ToastService.ShowSuccess($"Prescription {selectedPrescription.PrescriptionId} signed successfully");
                pendingPrescriptions.Remove(selectedPrescription);
                CancelSignature();
                StateHasChanged();
            }
            else
            {
                ToastService.ShowError("Failed to sign prescription");
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error signing prescription: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
        }
    }

    private string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "?";

        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();

        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/doctor/prescriptions");
    }
}
