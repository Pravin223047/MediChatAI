@code {
    private PatientSearchFilter searchFilter = new();
    private PatientListResponse? patientListResponse;
    private bool isLoading = true;
    private bool showAdvancedFilters = false;
    private System.Timers.Timer? searchDebounceTimer;

    // Three dots menu state
    private string? activePatientMenuId = null;

    // Modal states
    private bool showEditPatientModal = false;
    private bool showRecordVitalsModal = false;
    private bool showManageTagsModal = false;
    private bool showDeleteConfirmationModal = false;
    private string? selectedPatientId = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
    }

    private async Task LoadPatients()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            patientListResponse = await PatientService.GetPatientsAsync(searchFilter);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading patients: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        searchDebounceTimer?.Stop();
        searchDebounceTimer?.Dispose();

        searchDebounceTimer = new System.Timers.Timer(500);
        searchDebounceTimer.Elapsed += async (sender, e) =>
        {
            searchDebounceTimer?.Stop();
            await InvokeAsync(async () =>
            {
                searchFilter.PageNumber = 1;
                await LoadPatients();
            });
        };
        searchDebounceTimer.AutoReset = false;
        searchDebounceTimer.Start();
    }

    private async Task ChangePage(int pageNumber)
    {
        searchFilter.PageNumber = pageNumber;
        await LoadPatients();
    }

    private async Task ClearFilters()
    {
        searchFilter = new PatientSearchFilter();
        await LoadPatients();
    }

    private void ViewPatientDetails(string patientId)
    {
        Navigation.NavigateTo($"/doctor/patients/{patientId}");
    }

    private void ShowAddPatientModal()
    {
        ToastService.ShowInfo("Add Patient feature coming soon!");
    }

    private string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "??";
        var parts = fullName.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0) return "??";
        if (parts.Length == 1) return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }

    private string GetStatusGradient(string status) => status switch
    {
        "Critical" => "from-red-500 to-red-600",
        "Follow-up" => "from-purple-500 to-purple-600",
        "Stable" => "from-green-500 to-green-600",
        _ => "from-blue-500 to-blue-600"
    };

    private string FormatPhoneNumber(string phone)
    {
        if (phone.Length > 10) return phone.Substring(phone.Length - 10);
        return phone;
    }

    // Three dots menu methods
    private void TogglePatientMenu(string patientId)
    {
        if (activePatientMenuId == patientId)
        {
            activePatientMenuId = null;
        }
        else
        {
            activePatientMenuId = patientId;
        }
        StateHasChanged();
    }

    private void ClosePatientMenu()
    {
        activePatientMenuId = null;
        StateHasChanged();
    }

    // Modal handler methods
    private void OpenEditPatientModal(string patientId)
    {
        selectedPatientId = patientId;
        showEditPatientModal = true;
        ClosePatientMenu();
    }

    private void OpenRecordVitalsModal(string patientId)
    {
        selectedPatientId = patientId;
        showRecordVitalsModal = true;
        ClosePatientMenu();
    }

    private void OpenManageTagsModal(string patientId)
    {
        selectedPatientId = patientId;
        showManageTagsModal = true;
        ClosePatientMenu();
    }

    private void ScheduleAppointment(string patientId)
    {
        ClosePatientMenu();
        // Navigate to appointments page with patient pre-selected
        Navigation.NavigateTo($"/doctor/appointments?patientId={patientId}");
    }

    private void OpenDeleteConfirmationModal(string patientId)
    {
        selectedPatientId = patientId;
        showDeleteConfirmationModal = true;
        ClosePatientMenu();
    }

    // Modal close handlers
    private async Task OnEditPatientModalClose(bool reload = false)
    {
        showEditPatientModal = false;
        selectedPatientId = null;
        if (reload)
        {
            await LoadPatients();
        }
    }

    private async Task OnRecordVitalsModalClose(bool reload = false)
    {
        showRecordVitalsModal = false;
        selectedPatientId = null;
        if (reload)
        {
            await LoadPatients();
        }
    }

    private async Task OnManageTagsModalClose(bool reload = false)
    {
        showManageTagsModal = false;
        selectedPatientId = null;
        if (reload)
        {
            await LoadPatients();
        }
    }

    private async Task OnDeleteConfirmationModalClose(bool deleted = false)
    {
        showDeleteConfirmationModal = false;
        selectedPatientId = null;
        if (deleted)
        {
            await LoadPatients();
        }
    }

    public void Dispose()
    {
        searchDebounceTimer?.Dispose();
    }
}
