@page "/doctor/patients"
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@inject IPatientManagementService PatientService
@inject IToastService ToastService
@inject NavigationManager Navigation
@inject AppSettingsState AppSettings

<PageTitle>My Patients - @AppSettings.Settings.SiteName</PageTitle>

<AuthorizeRouteGuard RequiredRole="Doctor">

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 shadow-md border-b border-gray-200 dark:border-gray-700">
        <div class="px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
                <div class="flex items-center space-x-4 mb-4 md:mb-0">
                    <div class="p-3 bg-gradient-to-r from-primary to-accent rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">My Patients</h1>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                            @if (patientListResponse != null)
                            {
                                <span>Showing @patientListResponse.Patients.Count of @patientListResponse.TotalCount patients</span>
                            }
                        </p>
                    </div>
                </div>
                <button class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-accent text-white rounded-xl hover:shadow-lg transition-all font-semibold"
                        @onclick="ShowAddPatientModal">
                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    Add New Patient
                </button>
            </div>
        </div>
    </div>

    <!-- Search and Filters -->
    <div class="px-4 sm:px-6 lg:px-8 py-6">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
                <!-- Search Box -->
                <div class="lg:col-span-2">
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Search Patients
                    </label>
                    <div class="relative">
                        <input type="text"
                               class="w-full pl-12 pr-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                               placeholder="Search by name, email, or phone..."
                               @bind="searchFilter.SearchTerm"
                               @bind:event="oninput"
                               @onkeyup="OnSearchKeyUp" />
                        <svg class="absolute left-4 top-3.5 w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                </div>

                <!-- Status Filter -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Status
                    </label>
                    <select class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                            @bind="searchFilter.Status"
                            @bind:after="LoadPatients">
                        <option value="">All</option>
                        <option value="Active">Active</option>
                        <option value="Critical">Critical</option>
                        <option value="Follow-up">Follow-up</option>
                        <option value="Stable">Stable</option>
                    </select>
                </div>

                <!-- Gender Filter -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                        Gender
                    </label>
                    <select class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                            @bind="searchFilter.Gender"
                            @bind:after="LoadPatients">
                        <option value="">All</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <!-- Advanced Filters Toggle -->
            <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
                <button class="text-primary dark:text-primary hover:text-blue-700 text-sm font-semibold flex items-center"
                        @onclick="() => showAdvancedFilters = !showAdvancedFilters">
                    <svg class="w-4 h-4 mr-2 transition-transform @(showAdvancedFilters ? "rotate-180" : "")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                    @(showAdvancedFilters ? "Hide" : "Show") Advanced Filters
                </button>
                @if (!string.IsNullOrEmpty(searchFilter.SearchTerm) || searchFilter.Status != "" || searchFilter.Gender != "")
                {
                    <button class="text-red-600 hover:text-red-700 text-sm font-semibold" @onclick="ClearFilters">
                        <svg class="w-4 h-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Clear Filters
                    </button>
                }
            </div>

            <!-- Advanced Filters Panel -->
            @if (showAdvancedFilters)
            {
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Age Range</label>
                        <div class="flex items-center space-x-2">
                            <input type="number"
                                   class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                                   placeholder="From"
                                   @bind="searchFilter.AgeFrom" />
                            <span class="text-gray-500">-</span>
                            <input type="number"
                                   class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                                   placeholder="To"
                                   @bind="searchFilter.AgeTo" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Sort By</label>
                        <select class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-600 rounded-lg dark:bg-gray-700 dark:text-white"
                                @bind="searchFilter.SortBy">
                            <option value="LastVisit">Last Visit</option>
                            <option value="Name">Name</option>
                            <option value="Age">Age</option>
                        </select>
                    </div>
                    <div class="flex items-end">
                        <button class="w-full px-6 py-2 bg-primary text-white rounded-lg hover:bg-blue-700 font-semibold"
                                @onclick="LoadPatients">
                            Apply Filters
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Patient List -->
        @if (isLoading)
        {
            <div class="flex items-center justify-center py-20">
                <div class="relative mb-6">
                    <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-200 border-t-blue-600 mx-auto"></div>
                    <div class="absolute inset-0 animate-ping rounded-full h-16 w-16 border border-blue-400 opacity-20 mx-auto"></div>
                </div>
            </div>
        }
        else if (patientListResponse != null && patientListResponse.Patients.Any())
        {
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 text-white shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-blue-100 text-sm font-medium">Total Patients</p>
                            <p class="text-3xl font-bold mt-1">@patientListResponse.TotalCount</p>
                        </div>
                        <div class="p-3 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-6 text-white shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-green-100 text-sm font-medium">Active</p>
                            <p class="text-3xl font-bold mt-1">@patientListResponse.Patients.Count(p => p.Status == "Active")</p>
                        </div>
                        <div class="p-3 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-xl p-6 text-white shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-red-100 text-sm font-medium">Critical</p>
                            <p class="text-3xl font-bold mt-1">@patientListResponse.Patients.Count(p => p.Status == "Critical")</p>
                        </div>
                        <div class="p-3 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-1.99-1.333-2.76 0L3.732 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl p-6 text-white shadow-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-purple-100 text-sm font-medium">Follow-up</p>
                            <p class="text-3xl font-bold mt-1">@patientListResponse.Patients.Count(p => p.Status == "Follow-up")</p>
                        </div>
                        <div class="p-3 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Patient Cards Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var patient in patientListResponse.Patients)
                {
                    <div class="group bg-white dark:bg-gray-800 rounded-2xl shadow-md hover:shadow-2xl transition-all duration-300 cursor-pointer border-2 border-transparent hover:border-primary relative overflow-visible"
                         @onclick="() => ViewPatientDetails(patient.PatientId)">
                        <!-- Header with Status -->
                        <div class="bg-gradient-to-r @GetStatusGradient(patient.Status) px-6 py-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3">
                                    <div class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center text-white font-bold text-lg">
                                        @GetInitials(patient.FullName)
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-bold text-white">@patient.FullName</h3>
                                        <p class="text-sm text-white text-opacity-90">ID: @patient.PatientId</p>
                                    </div>
                                </div>
                                <span class="px-3 py-1 bg-white bg-opacity-30 backdrop-blur-sm rounded-full text-white text-xs font-semibold">
                                    @patient.Status
                                </span>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="p-6 space-y-4">
                            <div class="grid grid-cols-2 gap-4">
                                <div class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                    <div>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">Age</p>
                                        <p class="text-sm font-semibold text-gray-900 dark:text-white">@patient.Age years</p>
                                    </div>
                                </div>

                                <div class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <div>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">Gender</p>
                                        <p class="text-sm font-semibold text-gray-900 dark:text-white">@patient.Gender</p>
                                    </div>
                                </div>

                                <div class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                    <div>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">Phone</p>
                                        <p class="text-sm font-semibold text-gray-900 dark:text-white">@FormatPhoneNumber(patient.PhoneNumber)</p>
                                    </div>
                                </div>

                                <div class="flex items-center space-x-2">
                                    <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                                    </svg>
                                    <div>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">Visits</p>
                                        <p class="text-sm font-semibold text-gray-900 dark:text-white">@patient.TotalVisits</p>
                                    </div>
                                </div>
                            </div>

                            <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                                <div class="flex items-center justify-between text-xs">
                                    <span class="text-gray-500 dark:text-gray-400">Last Visit:</span>
                                    <span class="font-semibold text-gray-700 dark:text-gray-300">@patient.LastVisitDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                @if (patient.NextAppointmentDate.HasValue)
                                {
                                    <div class="flex items-center justify-between text-xs mt-2">
                                        <span class="text-gray-500 dark:text-gray-400">Next Appointment:</span>
                                        <span class="font-semibold text-primary dark:text-primary">@patient.NextAppointmentDate.Value.ToString("MMM dd, yyyy")</span>
                                    </div>
                                }
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex items-center space-x-2 pt-2">
                                <button class="flex-1 px-4 py-2 bg-primary text-white rounded-lg hover:bg-blue-700 transition-all text-sm font-semibold"
                                        @onclick:stopPropagation="true"
                                        @onclick="() => ViewPatientDetails(patient.PatientId)">
                                    View Details
                                </button>
                                <!-- Three Dots Dropdown Menu -->
                                <div class="relative" @onclick:stopPropagation="true">
                                    <button class="px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-all"
                                            @onclick="() => TogglePatientMenu(patient.PatientId)">
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                                        </svg>
                                    </button>

                                    @if (activePatientMenuId == patient.PatientId)
                                    {
                                        <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-xl shadow-2xl bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 dark:ring-gray-700 z-[9999] border border-gray-200 dark:border-gray-700"
                                             @onclick:stopPropagation="true">
                                            <div class="py-1">
                                                <!-- Edit Patient -->
                                                <button class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center transition-colors"
                                                        @onclick="() => OpenEditPatientModal(patient.PatientId)">
                                                    <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                    </svg>
                                                    Edit Patient Info
                                                </button>

                                                <!-- Record Vitals -->
                                                <button class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center transition-colors"
                                                        @onclick="() => OpenRecordVitalsModal(patient.PatientId)">
                                                    <svg class="w-5 h-5 mr-3 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                    </svg>
                                                    Record Vital Signs
                                                </button>

                                                <!-- Manage Tags -->
                                                <button class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center transition-colors"
                                                        @onclick="() => OpenManageTagsModal(patient.PatientId)">
                                                    <svg class="w-5 h-5 mr-3 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                                                    </svg>
                                                    Add/Manage Tags
                                                </button>

                                                <!-- Schedule Appointment -->
                                                <button class="w-full text-left px-4 py-3 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center transition-colors"
                                                        @onclick="() => ScheduleAppointment(patient.PatientId)">
                                                    <svg class="w-5 h-5 mr-3 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                    </svg>
                                                    Schedule Appointment
                                                </button>

                                                <!-- Divider -->
                                                <div class="border-t border-gray-200 dark:border-gray-600 my-1"></div>

                                                <!-- Delete Patient -->
                                                <button class="w-full text-left px-4 py-3 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 flex items-center transition-colors"
                                                        @onclick="() => OpenDeleteConfirmationModal(patient.PatientId)">
                                                    <svg class="w-5 h-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                    </svg>
                                                    Delete Patient
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (patientListResponse.TotalPages > 1)
            {
                <div class="flex items-center justify-center space-x-2 mt-8">
                    <button class="px-4 py-2 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 disabled:opacity-50"
                            disabled="@(searchFilter.PageNumber == 1)"
                            @onclick="() => ChangePage(searchFilter.PageNumber - 1)">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                    </button>

                    @for (int i = 1; i <= patientListResponse.TotalPages; i++)
                    {
                        var pageNum = i;
                        <button class="px-4 py-2 rounded-lg font-semibold transition-all @(pageNum == searchFilter.PageNumber ? "bg-gradient-to-r from-primary to-accent text-white" : "bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 border-2 border-gray-300 dark:border-gray-600")"
                                @onclick="() => ChangePage(pageNum)">
