@page "/doctor/patients/{PatientId}"
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@inject IPatientManagementService PatientService
@inject NavigationManager Navigation
@inject AppSettingsState AppSettings

<PageTitle>Patient Details - @AppSettings.Settings.SiteName</PageTitle>

<AuthorizeRouteGuard RequiredRole="Doctor">

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 pb-12">
    @if (isLoading)
    {
        <!-- Loading State -->
        <div class="flex justify-center items-center h-screen">
            <div class="text-center">
                <div class="animate-spin rounded-full h-16 w-16 border-b-4 border-primary mx-auto"></div>
                <p class="mt-4 text-gray-600 dark:text-gray-400 font-medium">Loading patient details...</p>
            </div>
        </div>
    }
    else if (patient != null)
    {
        <!-- Header Section -->
        <div class="bg-white dark:bg-gray-800 shadow-md border-b border-gray-200 dark:border-gray-700">
            <div class="px-4 sm:px-6 lg:px-8 py-6">
                <!-- Back Button -->
                <div class="mb-4">
                    <button @onclick="GoBack"
                            class="inline-flex items-center text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-accent transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                        Back to Patients
                    </button>
                </div>

                <!-- Patient Profile Header -->
                <div class="bg-gradient-to-r @GetStatusGradient(patient.Status) rounded-2xl p-8 mb-6">
                    <div class="flex flex-col md:flex-row items-start md:items-center space-y-4 md:space-y-0 md:space-x-6">
                        <!-- Patient Avatar -->
                        <div class="h-24 w-24 rounded-full bg-white bg-opacity-30 flex items-center justify-center text-4xl font-bold text-white border-4 border-white border-opacity-50">
                            @GetPatientInitials(patient.FirstName, patient.LastName)
                        </div>

                        <!-- Patient Info -->
                        <div class="flex-1 text-white">
                            <div class="flex items-start justify-between">
                                <div>
                                    <h1 class="text-3xl md:text-4xl font-bold mb-2">@patient.FullName</h1>
                                    <p class="text-lg opacity-90 mb-3">@patient.Email</p>
                                    <div class="flex flex-wrap items-center gap-3">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white bg-opacity-30 text-white">
                                            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                            </svg>
                                            @patient.Age years old
                                        </span>
                                        @if (!string.IsNullOrEmpty(patient.Gender))
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white bg-opacity-30 text-white">
                                                @patient.Gender
                                            </span>
                                        }
                                        @if (!string.IsNullOrEmpty(patient.BloodGroup))
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white bg-opacity-30 text-white">
                                                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                                                </svg>
                                                @patient.BloodGroup
                                            </span>
                                        }
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @GetStatusBadgeClass(patient.Status)">
                                            @patient.Status
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Stats -->
                        <div class="grid grid-cols-2 gap-4 bg-white bg-opacity-20 rounded-xl p-4 backdrop-blur-sm">
                            <div class="text-center">
                                <div class="text-3xl font-bold text-white">@patient.TotalVisits</div>
                                <div class="text-sm text-white text-opacity-90">Total Visits</div>
                            </div>
                            <div class="text-center">
                                <div class="text-3xl font-bold text-white">@(patient.ChronicConditions?.Count ?? 0)</div>
                                <div class="text-sm text-white text-opacity-90">Conditions</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <div class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
            <div class="px-4 sm:px-6 lg:px-8">
                <nav class="-mb-px flex space-x-8 overflow-x-auto">
                    <button @onclick="() => activeTab = 0"
                            class="@(activeTab == 0 ? "border-primary text-primary dark:border-accent dark:text-accent" : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        Overview
                    </button>
                    <button @onclick="() => activeTab = 1"
                            class="@(activeTab == 1 ? "border-primary text-primary dark:border-accent dark:text-accent" : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                        Medical History & Vitals
                    </button>
                    <button @onclick="() => activeTab = 2"
                            class="@(activeTab == 2 ? "border-primary text-primary dark:border-accent dark:text-accent" : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        Appointments
                    </button>
                    <button @onclick="() => activeTab = 3"
                            class="@(activeTab == 3 ? "border-primary text-primary dark:border-accent dark:text-accent" : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors inline-flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Prescriptions & Documents
                    </button>
                </nav>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="px-4 sm:px-6 lg:px-8 py-6">
            @if (activeTab == 0)
            {
                <!-- Overview Tab -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Personal Information -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                            <div class="p-2 bg-gradient-to-r from-primary to-accent rounded-lg mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            Personal Information
                        </h3>
                        <dl class="space-y-4">
                            <div class="flex justify-between items-start">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Full Name</dt>
                                <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.FullName</dd>
                            </div>
                            @if (patient.DateOfBirth.HasValue)
                            {
                                <div class="flex justify-between items-start">
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Date of Birth</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.DateOfBirth.Value.ToString("MMMM dd, yyyy") (@patient.Age years)</dd>
                                </div>
                            }
                            <div class="flex justify-between items-start">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</dt>
                                <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.Email</dd>
                            </div>
                            @if (!string.IsNullOrEmpty(patient.PhoneNumber))
                            {
                                <div class="flex justify-between items-start">
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Phone</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.PhoneNumber</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(patient.Gender))
                            {
                                <div class="flex justify-between items-start">
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Gender</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.Gender</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(patient.BloodGroup))
                            {
                                <div class="flex justify-between items-start">
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Blood Group</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.BloodGroup</dd>
                                </div>
                            }
                        </dl>
                    </div>

                    <!-- Contact & Address -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                            <div class="p-2 bg-gradient-to-r from-primary to-accent rounded-lg mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                            Contact & Address
                        </h3>
                        <dl class="space-y-4">
                            @if (!string.IsNullOrEmpty(patient.Address))
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Street Address</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold">@patient.Address</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(patient.City) || !string.IsNullOrEmpty(patient.State))
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">City & State</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold">@patient.City@(!string.IsNullOrEmpty(patient.City) && !string.IsNullOrEmpty(patient.State) ? ", " : "")@patient.State</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(patient.ZipCode))
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">ZIP Code</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold">@patient.ZipCode</dd>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(patient.EmergencyContactName))
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Emergency Contact</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold">@patient.EmergencyContactName</dd>
                                    @if (!string.IsNullOrEmpty(patient.EmergencyContactPhone))
                                    {
                                        <dd class="text-sm text-gray-600 dark:text-gray-400 mt-1">@patient.EmergencyContactPhone</dd>
                                    }
                                </div>
                            }
                        </dl>
                    </div>

                    <!-- Medical Summary -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                            <div class="p-2 bg-gradient-to-r from-primary to-accent rounded-lg mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                                </svg>
                            </div>
                            Medical Summary
                        </h3>
                        <dl class="space-y-4">
                            @if (patient.ChronicConditions?.Any() == true)
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Chronic Conditions</dt>
                                    <dd class="flex flex-wrap gap-2">
                                        @foreach (var condition in patient.ChronicConditions)
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                                                @condition
                                            </span>
                                        }
                                    </dd>
                                </div>
                            }
                            @if (patient.Allergies?.Any() == true)
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Allergies</dt>
                                    <dd class="flex flex-wrap gap-2">
                                        @foreach (var allergy in patient.Allergies)
                                        {
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
                                                @allergy
                                            </span>
                                        }
                                    </dd>
                                </div>
                            }
                            @if (patient.CurrentMedications?.Any() == true)
                            {
                                <div>
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Current Medications</dt>
                                    <dd class="space-y-1">
                                        @foreach (var medication in patient.CurrentMedications)
                                        {
                                            <div class="text-sm text-gray-900 dark:text-white font-medium">• @medication</div>
                                        }
                                    </dd>
                                </div>
                            }
                        </dl>
                    </div>

                    <!-- Account Information -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
                            <div class="p-2 bg-gradient-to-r from-primary to-accent rounded-lg mr-3">
                                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            Visit Information
                        </h3>
                        <dl class="space-y-4">
                            <div class="flex justify-between items-start">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Registration Date</dt>
                                <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.RegistrationDate.ToString("MMMM dd, yyyy")</dd>
                            </div>
                            <div class="flex justify-between items-start">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Visit</dt>
                                <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.LastVisitDate.ToString("MMMM dd, yyyy")</dd>
                            </div>
                            @if (patient.NextAppointmentDate.HasValue)
                            {
                                <div class="flex justify-between items-start">
                                    <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Next Appointment</dt>
                                    <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.NextAppointmentDate.Value.ToString("MMMM dd, yyyy")</dd>
                                </div>
                            }
                            <div class="flex justify-between items-start">
                                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Visits</dt>
                                <dd class="text-sm text-gray-900 dark:text-white font-semibold text-right">@patient.TotalVisits</dd>
                            </div>
                        </dl>
                    </div>
                </div>
            }
            else if (activeTab == 1)
            {
                <!-- Medical History & Vitals Tab -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Vital Signs History -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Recent Vital Signs</h3>
                        @if (patient.VitalSignsHistory?.Any() == true)
                        {
                            <div class="space-y-4">
                                @foreach (var vital in patient.VitalSignsHistory.Take(5))
                                {
                                    <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-xl">
                                        <div class="text-sm font-semibold text-gray-900 dark:text-white mb-3">@vital.RecordedDate.ToString("MMM dd, yyyy")</div>
                                        <div class="grid grid-cols-2 gap-3 text-sm">
                                            @if (vital.BloodPressureSystolic.HasValue && vital.BloodPressureDiastolic.HasValue)
                                            {
                                                <div>
                                                    <div class="text-gray-500 dark:text-gray-400">Blood Pressure</div>
                                                    <div class="text-gray-900 dark:text-white font-semibold">@vital.BloodPressureSystolic/@vital.BloodPressureDiastolic mmHg</div>
                                                </div>
                                            }
                                            @if (vital.HeartRate.HasValue)
                                            {
                                                <div>
                                                    <div class="text-gray-500 dark:text-gray-400">Heart Rate</div>
                                                    <div class="text-gray-900 dark:text-white font-semibold">@vital.HeartRate bpm</div>
                                                </div>
                                            }
                                            @if (vital.Temperature.HasValue)
                                            {
                                                <div>
                                                    <div class="text-gray-500 dark:text-gray-400">Temperature</div>
                                                    <div class="text-gray-900 dark:text-white font-semibold">@vital.Temperature.Value.ToString("F1")°F</div>
                                                </div>
                                            }
                                            @if (vital.OxygenSaturation.HasValue)
                                            {
                                                <div>
                                                    <div class="text-gray-500 dark:text-gray-400">O₂ Saturation</div>
                                                    <div class="text-gray-900 dark:text-white font-semibold">@vital.OxygenSaturation%</div>
                                                </div>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(vital.Notes))
                                        {
                                            <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-600">
                                                <div class="text-xs text-gray-600 dark:text-gray-400">@vital.Notes</div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-gray-500 dark:text-gray-400 text-center py-8">No vital signs recorded</p>
                        }
                    </div>

                    <!-- Medical History -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Medical History</h3>
                        @if (patient.MedicalHistory?.Any() == true)
                        {
                            <div class="space-y-4">
                                @foreach (var history in patient.MedicalHistory.Take(5))
                                {
                                    <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-xl">
                                        <div class="flex items-center justify-between mb-2">
                                            <div class="text-sm font-semibold text-gray-900 dark:text-white">@history.VisitDate.ToString("MMM dd, yyyy")</div>
                                            <div class="text-xs text-gray-500 dark:text-gray-400">Dr. @history.DoctorName</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(history.Symptoms))
                                        {
                                            <div class="mb-2">
                                                <div class="text-xs text-gray-500 dark:text-gray-400">Symptoms:</div>
                                                <div class="text-sm text-gray-900 dark:text-white">@history.Symptoms</div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(history.Diagnosis))
                                        {
                                            <div class="mb-2">
                                                <div class="text-xs text-gray-500 dark:text-gray-400">Diagnosis:</div>
                                                <div class="text-sm text-gray-900 dark:text-white">@history.Diagnosis</div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(history.Notes))
                                        {
                                            <div class="text-xs text-gray-600 dark:text-gray-400 mt-2 pt-2 border-t border-gray-200 dark:border-gray-600">@history.Notes</div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-gray-500 dark:text-gray-400 text-center py-8">No medical history available</p>
                        }
                    </div>
                </div>
            }
            else if (activeTab == 2)
            {
                <!-- Appointments Tab -->
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Appointment History</h3>
                    @if (patient.MedicalHistory?.Any() == true)
                    {
                        <div class="space-y-3">
                            @foreach (var history in patient.MedicalHistory)
                            {
                                <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-xl hover:shadow-md transition-shadow">
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3 mb-2">
                                            <div class="text-sm font-semibold text-gray-900 dark:text-white">@history.VisitDate.ToString("MMMM dd, yyyy")</div>
                                            <span class="text-xs text-gray-500 dark:text-gray-400">Dr. @history.DoctorName</span>
                                        </div>
                                        <div class="text-sm text-gray-600 dark:text-gray-300">
                                            @if (!string.IsNullOrEmpty(history.Symptoms))
                                            {
                                                <span>Reason: @history.Symptoms</span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(history.Notes))
                                        {
                                            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">@history.Notes</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-500 dark:text-gray-400 text-center py-12">No appointments found</p>
                    }
                </div>
            }
            else if (activeTab == 3)
            {
                <!-- Prescriptions & Documents Tab -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Current Medications -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Current Medications</h3>
                        @if (patient.CurrentMedications?.Any() == true)
                        {
                            <div class="space-y-3">
                                @foreach (var medication in patient.CurrentMedications)
                                {
                                    <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-xl">
                                        <div class="text-sm font-semibold text-gray-900 dark:text-white">@medication</div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-gray-500 dark:text-gray-400 text-center py-8">No current medications</p>
                        }
                    </div>

                    <!-- Documents Placeholder -->
                    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-200 dark:border-gray-700">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Medical Documents</h3>
                        <p class="text-gray-500 dark:text-gray-400 text-center py-8">No documents available</p>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Error State -->
        <div class="flex justify-center items-center h-screen">
            <div class="text-center">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Patient Not Found</h3>
                <p class="text-gray-600 dark:text-gray-400 mb-4">The requested patient could not be found.</p>
                <button @onclick="GoBack"
                        class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-accent text-white rounded-xl hover:shadow-lg transition-all font-semibold">
                    Go Back to Patients
                </button>
            </div>
        </div>
    }
</div>

</AuthorizeRouteGuard>

@code {
    [Parameter]
    public string PatientId { get; set; } = string.Empty;

    private PatientDetailModel? patient;
    private bool isLoading = true;
    private int activeTab = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatientDetails();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(PatientId))
        {
            await LoadPatientDetails();
        }
    }

    private async Task LoadPatientDetails()
    {
        isLoading = true;
        try
        {
            patient = await PatientService.GetPatientByIdAsync(PatientId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading patient details: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/doctor/patients");
    }

    private string GetPatientInitials(string firstName, string lastName)
    {
        var initials = "";
        if (!string.IsNullOrEmpty(firstName)) initials += firstName[0];
        if (!string.IsNullOrEmpty(lastName)) initials += lastName[0];
        return initials.ToUpper();
    }

    private string GetStatusGradient(string status)
    {
        return status switch
        {
            "Critical" => "from-red-500 to-red-600",
            "Follow-up" => "from-yellow-500 to-orange-500",
            "Stable" => "from-green-500 to-emerald-600",
            _ => "from-primary to-accent"
        };
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Critical" => "bg-red-500 text-white",
            "Follow-up" => "bg-yellow-500 text-white",
            "Stable" => "bg-green-500 text-white",
            _ => "bg-blue-500 text-white"
        };
    }
}
