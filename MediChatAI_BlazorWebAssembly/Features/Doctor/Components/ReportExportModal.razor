@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime

@if (IsOpen)
{
    <div class="fixed inset-0 z-50 overflow-y-auto">
        <!-- Backdrop -->
        <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" @onclick="Close"></div>

        <!-- Modal -->
        <div class="flex min-h-full items-center justify-center p-4">
            <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-2xl p-6 transform transition-all">
                <!-- Header -->
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Export Report</h2>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Choose export format and options</p>
                    </div>
                    <button @onclick="Close" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>

                <!-- Export Format Selection -->
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Select Format</label>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                        @foreach (var format in new[] {
                            new { Value = "PDF", Label = "PDF", Icon = "M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z", Color = "from-red-500 to-red-600" },
                            new { Value = "Excel", Label = "Excel", Icon = "M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z", Color = "from-green-500 to-green-600" },
                            new { Value = "CSV", Label = "CSV", Icon = "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z", Color = "from-blue-500 to-blue-600" },
                            new { Value = "PNG", Label = "PNG", Icon = "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z", Color = "from-purple-500 to-purple-600" }
                        })
                        {
                            <button @onclick="() => SelectedFormat = format.Value"
                                    class="@(SelectedFormat == format.Value ? $"bg-gradient-to-br {format.Color} text-white shadow-lg scale-105" : "bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300") relative p-4 rounded-xl transition-all transform hover:scale-105 hover:shadow-md">
                                <div class="flex flex-col items-center gap-2">
                                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@format.Icon"/>
                                    </svg>
                                    <span class="font-semibold text-sm">@format.Label</span>
                                </div>
                                @if (SelectedFormat == format.Value)
                                {
                                    <div class="absolute -top-2 -right-2 w-6 h-6 bg-white dark:bg-gray-800 rounded-full flex items-center justify-center shadow-lg">
                                        <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                    </div>
                                }
                            </button>
                        }
                    </div>
                </div>

                <!-- Export Options -->
                <div class="space-y-4 mb-6">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Export Options</label>

                    <div class="space-y-3">
                        <label class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                            <div class="flex items-center gap-3">
                                <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                </svg>
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">Include Charts</div>
                                    <p class="text-xs text-gray-600 dark:text-gray-400">Export visualizations and graphs</p>
                                </div>
                            </div>
                            <input type="checkbox" @bind="IncludeCharts"
                                   class="w-5 h-5 text-primary bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600 rounded focus:ring-2 focus:ring-primary" />
                        </label>

                        <label class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                            <div class="flex items-center gap-3">
                                <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">Include Raw Data</div>
                                    <p class="text-xs text-gray-600 dark:text-gray-400">Export detailed data tables</p>
                                </div>
                            </div>
                            <input type="checkbox" @bind="IncludeRawData"
                                   class="w-5 h-5 text-primary bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600 rounded focus:ring-2 focus:ring-primary" />
                        </label>

                        <label class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                            <div class="flex items-center gap-3">
                                <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                                <div>
                                    <div class="font-medium text-gray-900 dark:text-white">Include Summary</div>
                                    <p class="text-xs text-gray-600 dark:text-gray-400">Add executive summary section</p>
                                </div>
                            </div>
                            <input type="checkbox" @bind="IncludeSummary"
                                   class="w-5 h-5 text-primary bg-gray-100 dark:bg-gray-700 border-gray-300 dark:border-gray-600 rounded focus:ring-2 focus:ring-primary" />
                        </label>
                    </div>
                </div>

                <!-- PDF Specific Options -->
                @if (SelectedFormat == "PDF")
                {
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Page Orientation</label>
                        <div class="grid grid-cols-2 gap-3">
                            @foreach (var orientation in new[] { "Portrait", "Landscape" })
                            {
                                <button @onclick="() => Orientation = orientation.ToLower()"
                                        class="@(Orientation == orientation.ToLower() ? "bg-primary text-white border-primary" : "bg-gray-50 dark:bg-gray-700 text-gray-700 dark:text-gray-300 border-gray-300 dark:border-gray-600") border-2 rounded-lg px-4 py-3 hover:border-primary transition-all font-medium">
                                    @orientation
                                </button>
                            }
                        </div>
                    </div>
                }

                <!-- Export Progress -->
                @if (IsExporting)
                {
                    <div class="mb-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-primary"></div>
                            <div class="flex-1">
                                <div class="text-sm font-medium text-gray-900 dark:text-white">Exporting...</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400 mt-0.5">@ExportProgress</div>
                            </div>
                            <div class="text-2xl font-bold text-primary">@ProgressPercentage%</div>
                        </div>
                        <div class="mt-3 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2 overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-primary to-accent rounded-full transition-all duration-300"
                                 style="width: @ProgressPercentage%"></div>
                        </div>
                    </div>
                }

                <!-- Actions -->
                <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <button @onclick="Close"
                            disabled="@IsExporting"
                            class="@(IsExporting ? "opacity-50 cursor-not-allowed" : "") px-6 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors font-medium">
                        Cancel
                    </button>
                    <button @onclick="ExportReport"
                            disabled="@IsExporting"
                            class="@(IsExporting ? "opacity-50 cursor-not-allowed" : "") px-6 py-2 bg-gradient-to-r from-primary to-accent text-white rounded-lg hover:shadow-lg transition-all font-medium flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                        Export @SelectedFormat
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string ReportType { get; set; } = string.Empty;
    [Parameter] public string ContentElementId { get; set; } = "report-content";
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<string> OnExportComplete { get; set; }

    private string SelectedFormat = "PDF";
    private bool IncludeCharts = true;
    private bool IncludeRawData = true;
    private bool IncludeSummary = true;
    private string Orientation = "portrait";
    private bool IsExporting = false;
    private string ExportProgress = "";
    private int ProgressPercentage = 0;

    private async Task Close()
    {
        if (!IsExporting)
        {
            await OnClose.InvokeAsync();
        }
    }

    private async Task ExportReport()
    {
        IsExporting = true;
        ProgressPercentage = 0;

        try
        {
            switch (SelectedFormat)
            {
                case "PDF":
                    await ExportAsPDF();
                    break;
                case "Excel":
                    await ExportAsExcel();
                    break;
                case "CSV":
                    await ExportAsCSV();
                    break;
                case "PNG":
                    await ExportAsPNG();
                    break;
            }

            await OnExportComplete.InvokeAsync(SelectedFormat);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Export error: {ex.Message}");
            ExportProgress = "Export failed. Please try again.";
        }
        finally
        {
            await Task.Delay(1000);
            IsExporting = false;
            ProgressPercentage = 0;
            await Close();
        }
    }

    private async Task ExportAsPDF()
    {
        ExportProgress = "Capturing report content...";
        ProgressPercentage = 25;
        await Task.Delay(500);
        StateHasChanged();

        ExportProgress = "Generating PDF document...";
        ProgressPercentage = 50;
        await Task.Delay(500);
        StateHasChanged();

        var fileName = $"{ReportType}_Report_{DateTime.Now:yyyyMMdd_HHmmss}.pdf";
        await JSRuntime.InvokeVoidAsync("exportReportAsPDF", ContentElementId, fileName, Orientation, IncludeCharts);

        ExportProgress = "Downloading PDF...";
        ProgressPercentage = 100;
        StateHasChanged();
    }

    private async Task ExportAsExcel()
    {
        ExportProgress = "Preparing data...";
        ProgressPercentage = 33;
        await Task.Delay(500);
        StateHasChanged();

        ExportProgress = "Generating Excel workbook...";
        ProgressPercentage = 66;
        await Task.Delay(500);
        StateHasChanged();

        var fileName = $"{ReportType}_Report_{DateTime.Now:yyyyMMdd_HHmmss}.xlsx";
        await JSRuntime.InvokeVoidAsync("exportReportAsExcel", ContentElementId, fileName);

        ExportProgress = "Downloading Excel file...";
        ProgressPercentage = 100;
        StateHasChanged();
    }

    private async Task ExportAsCSV()
    {
        ExportProgress = "Extracting data...";
        ProgressPercentage = 50;
        await Task.Delay(500);
        StateHasChanged();

        var fileName = $"{ReportType}_Report_{DateTime.Now:yyyyMMdd_HHmmss}.csv";
        await JSRuntime.InvokeVoidAsync("exportReportAsCSV", ContentElementId, fileName);

        ExportProgress = "Downloading CSV file...";
        ProgressPercentage = 100;
        StateHasChanged();
    }

    private async Task ExportAsPNG()
    {
        ExportProgress = "Capturing screenshot...";
        ProgressPercentage = 50;
        await Task.Delay(500);
        StateHasChanged();

        var fileName = $"{ReportType}_Report_{DateTime.Now:yyyyMMdd_HHmmss}.png";
        await JSRuntime.InvokeVoidAsync("exportReportAsPNG", ContentElementId, fileName);

        ExportProgress = "Downloading image...";
        ProgressPercentage = 100;
        StateHasChanged();
    }
}
