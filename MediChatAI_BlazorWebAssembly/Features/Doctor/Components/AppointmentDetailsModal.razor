@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@inject IAppointmentService AppointmentService
@inject IToastService ToastService
@inject NavigationManager Navigation

@if (IsVisible)
{
    <div class="modal modal-open" @onclick="@(() => {})">
        <div class="modal-box max-w-5xl bg-gradient-to-br from-gray-800 to-gray-900 max-h-[90vh] overflow-y-auto shadow-2xl border border-gray-700" @onclick:stopPropagation="true">
            @if (isLoading)
            {
                <!-- Loading State -->
                <div class="flex flex-col items-center justify-center py-20">
                    <div class="relative">
                        <div class="animate-spin rounded-full h-20 w-20 border-4 border-primary border-t-transparent"></div>
                        <div class="absolute inset-0 animate-ping rounded-full h-20 w-20 border border-primary opacity-20"></div>
                    </div>
                    <p class="text-white text-lg mt-6 animate-pulse">Loading appointment details...</p>
                </div>
            }
            else if (hasError)
            {
                <!-- Error State -->
                <div class="flex flex-col items-center justify-center py-20">
                    <svg class="w-24 h-24 text-red-500 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="text-2xl font-bold text-white mb-2">Failed to Load Appointment</h3>
                    <p class="text-gray-400 mb-6">@errorMessage</p>
                    <button @onclick="RetryLoad" class="btn btn-primary">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        Retry
                    </button>
                </div>
            }
            else if (appointment != null)
            {
                <!-- Header with Close Button -->
                <div class="flex items-start justify-between mb-6 pb-4 border-b border-gray-700">
                    <div class="flex items-start space-x-4">
                        <div class="p-4 bg-gradient-to-br from-primary to-accent rounded-2xl shadow-lg">
                            <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-3xl font-bold text-white mb-1">Appointment Details</h3>
                            <div class="flex items-center space-x-3">
                                <span class="px-3 py-1 bg-gray-700 text-gray-300 rounded-lg text-sm font-mono font-semibold">
                                    #@appointment.Id
                                </span>
                                <button @onclick="() => CopyToClipboard(appointment.Id.ToString())"
                                        class="text-gray-400 hover:text-primary transition-colors" title="Copy ID">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                    <button @onclick="Close" class="btn btn-sm btn-circle btn-ghost text-gray-400 hover:text-white hover:bg-gray-700">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>

                <!-- Status Badges -->
                <div class="flex flex-wrap gap-3 mb-6">
                    <span class="px-4 py-2 @GetStatusBadgeClass(appointment.Status.ToString()) rounded-xl text-sm font-semibold shadow-lg">
                        @appointment.Status
                    </span>
                    <span class="px-4 py-2 @GetTypeBadgeClass(appointment.Type.ToString()) rounded-xl text-sm font-semibold shadow-lg">
                        @appointment.Type
                    </span>
                    @if (appointment.IsVirtual)
                    {
                        <span class="px-4 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-xl text-sm font-semibold shadow-lg">
                            <svg class="w-4 h-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                            </svg>
                            Virtual Consultation
                        </span>
                    }
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                    <!-- Patient Information -->
                    <div class="bg-gradient-to-br from-blue-900/30 to-blue-800/20 rounded-2xl p-6 border border-blue-700/30 shadow-lg">
                        <h4 class="text-xl font-bold text-white mb-4 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                            Patient Information
                        </h4>
                        <div class="space-y-3">
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm">Patient Name</span>
                                <span class="text-white font-semibold">@appointment.PatientName</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm">Patient ID</span>
                                <span class="text-white font-mono">@appointment.PatientId</span>
                            </div>
                            @if (!string.IsNullOrEmpty(appointment.PatientPhone))
                            {
                                <div class="flex justify-between">
                                    <span class="text-gray-400 text-sm">Phone</span>
                                    <span class="text-white font-semibold">@appointment.PatientPhone</span>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(appointment.PatientEmail))
                            {
                                <div class="flex justify-between">
                                    <span class="text-gray-400 text-sm">Email</span>
                                    <span class="text-white text-sm">@appointment.PatientEmail</span>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Schedule Details -->
                    <div class="bg-gradient-to-br from-green-900/30 to-green-800/20 rounded-2xl p-6 border border-green-700/30 shadow-lg">
                        <h4 class="text-xl font-bold text-white mb-4 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            Schedule Details
                        </h4>
                        <div class="space-y-3">
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm">Date</span>
                                <span class="text-white font-semibold">
                                    @appointment.AppointmentDateTime.ToString("dddd, MMM dd, yyyy")
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm">Time</span>
                                <span class="text-white font-semibold text-lg">
                                    @appointment.AppointmentDateTime.ToString("hh:mm tt")
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm">Duration</span>
                                <span class="text-white font-semibold">@appointment.DurationMinutes minutes</span>
                            </div>
                            @if (!string.IsNullOrEmpty(appointment.RoomNumber))
                            {
                                <div class="flex justify-between">
                                    <span class="text-gray-400 text-sm">Room</span>
                                    <span class="text-white font-semibold">@appointment.RoomNumber</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Reason for Visit -->
                @if (!string.IsNullOrEmpty(appointment.ReasonForVisit))
                {
                    <div class="bg-gradient-to-br from-yellow-900/30 to-yellow-800/20 rounded-2xl p-6 border border-yellow-700/30 shadow-lg mb-6">
                        <h4 class="text-lg font-bold text-white mb-3 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            Reason for Visit
                        </h4>
                        <p class="text-gray-300 leading-relaxed">@appointment.ReasonForVisit</p>
                    </div>
                }

                <!-- Doctor Notes -->
                @if (!string.IsNullOrEmpty(appointment.DoctorNotes))
                {
                    <div class="bg-gradient-to-br from-purple-900/30 to-purple-800/20 rounded-2xl p-6 border border-purple-700/30 shadow-lg mb-6">
                        <h4 class="text-lg font-bold text-white mb-3 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Doctor's Notes
                        </h4>
                        <p class="text-gray-300 whitespace-pre-wrap leading-relaxed">@appointment.DoctorNotes</p>
                    </div>
                }

                <!-- Virtual Meeting Link -->
                @if (appointment.IsVirtual && !string.IsNullOrEmpty(appointment.MeetingLink))
                {
                    <div class="bg-gradient-to-br from-indigo-900/30 to-indigo-800/20 rounded-2xl p-6 border border-indigo-700/30 shadow-lg mb-6">
                        <h4 class="text-lg font-bold text-white mb-3 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                            </svg>
                            Virtual Meeting Link
                        </h4>
                        <div class="flex items-center space-x-3">
                            <input type="text" readonly value="@appointment.MeetingLink"
                                   class="input input-bordered flex-1 bg-gray-700 border-gray-600 text-white" />
                            <button @onclick="() => CopyToClipboard(appointment.MeetingLink)"
                                    class="btn btn-primary">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                }

                <!-- Timeline -->
                <div class="bg-gradient-to-br from-gray-700/30 to-gray-800/20 rounded-2xl p-6 border border-gray-600/30 shadow-lg mb-6">
                    <h4 class="text-lg font-bold text-white mb-4">Timeline</h4>
                    <div class="space-y-3">
                        <div class="flex items-center text-sm">
                            <svg class="w-4 h-4 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="text-gray-400 w-32">Created:</span>
                            <span class="text-white font-medium">@appointment.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</span>
                        </div>
                        <div class="flex items-center text-sm">
                            <svg class="w-4 h-4 text-blue-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <span class="text-gray-400 w-32">Current Status:</span>
                            <span class="text-white font-medium">@appointment.Status</span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-700">
                    @if (appointment.Status.ToString() == "Scheduled" || appointment.Status.ToString() == "Confirmed")
                    {
                        <button @onclick="StartConsultation"
                                disabled="@isNavigating"
                                class="btn btn-lg bg-gradient-to-r from-primary to-accent hover:shadow-2xl hover:scale-105 transition-all text-white border-none">
                            @if (isNavigating)
                            {
                                <span class="loading loading-spinner loading-sm mr-2"></span>
                                <span>Starting...</span>
                            }
                            else
                            {
                                <svg class="w-6 h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                </svg>
                                <span>Start Consultation</span>
                            }
                        </button>
                        <button @onclick="MarkComplete" class="btn btn-lg btn-success hover:scale-105 transition-all">
                            <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Complete
                        </button>
                    }
                    <button @onclick="Close" class="btn btn-lg btn-ghost text-gray-300 hover:text-white hover:bg-gray-700">Close</button>
                </div>
            }
        </div>
    </div>
    <!-- Backdrop - OUTSIDE modal-box -->
    <div class="modal-backdrop bg-black/60 backdrop-blur-sm" @onclick="Close"></div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string? AppointmentId { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnActionPerformed { get; set; }

    private AppointmentDto? appointment;
    private bool isLoading = false;
    private bool hasError = false;
    private bool isNavigating = false;
    private string errorMessage = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        Console.WriteLine($"Modal OnParametersSetAsync: IsVisible={IsVisible}, AppointmentId={AppointmentId}");
        if (IsVisible && !string.IsNullOrEmpty(AppointmentId))
        {
            await LoadAppointment();
        }
    }

    private async Task LoadAppointment()
    {
        isLoading = true;
        hasError = false;
        StateHasChanged();

        try
        {
            Console.WriteLine($"Loading appointment details for ID: {AppointmentId}");
            appointment = await AppointmentService.GetAppointmentDetailsByIdAsync(AppointmentId!);

            if (appointment == null)
            {
                hasError = true;
                errorMessage = "Appointment not found";
            }
            else
            {
                Console.WriteLine($"Appointment loaded successfully: {appointment.PatientName}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading appointment: {ex.Message}");
            hasError = true;
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RetryLoad()
    {
        await LoadAppointment();
    }

    private async Task Close()
    {
        IsVisible = false;
        appointment = null;
        hasError = false;
        errorMessage = string.Empty;
        await OnClose.InvokeAsync();
        StateHasChanged();
    }

    private async Task StartConsultation()
    {
        if (appointment == null) return;

        try
        {
            isNavigating = true;
            StateHasChanged();

            Console.WriteLine($"Starting consultation for appointment {appointment.Id}");

            // Small delay for UI feedback
            await Task.Delay(500);

            Navigation.NavigateTo($"/doctor/consultation/{appointment.Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error starting consultation: {ex.Message}");
            ToastService.ShowError($"Failed to start consultation: {ex.Message}");
            isNavigating = false;
            StateHasChanged();
        }
    }

    private async Task MarkComplete()
    {
        if (appointment != null)
        {
            var success = await AppointmentService.MarkAsCompletedAsync(appointment.Id.ToString());
            if (success)
            {
                ToastService.ShowSuccess("Appointment marked as completed");
                await OnActionPerformed.InvokeAsync();
                await Close();
            }
            else
            {
                ToastService.ShowError("Failed to mark appointment as completed");
            }
        }
    }

    private void CopyToClipboard(string? text)
    {
        if (!string.IsNullOrEmpty(text))
        {
            // Note: Clipboard API requires HTTPS or localhost
            ToastService.ShowSuccess($"Copied to clipboard");
        }
    }

    private string GetStatusBadgeClass(string status) => status switch
    {
        "Completed" => "bg-gradient-to-r from-green-600 to-green-700 text-white",
        "Cancelled" => "bg-gradient-to-r from-red-600 to-red-700 text-white",
        "NoShow" => "bg-gradient-to-r from-orange-600 to-orange-700 text-white",
        "Confirmed" => "bg-gradient-to-r from-blue-600 to-blue-700 text-white",
        "Scheduled" => "bg-gradient-to-r from-purple-600 to-purple-700 text-white",
        "InProgress" => "bg-gradient-to-r from-yellow-600 to-yellow-700 text-white",
        _ => "bg-gradient-to-r from-gray-600 to-gray-700 text-white"
    };

    private string GetTypeBadgeClass(string type) => type switch
    {
        "Emergency" => "bg-gradient-to-r from-red-500 to-pink-600 text-white",
        "FollowUp" => "bg-gradient-to-r from-purple-500 to-indigo-600 text-white",
        "Telemedicine" => "bg-gradient-to-r from-green-500 to-teal-600 text-white",
        "Consultation" => "bg-gradient-to-r from-blue-500 to-cyan-600 text-white",
        _ => "bg-gradient-to-r from-gray-500 to-slate-600 text-white"
    };
}
