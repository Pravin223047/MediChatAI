@code {
    private List<PendingDoctorApprovalModel> pendingApprovals = new();
    private PendingDoctorApprovalModel? selectedDoctor;
    private PendingDoctorApprovalModel? doctorToReject;
    private bool isLoading = true;
    private bool showDetailsModal = false;
    private bool showRejectModal = false;
    private bool processingReject = false;
    private string rejectionReason = string.Empty;

    // Image viewer state
    private bool showImageViewer = false;
    private string? viewerImageUrl = null;
    private string viewerImageTitle = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPendingApprovals();
    }

    private async Task LoadPendingApprovals()
    {
        try
        {
            isLoading = true;
            pendingApprovals = await DoctorOnboardingService.GetPendingApprovalsAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading pending approvals: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ViewDetails(PendingDoctorApprovalModel doctor)
    {
        selectedDoctor = doctor;
        showDetailsModal = true;
    }

    private void CloseDetailsModal()
    {
        selectedDoctor = null;
        showDetailsModal = false;
    }

    private void ShowRejectModal(PendingDoctorApprovalModel doctor)
    {
        doctorToReject = doctor;
        rejectionReason = string.Empty;
        showRejectModal = true;
        CloseDetailsModal(); // Close details modal if open
    }

    private void CloseRejectModal()
    {
        doctorToReject = null;
        rejectionReason = string.Empty;
        showRejectModal = false;
        processingReject = false;
    }

    private async Task ApproveDoctor(string doctorUserId)
    {
        try
        {
            var approvalModel = new AdminApprovalModel
            {
                DoctorUserId = doctorUserId,
                IsApproved = true
            };

            var result = await DoctorOnboardingService.ApproveOrRejectDoctorAsync(approvalModel);

            if (result.Success)
            {
                ToastService.ShowSuccess("Doctor approved successfully!");
                await LoadPendingApprovals(); // Refresh the list
                CloseDetailsModal();
            }
            else
            {
                ToastService.ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error approving doctor: {ex.Message}");
        }
    }

    private async Task ConfirmReject()
    {
        if (doctorToReject == null || string.IsNullOrWhiteSpace(rejectionReason))
            return;

        try
        {
            processingReject = true;

            var approvalModel = new AdminApprovalModel
            {
                DoctorUserId = doctorToReject.UserId,
                IsApproved = false,
                RejectionReason = rejectionReason
            };

            var result = await DoctorOnboardingService.ApproveOrRejectDoctorAsync(approvalModel);

            if (result.Success)
            {
                ToastService.ShowSuccess("Doctor application rejected successfully.");
                await LoadPendingApprovals(); // Refresh the list
                CloseRejectModal();
            }
            else
            {
                ToastService.ShowError(result.Message);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error rejecting doctor: {ex.Message}");
        }
        finally
        {
            processingReject = false;
        }
    }

    private string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName))
            return "??";

        var parts = fullName.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0)
            return "??";

        if (parts.Length == 1)
            return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();

        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }

    private void OpenImageViewer(string imagePath, string title)
    {
        viewerImageUrl = imagePath;
        viewerImageTitle = title;
        showImageViewer = true;
    }

    private void CloseImageViewer()
    {
        viewerImageUrl = null;
        viewerImageTitle = string.Empty;
        showImageViewer = false;
    }

    private string GetImageUrl(string? imagePath)
    {
        if (string.IsNullOrEmpty(imagePath))
            return string.Empty;

        // If the path is already a full URL, return it
        if (imagePath.StartsWith("http://") || imagePath.StartsWith("https://"))
            return imagePath;

        // Extract just the relative path from Uploads onwards
        // Path format: D:/POC Project/MediChatAI/MediChatAI_GraphQl/Uploads/...
        // We need: /Uploads/...
        var uploadsIndex = imagePath.IndexOf("Uploads", StringComparison.OrdinalIgnoreCase);
        if (uploadsIndex >= 0)
        {
            var relativePath = imagePath.Substring(uploadsIndex).Replace("\\", "/");
            return $"http://localhost:5095/{relativePath}";
        }

        // Fallback: if it's already a relative path
        return $"http://localhost:5095/{imagePath.TrimStart('/')}";
    }
}