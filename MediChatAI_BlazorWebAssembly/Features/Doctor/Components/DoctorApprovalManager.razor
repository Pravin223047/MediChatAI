@inject IDoctorOnboardingService DoctorOnboardingService
@inject IToastService ToastService

<!-- Modern Pending Doctor Approvals Section -->
<div class="relative">
    <div class="absolute inset-0 bg-gradient-to-r from-primary to-accent rounded-3xl"></div>
    <div class="relative bg-white/80 backdrop-blur-lg border border-white/20 dark:border-gray-900 rounded-3xl shadow-2xl overflow-hidden">

        <!-- Header Section -->
        <div class="bg-gradient-to-r from-primary to-accent px-8 py-6">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="p-3 bg-white/20 rounded-2xl backdrop-blur-sm">
                        <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-2xl font-bold text-white">Doctor Approval Management</h3>
                        <p class="text-blue-100 text-sm mt-1">Review and approve doctor applications</p>
                    </div>
                </div>
                @if (pendingApprovals.Count > 0)
                {
                    <div class="flex items-center space-x-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-xl border border-white/30">
                        <span class="text-white text-sm font-medium">Pending:</span>
                        <span class="px-3 py-1 bg-yellow-400 text-yellow-900 text-lg font-bold rounded-lg shadow-lg">
                            @pendingApprovals.Count
                        </span>
                    </div>
                }
            </div>
        </div>

        <!-- Content Area -->
        <div class="p-8 bg-white dark:bg-gray-900">
            @if (isLoading)
            {
                <div class="flex flex-col justify-center items-center py-20">
                    <div class="relative mb-6">
                        <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-200 border-t-blue-600"></div>
                        <div class="absolute inset-0 animate-ping rounded-full h-16 w-16 border border-blue-400 opacity-20"></div>
                    </div>
                    <p class="text-gray-600 dark:text-gray-200 font-medium text-lg">Loading pending approvals...</p>
                    <p class="text-gray-500 dark:text-gray-100 text-sm mt-2">Please wait while we fetch the data</p>
                </div>
            }
            else if (pendingApprovals.Count == 0)
            {
                <div class="text-center py-16">
                    <div class="mx-auto w-28 h-28 bg-gradient-to-r from-green-100 to-emerald-100 rounded-3xl flex items-center justify-center mb-6 shadow-lg">
                        <svg class="w-16 h-16 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-300 mb-3">All Caught Up!</h3>
                    <p class="text-gray-600 dark:text-gray-200 text-lg mb-2">No pending doctor approvals at this time.</p>
                    <p class="text-gray-500 dark:text-gray-100 text-sm">New applications will appear here automatically</p>
                </div>
            }
            else
            {
                <!-- Doctor Cards Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    @foreach (var doctor in pendingApprovals)
                    {
                        <div class="group relative overflow-hidden bg-gradient-to-br from-white to-gray-50 border-2 border-gray-200 rounded-2xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02]">
                            <!-- Card Header with Doctor Info -->
                            <div class="bg-gradient-to-r from-primary to-accent px-6 py-4 border-b-2 border-gray-200">
                                <div class="flex items-start justify-between">
                                    <div class="flex items-center space-x-4">
                                        <div class="w-14 h-14 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                                            <span class="text-white font-bold text-xl">@GetInitials(doctor.FullName)</span>
                                        </div>
                                        <div>
                                            <h4 class="text-xl font-bold text-gray-900">@doctor.FullName</h4>
                                            <p class="text-sm text-gray-600 flex items-center mt-1">
                                                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                                </svg>
                                                @doctor.Specialization
                                            </p>
                                        </div>
                                    </div>
                                    <div class="flex flex-col items-end">
                                        <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full border border-yellow-200">
                                            Pending Review
                                        </span>
                                        <span class="text-xs text-gray-500 mt-2">@doctor.ProfileSubmissionDate?.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Card Body with Details -->
                            <div class="px-6 py-5">
                                <!-- Contact & Professional Info -->
                                <div class="grid grid-cols-2 gap-4 mb-5">
                                    <div class="space-y-3">
                                        <div class="flex items-start space-x-2">
                                            <svg class="w-5 h-5 text-primary dark:text-primary mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                            </svg>
                                            <div class="flex-1">
                                                <p class="text-xs text-gray-500 font-medium">Email</p>
                                                <p class="text-sm text-gray-900 break-all">@doctor.Email</p>
                                            </div>
                                        </div>
                                        <div class="flex items-start space-x-2">
                                            <svg class="w-5 h-5 text-primary dark:text-primary mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                            </svg>
                                            <div class="flex-1">
                                                <p class="text-xs text-gray-500 font-medium">Registration Number</p>
                                                <p class="text-sm font-mono bg-gray-100 px-2 py-1 rounded">@doctor.MedicalRegistrationNumber</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="space-y-3">
                                        <div class="flex items-start space-x-2">
                                            <svg class="w-5 h-5 text-primary dark:text-primary mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                            </svg>
                                            <div class="flex-1">
                                                <p class="text-xs text-gray-500 font-medium">Experience</p>
                                                <p class="text-sm text-gray-900 font-semibold">@doctor.YearsOfExperience Years</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- AI Verification Status -->
                                <div class="mb-5">
                                    <p class="text-xs text-gray-500 font-medium mb-3 flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                        </svg>
                                        AI Verification Status
                                    </p>
                                    <div class="grid grid-cols-2 gap-3">
                                        <div class="flex items-center space-x-2 px-3 py-2 rounded-lg @(doctor.IsAadhaarVerified ? "bg-green-50 border border-green-200" : "bg-red-50 border border-red-200")">
                                            @if (doctor.IsAadhaarVerified)
                                            {
                                                <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                <span class="text-sm font-semibold text-green-700">Aadhaar Verified</span>
                                            }
                                            else
                                            {
                                                <svg class="w-5 h-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                <span class="text-sm font-semibold text-red-700">Aadhaar Failed</span>
                                            }
                                        </div>
                                        <div class="flex items-center space-x-2 px-3 py-2 rounded-lg @(doctor.IsMedicalCertificateVerified ? "bg-green-50 border border-green-200" : "bg-red-50 border border-red-200")">
                                            @if (doctor.IsMedicalCertificateVerified)
                                            {
                                                <svg class="w-5 h-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                <span class="text-sm font-semibold text-green-700">Certificate OK</span>
                                            }
                                            else
                                            {
                                                <svg class="w-5 h-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                <span class="text-sm font-semibold text-red-700">Certificate Failed</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex items-center space-x-3">
                                    <button @onclick="() => ViewDetails(doctor)"
                                            class="flex-1 flex items-center justify-center space-x-2 px-4 py-3 bg-gradient-to-r from-primary to-accent text-white rounded-xl hover:from-blue-600 hover:to-indigo-700 transition-all duration-300 shadow-md hover:shadow-xl font-medium">
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                        <span>View Details</span>
                                    </button>
                                    <button @onclick="() => ApproveDoctor(doctor.UserId)"
                                            class="px-5 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl hover:from-green-600 hover:to-emerald-700 transition-all duration-300 shadow-md hover:shadow-xl font-medium">
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </button>
                                    <button @onclick="() => ShowRejectModal(doctor)"
                                            class="px-5 py-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:from-red-600 hover:to-red-700 transition-all duration-300 shadow-md hover:shadow-xl font-medium">
                                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

        </div>
    </div>
</div>

@* Modern Details Modal *@
@if (selectedDoctor != null && showDetailsModal)
{
    <div class="fixed inset-0 z-50 overflow-y-auto" style="background-color: rgba(0, 0, 0, 0.75);">
        <div class="flex items-center justify-center min-h-screen px-4 py-6">
            <div class="relative bg-white rounded-3xl shadow-2xl max-w-4xl w-full overflow-hidden transform transition-all">

                <!-- Modal Header -->
                <div class="bg-gradient-to-r from-primary to-accent px-8 py-6">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-4">
                            <div class="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center">
                                <span class="text-white font-bold text-2xl">@GetInitials(selectedDoctor.FullName)</span>
                            </div>
                            <div>
                                <h3 class="text-2xl font-bold text-white">@selectedDoctor.FullName</h3>
                                <p class="text-indigo-100 text-sm mt-1">Doctor Application Details</p>
                            </div>
                        </div>
                        <button @onclick="CloseDetailsModal"
                                class="p-2 hover:bg-white/20 rounded-xl transition-colors">
                            <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Modal Body -->
                <div class="p-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                        <!-- Left Column: Personal Information -->
                        <div class="space-y-6">
                            <div>
                                <h4 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-primary dark:text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    Personal Information
                                </h4>
                                <div class="space-y-4">
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <p class="text-xs text-gray-500 font-medium mb-1">Full Name</p>
                                        <p class="text-sm text-gray-900 font-semibold">@selectedDoctor.FullName</p>
                                    </div>
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <p class="text-xs text-gray-500 font-medium mb-1">Email Address</p>
                                        <p class="text-sm text-gray-900 break-all">@selectedDoctor.Email</p>
                                    </div>
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <p class="text-xs text-gray-500 font-medium mb-1">Specialization</p>
                                        <p class="text-sm text-gray-900 font-semibold">@selectedDoctor.Specialization</p>
                                    </div>
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <p class="text-xs text-gray-500 font-medium mb-1">Years of Experience</p>
                                        <p class="text-sm text-gray-900 font-semibold">@selectedDoctor.YearsOfExperience Years</p>
                                    </div>
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <p class="text-xs text-gray-500 font-medium mb-1">Medical Registration Number</p>
                                        <p class="text-sm font-mono bg-white px-3 py-2 rounded-lg border border-gray-200">@selectedDoctor.MedicalRegistrationNumber</p>
                                    </div>
                                    <div class="bg-gray-50 rounded-xl p-4">
                                        <p class="text-xs text-gray-500 font-medium mb-1">Submission Date</p>
                                        <p class="text-sm text-gray-900">@selectedDoctor.ProfileSubmissionDate?.ToString("MMMM dd, yyyy HH:mm")</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column: AI Verification -->
                        <div class="space-y-6">
                            <div>
                                <h4 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                                    <svg class="w-5 h-5 mr-2 text-primary dark:text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                    </svg>
                                    AI Verification Results
                                </h4>
                                <div class="space-y-4">
                                    <!-- Aadhaar Verification -->
                                    <div class="p-6 rounded-2xl @(selectedDoctor.IsAadhaarVerified ? "bg-green-50 border-2 border-green-200" : "bg-red-50 border-2 border-red-200")">
                                        <div class="flex items-center space-x-3">
                                            @if (selectedDoctor.IsAadhaarVerified)
                                            {
                                                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-green-600">Aadhaar Verification</p>
                                                    <p class="text-lg font-bold text-green-800">PASSED ✓</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-red-600">Aadhaar Verification</p>
                                                    <p class="text-lg font-bold text-red-800">FAILED ✗</p>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <!-- Certificate Verification -->
                                    <div class="p-6 rounded-2xl @(selectedDoctor.IsMedicalCertificateVerified ? "bg-green-50 border-2 border-green-200" : "bg-red-50 border-2 border-red-200")">
                                        <div class="flex items-center space-x-3">
                                            @if (selectedDoctor.IsMedicalCertificateVerified)
                                            {
                                                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-green-600">Medical Certificate</p>
                                                    <p class="text-lg font-bold text-green-800">PASSED ✓</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center">
                                                    <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                                    </svg>
                                                </div>
                                                <div>
                                                    <p class="text-sm font-medium text-red-600">Medical Certificate</p>
                                                    <p class="text-lg font-bold text-red-800">FAILED ✗</p>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <!-- AI Verification Notes -->
                                    @if (!string.IsNullOrEmpty(selectedDoctor.AiVerificationNotes))
                                    {
                                        <div class="bg-blue-50 border-2 border-blue-200 rounded-2xl p-4">
                                            <p class="text-xs text-primary dark:text-primary font-semibold mb-2 uppercase flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                AI Verification Notes
                                            </p>
                                            <p class="text-sm text-blue-900 leading-relaxed">@selectedDoctor.AiVerificationNotes</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Document Images Section -->
                    <div class="mt-6 pt-6 border-t-2 border-gray-200">
                        <h4 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-primary dark:text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            Uploaded Documents
                        </h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Aadhaar Card Image -->
                            <div class="bg-gray-50 rounded-2xl p-4 border-2 border-gray-200">
                                <div class="flex items-center justify-between mb-3">
                                    <p class="text-sm font-semibold text-gray-900 flex items-center">
                                        <svg class="w-4 h-4 mr-2 text-primary dark:text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
                                        </svg>
                                        Aadhaar Card
                                    </p>
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full @(selectedDoctor.IsAadhaarVerified ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                        @(selectedDoctor.IsAadhaarVerified ? "Verified" : "Failed")
                                    </span>
                                </div>
                                @if (!string.IsNullOrEmpty(selectedDoctor.AadhaarCardImagePath))
