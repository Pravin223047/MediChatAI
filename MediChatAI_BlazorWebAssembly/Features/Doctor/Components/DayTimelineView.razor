@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transition-colors">
    @if (DaySchedule != null)
    {
        <!-- Day Header -->
        <div class="bg-gradient-to-r from-primary to-accent dark:from-primary-dark dark:to-accent-dark p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold">@DaySchedule.Date.ToString("dddd, MMMM dd, yyyy")</h2>
                    <p class="text-sm opacity-90 mt-1">
                        @DaySchedule.TotalAppointments appointment@(DaySchedule.TotalAppointments != 1 ? "s" : "") scheduled
                    </p>
                </div>
                <div class="text-right">
                    <div class="text-3xl font-bold">@DaySchedule.Date.Day</div>
                    <div class="text-sm opacity-90">@DaySchedule.Date.ToString("MMM yyyy")</div>
                </div>
            </div>
        </div>

        <!-- Timeline -->
        <div class="max-h-[600px] overflow-y-auto">
            @for (int hour = 7; hour <= 21; hour++)
            {
                <div class="border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                    <div class="grid grid-cols-12">
                        <!-- Time Label -->
                        <div class="col-span-2 p-4 bg-gray-50 dark:bg-gray-900/30 border-r border-gray-200 dark:border-gray-700">
                            <div class="text-sm font-semibold text-gray-700 dark:text-gray-300">
                                @FormatHour(hour)
                            </div>
                        </div>

                        <!-- Content Area -->
                        <div class="col-span-10 p-4 min-h-[100px] relative @GetTimeSlotClass(hour)"
                             @onclick="() => OnTimeSlotClick.InvokeAsync(new TimeSpan(hour, 0, 0))">

                            @{
                                var slotStart = new TimeSpan(hour, 0, 0);
                                var slotEnd = new TimeSpan(hour + 1, 0, 0);

                                // Get appointments in this time slot
                                var appointments = DaySchedule.Appointments.Where(a =>
                                    (a.StartTime >= slotStart && a.StartTime < slotEnd) ||
                                    (a.EndTime > slotStart && a.EndTime <= slotEnd) ||
                                    (a.StartTime <= slotStart && a.EndTime >= slotEnd)
                                ).ToList();

                                // Get time blocks in this time slot
                                var timeBlocks = DaySchedule.TimeBlocks.Where(tb =>
                                    (tb.StartTime >= slotStart && tb.StartTime < slotEnd) ||
                                    (tb.EndTime > slotStart && tb.EndTime <= slotEnd) ||
                                    (tb.StartTime <= slotStart && tb.EndTime >= slotEnd)
                                ).ToList();
                            }

                            <!-- Appointments -->
                            @foreach (var appointment in appointments)
                            {
                                <div class="mb-2 p-3 rounded-lg @GetAppointmentClass(appointment.Status) border-l-4 @GetAppointmentBorderClass(appointment.Status) shadow-sm cursor-pointer hover:shadow-md transition-all"
                                     @onclick:stopPropagation="true"
                                     @onclick="() => OnAppointmentClick.InvokeAsync(appointment.AppointmentId)">
                                    <div class="flex items-start justify-between">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-2 mb-1">
                                                <svg class="w-4 h-4 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                </svg>
                                                <span class="font-semibold text-sm text-gray-900 dark:text-gray-100">
                                                    @FormatTime(appointment.StartTime) - @FormatTime(appointment.EndTime)
                                                </span>
                                            </div>
                                            <div class="flex items-center space-x-2 mb-1">
                                                <svg class="w-4 h-4 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                                </svg>
                                                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">@appointment.PatientName</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(appointment.Reason))
                                            {
                                                <p class="text-xs text-gray-600 dark:text-gray-400 truncate">@appointment.Reason</p>
                                            }
                                        </div>
                                        <div class="ml-3">
                                            <span class="@GetStatusBadgeClass(appointment.Status) px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap">
                                                @appointment.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Time Blocks -->
                            @foreach (var timeBlock in timeBlocks)
                            {
                                <div class="mb-2 p-3 rounded-lg @GetTimeBlockClass(timeBlock.BlockType) border-l-4 @GetTimeBlockBorderClass(timeBlock.BlockType) shadow-sm">
                                    <div class="flex items-center space-x-2">
                                        <svg class="w-4 h-4 @GetTimeBlockIconClass(timeBlock.BlockType)" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                        </svg>
                                        <div class="flex-1">
                                            <div class="font-semibold text-sm text-gray-900 dark:text-gray-100">
                                                @timeBlock.BlockType - @FormatTime(timeBlock.StartTime) to @FormatTime(timeBlock.EndTime)
                                            </div>
                                            @if (!string.IsNullOrEmpty(timeBlock.Notes))
                                            {
                                                <p class="text-xs text-gray-600 dark:text-gray-400 mt-1">@timeBlock.Notes</p>
                                            }
                                        </div>
                                        @if (timeBlock.IsRecurring)
                                        {
                                            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                            </svg>
                                        }
                                    </div>
                                </div>
                            }

                            <!-- Empty slot indicator -->
                            @if (!appointments.Any() && !timeBlocks.Any() && !IsPastSlot(hour))
                            {
                                <div class="text-center text-gray-400 dark:text-gray-600 text-sm italic py-4">
                                    Available
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600 mb-4 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <p class="text-gray-500 dark:text-gray-400">Loading schedule...</p>
        </div>
    }
</div>

@code {
    [Parameter] public DayScheduleModel? DaySchedule { get; set; }
    [Parameter] public EventCallback<string> OnAppointmentClick { get; set; }
    [Parameter] public EventCallback<TimeSpan> OnTimeSlotClick { get; set; }

    private string FormatHour(int hour)
    {
        var time = new TimeSpan(hour, 0, 0);
        var dateTime = DateTime.Today.Add(time);
        return dateTime.ToString("h:mm tt");
    }

    private string FormatTime(TimeSpan time)
    {
        var dateTime = DateTime.Today.Add(time);
        return dateTime.ToString("h:mm tt");
    }

    private bool IsPastSlot(int hour)
    {
        if (DaySchedule == null) return false;
        var slotDateTime = DaySchedule.Date.Date.AddHours(hour);
        return slotDateTime < DateTime.Now;
    }

    private string GetTimeSlotClass(int hour)
    {
        if (IsPastSlot(hour))
        {
            return "cursor-not-allowed opacity-60";
        }
        return "cursor-pointer hover:bg-primary/5 dark:hover:bg-accent/5";
    }

    private string GetAppointmentClass(string status)
    {
        return status switch
        {
            "Confirmed" => "bg-green-50 dark:bg-green-900/20",
            "Scheduled" => "bg-blue-50 dark:bg-blue-900/20",
            "Completed" => "bg-gray-100 dark:bg-gray-800",
            "Cancelled" => "bg-red-50 dark:bg-red-900/20",
            "In-Progress" => "bg-yellow-50 dark:bg-yellow-900/20",
            _ => "bg-gray-50 dark:bg-gray-800"
        };
    }

    private string GetAppointmentBorderClass(string status)
    {
        return status switch
        {
            "Confirmed" => "border-green-500 dark:border-green-400",
            "Scheduled" => "border-blue-500 dark:border-blue-400",
            "Completed" => "border-gray-400 dark:border-gray-600",
            "Cancelled" => "border-red-500 dark:border-red-400",
            "In-Progress" => "border-yellow-500 dark:border-yellow-400",
            _ => "border-gray-300 dark:border-gray-600"
        };
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Confirmed" => "bg-green-100 dark:bg-green-900/40 text-green-700 dark:text-green-300",
            "Scheduled" => "bg-blue-100 dark:bg-blue-900/40 text-blue-700 dark:text-blue-300",
            "Completed" => "bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300",
            "Cancelled" => "bg-red-100 dark:bg-red-900/40 text-red-700 dark:text-red-300",
            "In-Progress" => "bg-yellow-100 dark:bg-yellow-900/40 text-yellow-700 dark:text-yellow-300",
            _ => "bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400"
        };
    }

    private string GetTimeBlockClass(string blockType)
    {
        return blockType switch
        {
            "Lunch" => "bg-orange-50 dark:bg-orange-900/20",
            "Break" => "bg-purple-50 dark:bg-purple-900/20",
            "Meeting" => "bg-blue-50 dark:bg-blue-900/20",
            "Personal" => "bg-pink-50 dark:bg-pink-900/20",
            _ => "bg-gray-50 dark:bg-gray-900/20"
        };
    }

    private string GetTimeBlockBorderClass(string blockType)
    {
        return blockType switch
        {
            "Lunch" => "border-orange-400 dark:border-orange-600",
            "Break" => "border-purple-400 dark:border-purple-600",
            "Meeting" => "border-blue-400 dark:border-blue-600",
            "Personal" => "border-pink-400 dark:border-pink-600",
            _ => "border-gray-300 dark:border-gray-600"
        };
    }

    private string GetTimeBlockIconClass(string blockType)
    {
        return blockType switch
        {
            "Lunch" => "text-orange-600 dark:text-orange-400",
            "Break" => "text-purple-600 dark:text-purple-400",
            "Meeting" => "text-blue-600 dark:text-blue-400",
            "Personal" => "text-pink-600 dark:text-pink-400",
            _ => "text-gray-600 dark:text-gray-400"
        };
    }
}
