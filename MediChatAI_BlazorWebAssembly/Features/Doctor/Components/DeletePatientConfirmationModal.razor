@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@using MediChatAI_BlazorWebAssembly.Features.Admin.Components
@inject IPatientManagementService PatientService
@inject IToastService ToastService

<ModalBase IsOpen="@IsOpen"
           Title="Delete Patient"
           Subtitle="This action cannot be undone"
           Size="md"
           OnClose="@Close">
    <ChildContent>
        @if (isLoading)
        {
            <div class="flex justify-center items-center py-12">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-red-500"></div>
                <span class="ml-3 text-gray-600 dark:text-gray-400">Loading patient data...</span>
            </div>
        }
        else if (patient != null)
        {
            <div class="space-y-6">
                <!-- Warning Icon -->
                <div class="flex justify-center">
                    <div class="rounded-full bg-red-100 dark:bg-red-900/30 p-6">
                        <svg class="w-16 h-16 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                </div>

                <!-- Warning Message -->
                <div class="text-center">
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                        Are you sure you want to delete this patient?
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">
                        You are about to permanently delete:
                    </p>
                    <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg border border-red-200 dark:border-red-800">
                        <p class="text-lg font-bold text-red-900 dark:text-red-200">
                            @patient.FullName
                        </p>
                        <p class="text-sm text-red-700 dark:text-red-300 mt-1">
                            @patient.Email
                        </p>
                    </div>
                </div>

                <!-- Consequences Warning -->
                <div class="bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-400 dark:border-yellow-600 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-yellow-400 dark:text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h4 class="text-sm font-semibold text-yellow-800 dark:text-yellow-200">
                                This will permanently delete:
                            </h4>
                            <ul class="mt-2 text-sm text-yellow-700 dark:text-yellow-300 list-disc list-inside space-y-1">
                                <li>All patient records and information</li>
                                <li>Medical history and vital signs</li>
                                <li>Appointments and prescriptions</li>
                                <li>All associated documents</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Confirmation Input -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Type <span class="font-bold text-red-600 dark:text-red-400">DELETE</span> to confirm:
                    </label>
                    <input type="text" @bind="confirmationText" @bind:event="oninput" placeholder="Type DELETE"
                           class="w-full px-4 py-2 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 dark:bg-gray-700 dark:text-white"
                           @onkeydown="HandleKeyDown" />
                </div>
            </div>
        }
    </ChildContent>
    <FooterContent>
        <button type="button" @onclick="DeletePatient" disabled="@(!IsDeleteConfirmed || isDeleting)"
                class="inline-flex justify-center items-center px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg hover:shadow-lg transition-all font-semibold disabled:opacity-50 disabled:cursor-not-allowed">
            @if (isDeleting)
            {
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Deleting...</span>
            }
            else
            {
                <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                <span>Delete Patient</span>
            }
        </button>
        <button type="button" @onclick="Close" disabled="@isDeleting"
                class="inline-flex justify-center px-6 py-2 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-500 transition-all font-semibold disabled:opacity-50">
            Cancel
        </button>
    </FooterContent>
</ModalBase>

@code {
    [Parameter] public string PatientId { get; set; } = string.Empty;
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private PatientDetailModel? patient;
    private string confirmationText = "";
    private bool isLoading = false;
    private bool isDeleting = false;

    private bool IsDeleteConfirmed => confirmationText == "DELETE";

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && !string.IsNullOrEmpty(PatientId))
        {
            confirmationText = "";
            await LoadPatient();
        }
    }

    private async Task LoadPatient()
    {
        isLoading = true;
        try
        {
            patient = await PatientService.GetPatientByIdAsync(PatientId);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading patient: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeletePatient()
    {
        if (!IsDeleteConfirmed || patient == null) return;

        isDeleting = true;
        try
        {
            await PatientService.DeletePatientAsync(PatientId);
            ToastService.ShowSuccess($"Patient {patient.FullName} has been deleted successfully!");
            await OnClose.InvokeAsync(true);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error deleting patient: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
        }
    }

    private async Task Close()
    {
        confirmationText = "";
        await OnClose.InvokeAsync(false);
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && IsDeleteConfirmed)
        {
            await DeletePatient();
        }
    }
}
