@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@using MediChatAI_BlazorWebAssembly.Features.Admin.Components
@inject IPatientManagementService PatientService
@inject IToastService ToastService

<ModalBase IsOpen="@IsOpen"
           Title="Record Vital Signs"
           Subtitle="@patientName"
           Size="lg"
           OnClose="@Close">
    <ChildContent>
        @if (isLoading)
        {
            <div class="flex justify-center items-center py-12">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
                <span class="ml-3 text-gray-600 dark:text-gray-400">Loading patient data...</span>
            </div>
        }
        else
        {
            <div class="space-y-6">
                <!-- Date and Time -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        Recording Date & Time
                    </label>
                    <input type="datetime-local" @bind="vitalSigns.RecordedDate"
                           class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white" />
                </div>

                <!-- Vital Signs Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Blood Pressure -->
                    <div class="p-4 bg-gradient-to-br from-red-50 to-red-100 dark:from-red-900/20 dark:to-red-800/10 rounded-xl border border-red-200 dark:border-red-800">
                        <label class="block text-sm font-semibold text-red-900 dark:text-red-200 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                            </svg>
                            Blood Pressure (mmHg)
                        </label>
                        <div class="flex items-center space-x-2">
                            <input type="number" @bind="vitalSigns.BloodPressureSystolic" placeholder="Systolic"
                                   class="flex-1 px-4 py-2 border border-red-300 dark:border-red-700 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-800 dark:text-white" />
                            <span class="text-red-900 dark:text-red-200 font-bold">/</span>
                            <input type="number" @bind="vitalSigns.BloodPressureDiastolic" placeholder="Diastolic"
                                   class="flex-1 px-4 py-2 border border-red-300 dark:border-red-700 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-800 dark:text-white" />
                        </div>
                    </div>

                    <!-- Heart Rate -->
                    <div class="p-4 bg-gradient-to-br from-pink-50 to-pink-100 dark:from-pink-900/20 dark:to-pink-800/10 rounded-xl border border-pink-200 dark:border-pink-800">
                        <label class="block text-sm font-semibold text-pink-900 dark:text-pink-200 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                            Heart Rate (bpm)
                        </label>
                        <input type="number" @bind="vitalSigns.HeartRate" placeholder="e.g., 72"
                               class="w-full px-4 py-2 border border-pink-300 dark:border-pink-700 rounded-lg focus:ring-2 focus:ring-pink-500 dark:bg-gray-800 dark:text-white" />
                    </div>

                    <!-- Temperature -->
                    <div class="p-4 bg-gradient-to-br from-orange-50 to-orange-100 dark:from-orange-900/20 dark:to-orange-800/10 rounded-xl border border-orange-200 dark:border-orange-800">
                        <label class="block text-sm font-semibold text-orange-900 dark:text-orange-200 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                            Temperature (°F)
                        </label>
                        <input type="number" step="0.1" @bind="vitalSigns.Temperature" placeholder="e.g., 98.6"
                               class="w-full px-4 py-2 border border-orange-300 dark:border-orange-700 rounded-lg focus:ring-2 focus:ring-orange-500 dark:bg-gray-800 dark:text-white" />
                    </div>

                    <!-- Oxygen Saturation -->
                    <div class="p-4 bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/10 rounded-xl border border-blue-200 dark:border-blue-800">
                        <label class="block text-sm font-semibold text-blue-900 dark:text-blue-200 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                            </svg>
                            O₂ Saturation (%)
                        </label>
                        <input type="number" @bind="vitalSigns.OxygenSaturation" placeholder="e.g., 98"
                               class="w-full px-4 py-2 border border-blue-300 dark:border-blue-700 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:text-white" />
                    </div>

                    <!-- Respiratory Rate -->
                    <div class="p-4 bg-gradient-to-br from-teal-50 to-teal-100 dark:from-teal-900/20 dark:to-teal-800/10 rounded-xl border border-teal-200 dark:border-teal-800">
                        <label class="block text-sm font-semibold text-teal-900 dark:text-teal-200 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Respiratory Rate (breaths/min)
                        </label>
                        <input type="number" @bind="vitalSigns.RespiratoryRate" placeholder="e.g., 16"
                               class="w-full px-4 py-2 border border-teal-300 dark:border-teal-700 rounded-lg focus:ring-2 focus:ring-teal-500 dark:bg-gray-800 dark:text-white" />
                    </div>

                    <!-- Blood Sugar -->
                    <div class="p-4 bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/10 rounded-xl border border-purple-200 dark:border-purple-800">
                        <label class="block text-sm font-semibold text-purple-900 dark:text-purple-200 mb-3">
                            <svg class="w-5 h-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                            </svg>
                            Blood Glucose (mg/dL)
                        </label>
                        <input type="number" @bind="vitalSigns.BloodSugar" placeholder="e.g., 100"
                               class="w-full px-4 py-2 border border-purple-300 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 dark:bg-gray-800 dark:text-white" />
                    </div>
                </div>

                <!-- Notes -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        <svg class="w-4 h-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Additional Notes
                    </label>
                    <textarea @bind="vitalSigns.Notes" rows="3" placeholder="Any observations or concerns..."
                              class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white"></textarea>
                </div>
            </div>
        }
    </ChildContent>
    <FooterContent>
        <button type="button" @onclick="SaveVitals" disabled="@isSaving"
                class="inline-flex justify-center items-center px-6 py-2 bg-gradient-to-r from-primary to-accent text-white rounded-lg hover:shadow-lg transition-all font-semibold disabled:opacity-50">
            @if (isSaving)
            {
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <span>Recording...</span>
            }
            else
            {
                <span>Record Vitals</span>
            }
        </button>
        <button type="button" @onclick="Close"
                class="inline-flex justify-center px-6 py-2 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-500 transition-all font-semibold">
            Cancel
        </button>
    </FooterContent>
</ModalBase>

@code {
    [Parameter] public string PatientId { get; set; } = string.Empty;
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private VitalSignsModel vitalSigns = new VitalSignsModel { RecordedDate = DateTime.Now };
    private string patientName = "";
    private bool isLoading = false;
    private bool isSaving = false;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && !string.IsNullOrEmpty(PatientId))
        {
            await LoadPatientName();
        }
    }

    private async Task LoadPatientName()
    {
        isLoading = true;
        try
        {
            var patient = await PatientService.GetPatientByIdAsync(PatientId);
            if (patient != null)
            {
                patientName = $"{patient.FirstName} {patient.LastName}";
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading patient: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveVitals()
    {
        isSaving = true;
        try
        {
            await PatientService.AddVitalSignsAsync(PatientId, vitalSigns);
            ToastService.ShowSuccess("Vital signs recorded successfully!");
            vitalSigns = new VitalSignsModel { RecordedDate = DateTime.Now };
            await OnClose.InvokeAsync(true);
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error recording vitals: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task Close()
    {
        vitalSigns = new VitalSignsModel { RecordedDate = DateTime.Now };
        await OnClose.InvokeAsync(false);
    }
}
