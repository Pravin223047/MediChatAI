@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@inject IDoctorOnboardingService DoctorOnboardingService
@inject IJSRuntime JSRuntime
@inject IToastService ToastService

<!-- Modern TailwindCSS Modal -->
<div class="fixed inset-0 z-50 overflow-y-auto bg-black bg-opacity-75 backdrop-blur-sm flex items-center justify-center p-4" @onclick="HandleBackdropClick">
    <div class="relative bg-white dark:bg-gray-800 rounded-3xl shadow-2xl w-full max-w-5xl max-h-[95vh] overflow-hidden transform transition-all" @onclick:stopPropagation="true">

        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-primary to-accent px-8 py-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="p-3 bg-white bg-opacity-20 rounded-xl backdrop-blur-sm">
                        <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-white">Complete Your Doctor Profile</h2>
                        <p class="text-blue-100 text-sm mt-1">Step @currentStep of @totalSteps - @GetStepTitle()</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <span class="px-4 py-2 bg-white bg-opacity-20 backdrop-blur-sm rounded-xl text-white font-semibold text-sm">
                        Step @currentStep/@totalSteps
                    </span>
                    <button type="button"
                            class="p-2 hover:bg-white hover:bg-opacity-20 rounded-xl transition-all duration-200"
                            @onclick="CloseModal"
                            aria-label="Close">
                        <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Progress Bar -->
        <div class="bg-gray-100 dark:bg-gray-700 h-2">
            <div class="bg-gradient-to-r from-primary to-accent h-full transition-all duration-500 ease-out"
                 style="width: @((currentStep * 100.0 / totalSteps))%"></div>
        </div>

        <!-- Modal Body -->
        <div class="overflow-y-auto max-h-[calc(95vh-220px)] bg-white dark:bg-gray-800">
            @if (isLoading)
            {
                <div class="flex flex-col items-center justify-center py-20">
                    <div class="relative mb-6">
                        <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-200 border-t-blue-600"></div>
                        <div class="absolute inset-0 animate-ping rounded-full h-16 w-16 border border-blue-400 opacity-20"></div>
                    </div>
                    <p class="text-gray-700 dark:text-gray-300 font-medium text-lg">@loadingMessage</p>
                    <p class="text-gray-500 dark:text-gray-400 text-sm mt-2">Please wait...</p>
                </div>
            }
            else if (!showSuccessMessage)
            {
                <EditForm Model="profileModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <div class="p-8">
                        @* Step 1: Personal Information *@
                        @if (currentStep == 1)
                        {
                            <div class="space-y-6">
                                <div class="mb-6">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 flex items-center">
                                        <svg class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                        </svg>
                                        Personal Information
                                    </h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">Please provide your basic personal details</p>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label for="firstName" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            First Name <span class="text-red-500">*</span>
                                        </label>
                                        <InputText id="firstName"
                                                   class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                   placeholder="Enter your first name"
                                                   @bind-Value="profileModel.FirstName" />
                                        <ValidationMessage For="@(() => profileModel.FirstName)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="lastName" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Last Name <span class="text-red-500">*</span>
                                        </label>
                                        <InputText id="lastName"
                                                   class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                   placeholder="Enter your last name"
                                                   @bind-Value="profileModel.LastName" />
                                        <ValidationMessage For="@(() => profileModel.LastName)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="gender" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Gender <span class="text-red-500">*</span>
                                        </label>
                                        <InputSelect id="gender"
                                                     class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                     @bind-Value="profileModel.Gender">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => profileModel.Gender)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="dateOfBirth" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Date of Birth <span class="text-red-500">*</span>
                                        </label>
                                        <InputDate id="dateOfBirth"
                                                   class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                   @bind-Value="profileModel.DateOfBirth" />
                                        <ValidationMessage For="@(() => profileModel.DateOfBirth)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="phoneNumber" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Phone Number <span class="text-red-500">*</span>
                                        </label>
                                        <InputText id="phoneNumber"
                                                   class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                   placeholder="+91 XXXXXXXXXX"
                                                   @bind-Value="profileModel.PhoneNumber" />
                                        <ValidationMessage For="@(() => profileModel.PhoneNumber)" class="text-red-500 text-sm mt-1" />
                                    </div>
                                </div>
                            </div>
                        }

                        @* Step 2: Address Information *@
                        @if (currentStep == 2)
                        {
                            <div class="space-y-6">
                                <div class="mb-6">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 flex items-center">
                                        <svg class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        </svg>
                                        Address Information
                                    </h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">Please provide your contact address details</p>
                                </div>

                                <div class="space-y-6">
                                    <div>
                                        <label for="address" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Street Address <span class="text-red-500">*</span>
                                        </label>
                                        <InputTextArea id="address"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all resize-none"
                                                       rows="3"
                                                       placeholder="Enter your full address"
                                                       @bind-Value="profileModel.Address" />
                                        <ValidationMessage For="@(() => profileModel.Address)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                        <div>
                                            <label for="city" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                City <span class="text-red-500">*</span>
                                            </label>
                                            <InputText id="city"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                       placeholder="City"
                                                       @bind-Value="profileModel.City" />
                                            <ValidationMessage For="@(() => profileModel.City)" class="text-red-500 text-sm mt-1" />
                                        </div>

                                        <div>
                                            <label for="state" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                State <span class="text-red-500">*</span>
                                            </label>
                                            <InputText id="state"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                       placeholder="State"
                                                       @bind-Value="profileModel.State" />
                                            <ValidationMessage For="@(() => profileModel.State)" class="text-red-500 text-sm mt-1" />
                                        </div>

                                        <div>
                                            <label for="zipCode" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                ZIP Code <span class="text-red-500">*</span>
                                            </label>
                                            <InputText id="zipCode"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                       placeholder="ZIP"
                                                       @bind-Value="profileModel.ZipCode" />
                                            <ValidationMessage For="@(() => profileModel.ZipCode)" class="text-red-500 text-sm mt-1" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @* Step 3: Professional Information *@
                        @if (currentStep == 3)
                        {
                            <div class="space-y-6">
                                <div class="mb-6">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 flex items-center">
                                        <svg class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                        </svg>
                                        Professional Information
                                    </h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">Please provide your professional credentials and experience</p>
                                </div>

                                <div class="space-y-6">
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <label for="specialization" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                Specialization <span class="text-red-500">*</span>
                                            </label>
                                            <InputText id="specialization"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                       placeholder="e.g., Cardiology, Neurology"
                                                       @bind-Value="profileModel.Specialization" />
                                            <ValidationMessage For="@(() => profileModel.Specialization)" class="text-red-500 text-sm mt-1" />
                                        </div>

                                        <div>
                                            <label for="yearsOfExperience" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                Years of Experience <span class="text-red-500">*</span>
                                            </label>
                                            <InputNumber id="yearsOfExperience"
                                                         class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                         placeholder="Years"
                                                         @bind-Value="profileModel.YearsOfExperience" />
                                            <ValidationMessage For="@(() => profileModel.YearsOfExperience)" class="text-red-500 text-sm mt-1" />
                                        </div>
                                    </div>

                                    <div>
                                        <label for="medicalRegistrationNumber" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Medical Registration Number <span class="text-red-500">*</span>
                                        </label>
                                        <InputText id="medicalRegistrationNumber"
                                                   class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all font-mono"
                                                   placeholder="MCI Registration Number"
                                                   @bind-Value="profileModel.MedicalRegistrationNumber" />
                                        <ValidationMessage For="@(() => profileModel.MedicalRegistrationNumber)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="educationHistory" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Education History <span class="text-red-500">*</span>
                                        </label>
                                        <InputTextArea id="educationHistory"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all resize-none"
                                                       rows="4"
                                                       placeholder="List your medical degrees, institutions, and graduation years"
                                                       @bind-Value="profileModel.EducationHistory" />
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">e.g., MBBS - AIIMS Delhi (2010), MD Cardiology - PGIMER (2015)</p>
                                        <ValidationMessage For="@(() => profileModel.EducationHistory)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="affiliatedHospitals" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Affiliated Hospitals <span class="text-red-500">*</span>
                                        </label>
                                        <InputTextArea id="affiliatedHospitals"
                                                       class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all resize-none"
                                                       rows="3"
                                                       placeholder="List hospitals you are affiliated with"
                                                       @bind-Value="profileModel.AffiliatedHospitals" />
                                        <ValidationMessage For="@(() => profileModel.AffiliatedHospitals)" class="text-red-500 text-sm mt-1" />
                                    </div>

                                    <div>
                                        <label for="consultationHours" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                            Consultation Hours <span class="text-red-500">*</span>
                                        </label>
                                        <InputText id="consultationHours"
                                                   class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all"
                                                   placeholder="Mon-Fri 9AM-5PM, Sat 9AM-1PM"
                                                   @bind-Value="profileModel.ConsultationHours" />
                                        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">e.g., Mon-Fri 9AM-5PM, Sat 9AM-1PM</p>
                                        <ValidationMessage For="@(() => profileModel.ConsultationHours)" class="text-red-500 text-sm mt-1" />
                                    </div>
                                </div>
                            </div>
                        }

                        @* Step 4: Verification Documents *@
                        @if (currentStep == 4)
                        {
                            <div class="space-y-6">
                                <div class="mb-6">
                                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 flex items-center">
                                        <svg class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                        </svg>
                                        Verification Documents
                                    </h3>
                                    <p class="text-gray-600 dark:text-gray-400 text-sm">Upload your identity and professional verification documents</p>
                                </div>

                                <div class="space-y-6">
                                    <!-- Aadhaar Section -->
                                    <div class="bg-blue-50 dark:bg-blue-900 dark:bg-opacity-20 border-2 border-blue-200 dark:border-blue-700 rounded-2xl p-6">
                                        <div class="flex items-center mb-4">
                                            <div class="p-3 bg-blue-500 rounded-xl mr-3">
                                                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
                                                </svg>
                                            </div>
                                            <div>
                                                <h4 class="text-lg font-bold text-gray-900 dark:text-white">Aadhaar Card Verification</h4>
                                                <p class="text-sm text-gray-600 dark:text-gray-400">Required for identity verification</p>
                                            </div>
                                        </div>

                                        <div class="space-y-4">
                                            <div>
                                                <label for="aadhaarNumber" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                    Aadhaar Number <span class="text-red-500">*</span>
                                                </label>
                                                <InputText id="aadhaarNumber"
                                                           class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white transition-all font-mono"
                                                           placeholder="XXXX XXXX XXXX"
                                                           maxlength="12"
                                                           @bind-Value="profileModel.AadhaarNumber" />
                                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Enter your 12-digit Aadhaar number</p>
                                                <ValidationMessage For="@(() => profileModel.AadhaarNumber)" class="text-red-500 text-sm mt-1" />
                                            </div>

                                            <div>
                                                <label for="aadhaarUpload" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                    Upload Aadhaar Card Image <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative">
                                                    <label class="flex flex-col items-center justify-center w-full h-40 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl cursor-pointer hover:border-primary hover:bg-blue-50 dark:hover:bg-blue-900 dark:hover:bg-opacity-10 transition-all">
                                                        @if (!string.IsNullOrEmpty(uploadedAadhaarPath))
                                                        {
                                                            <div class="flex flex-col items-center justify-center text-center p-4">
                                                                <svg class="w-12 h-12 text-green-500 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                                </svg>
                                                                <p class="text-sm font-semibold text-green-600 dark:text-green-400">Aadhaar card uploaded successfully!</p>
                                                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Click to change file</p>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="flex flex-col items-center justify-center text-center p-4">
                                                                <svg class="w-12 h-12 text-gray-400 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                                                </svg>
                                                                <p class="text-sm font-semibold text-gray-700 dark:text-gray-300">Click to upload Aadhaar card</p>
                                                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">JPG, PNG, or PDF (Max 5MB)</p>
                                                            </div>
                                                        }
                                                        <InputFile id="aadhaarUpload" class="hidden" OnChange="OnAadhaarFileSelected" accept="image/*,.pdf" />
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Medical Certificate Section -->
                                    <div class="bg-purple-50 dark:bg-purple-900 dark:bg-opacity-20 border-2 border-purple-200 dark:border-purple-700 rounded-2xl p-6">
                                        <div class="flex items-center mb-4">
                                            <div class="p-3 bg-purple-500 rounded-xl mr-3">
                                                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                </svg>
                                            </div>
                                            <div>
                                                <h4 class="text-lg font-bold text-gray-900 dark:text-white">Medical Certificate</h4>
                                                <p class="text-sm text-gray-600 dark:text-gray-400">Upload certificate or provide URL</p>
                                            </div>
                                        </div>

                                        <div class="space-y-4">
                                            <div>
                                                <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">
                                                    Upload Certificate File <span class="text-red-500">*</span>
                                                </label>
                                                <div class="relative">
                                                    <label class="flex flex-col items-center justify-center w-full h-40 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-xl cursor-pointer hover:border-primary hover:bg-purple-50 dark:hover:bg-purple-900 dark:hover:bg-opacity-10 transition-all">
                                                        @if (!string.IsNullOrEmpty(uploadedMedicalCertPath))
                                                        {
                                                            <div class="flex flex-col items-center justify-center text-center p-4">
                                                                <svg class="w-12 h-12 text-green-500 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                                </svg>
