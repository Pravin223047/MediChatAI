                var result = await DoctorOnboardingService.UploadMedicalCertificateAsync(stream, file.Name);

                if (!string.IsNullOrEmpty(result))
                {
                    uploadedMedicalCertPath = result;
                    ToastService.ShowSuccess("Medical certificate uploaded successfully");
                }
                else
                {
                    ToastService.ShowError("Failed to upload medical certificate. Please try again.");
                }
            }
            catch (Exception ex)
            {
                ToastService.ShowError($"Error uploading file: {ex.Message}");
            }
            finally
            {
                isLoading = false;
                loadingMessage = string.Empty;
                StateHasChanged();
            }
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            // Final validation
            if (string.IsNullOrWhiteSpace(profileModel.AadhaarNumber) || profileModel.AadhaarNumber.Length != 12)
            {
                ToastService.ShowError("Please enter a valid 12-digit Aadhaar number.");
                return;
            }

            if (!System.Text.RegularExpressions.Regex.IsMatch(profileModel.AadhaarNumber, @"^\d{12}$"))
            {
                ToastService.ShowError("Aadhaar number must contain only digits.");
                return;
            }

            isLoading = true;
            loadingMessage = "Submitting profile and performing AI verification...";
            StateHasChanged();

            var result = await DoctorOnboardingService.CompleteDoctorProfileAsync(profileModel, uploadedAadhaarPath, uploadedMedicalCertPath);

            if (result.Success)
            {
                showSuccessMessage = true;
                ToastService.ShowSuccess("Profile submitted successfully! Your application is now pending admin approval.");
            }
            else
            {
                var errorMsg = result.Message ?? "Failed to submit profile. Please check all fields and try again.";
                if (result.Errors.Any())
                {
                    errorMsg += " - " + string.Join(", ", result.Errors);
                }
                ToastService.ShowError(errorMsg);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"An error occurred: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            loadingMessage = string.Empty;
            StateHasChanged();
        }
    }

