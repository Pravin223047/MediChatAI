    [Parameter] public EventCallback OnClose { get; set; }

    private DoctorProfileCompletionModel profileModel = new();
    private int currentStep = 1;
    private const int totalSteps = 4;
    private string loadingMessage = string.Empty;
    private bool isLoading = false;
    private bool showSuccessMessage = false;
    private string uploadedAadhaarPath = string.Empty;
    private string uploadedMedicalCertPath = string.Empty;

    private string GetStepTitle()
    {
        return currentStep switch
        {
            1 => "Personal Information",
            2 => "Address Information",
            3 => "Professional Information",
            4 => "Verification Documents",
            _ => "Step " + currentStep
        };
    }

    private async Task NextStep()
    {
        if (await ValidateCurrentStep())
        {
            currentStep++;
            StateHasChanged();
        }
    }

    private void PreviousStep()
    {
        if (currentStep > 1)
        {
            currentStep--;
            StateHasChanged();
        }
    }

    private Task<bool> ValidateCurrentStep()
    {
        // Step-specific validation
        switch (currentStep)
        {
            case 1: // Personal Information
                if (string.IsNullOrWhiteSpace(profileModel.FirstName) ||
                    string.IsNullOrWhiteSpace(profileModel.LastName) ||
                    string.IsNullOrWhiteSpace(profileModel.Gender) ||
                    !profileModel.DateOfBirth.HasValue ||
                    string.IsNullOrWhiteSpace(profileModel.PhoneNumber))
                {
                    ToastService.ShowError("Please fill in all required personal information fields.");
                    return Task.FromResult(false);
                }

                // Validate phone number format (basic validation)
                if (!System.Text.RegularExpressions.Regex.IsMatch(profileModel.PhoneNumber, @"^\+?[\d\s-]{10,15}$"))
                {
                    ToastService.ShowError("Please enter a valid phone number.");
                    return Task.FromResult(false);
                }

                // Validate age (must be at least 23 years old to be a doctor)
                if (profileModel.DateOfBirth.HasValue)
                {
                    var age = DateTime.Now.Year - profileModel.DateOfBirth.Value.Year;
                    if (profileModel.DateOfBirth.Value.Date > DateTime.Now.AddYears(-age)) age--;

                    if (age < 23)
                    {
                        ToastService.ShowError("You must be at least 23 years old to register as a doctor.");
                        return Task.FromResult(false);
                    }
                    if (age > 100)
                    {
                        ToastService.ShowError("Please enter a valid date of birth.");
                        return Task.FromResult(false);
                    }
                }
                break;

            case 2: // Address Information
                if (string.IsNullOrWhiteSpace(profileModel.Address) ||
                    string.IsNullOrWhiteSpace(profileModel.City) ||
                    string.IsNullOrWhiteSpace(profileModel.State) ||
                    string.IsNullOrWhiteSpace(profileModel.ZipCode))
                {
                    ToastService.ShowError("Please fill in all required address fields.");
                    return Task.FromResult(false);
                }

                // Validate ZIP code format (basic validation)
                if (!System.Text.RegularExpressions.Regex.IsMatch(profileModel.ZipCode, @"^\d{5,10}$"))
                {
                    ToastService.ShowError("Please enter a valid ZIP code.");
                    return Task.FromResult(false);
                }
                break;

            case 3: // Professional Information
                if (string.IsNullOrWhiteSpace(profileModel.Specialization) ||
                    profileModel.YearsOfExperience < 0 ||
                    string.IsNullOrWhiteSpace(profileModel.MedicalRegistrationNumber) ||
                    string.IsNullOrWhiteSpace(profileModel.EducationHistory) ||
                    string.IsNullOrWhiteSpace(profileModel.AffiliatedHospitals) ||
                    string.IsNullOrWhiteSpace(profileModel.ConsultationHours))
                {
                    ToastService.ShowError("Please fill in all required professional information fields.");
                    return Task.FromResult(false);
                }

                // Validate years of experience
                if (profileModel.YearsOfExperience > 50)
                {
                    ToastService.ShowError("Years of experience seems unrealistic. Please verify.");
                    return Task.FromResult(false);
                }
                break;
        }

        return Task.FromResult(true);
    }

    private bool CanSubmit()
    {
        return !string.IsNullOrEmpty(profileModel.AadhaarNumber) &&
               !string.IsNullOrEmpty(uploadedAadhaarPath) &&
               (!string.IsNullOrEmpty(uploadedMedicalCertPath) || !string.IsNullOrEmpty(profileModel.MedicalCertificateUrl));
    }

    private async Task OnAadhaarFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                // Validate file size (5MB limit)
                const long maxFileSize = 5 * 1024 * 1024;
                if (file.Size > maxFileSize)
                {
                    ToastService.ShowError("File size exceeds 5MB limit. Please choose a smaller file.");
                    return;
                }

                // Validate file type
                var allowedTypes = new[] { "image/jpeg", "image/png", "image/jpg", "application/pdf" };
                if (!allowedTypes.Contains(file.ContentType.ToLower()))
                {
                    ToastService.ShowError("Invalid file type. Please upload JPG, PNG, or PDF only.");
                    return;
                }

                // CRITICAL: Read file to memory BEFORE hiding InputFile component
                // Opening stream after isLoading=true causes _blazorFilesById error
                using var stream = file.OpenReadStream(maxAllowedSize: maxFileSize);

                // NOW it's safe to show loading state (which hides the InputFile)
                isLoading = true;
                loadingMessage = "Uploading Aadhaar card...";
                StateHasChanged();

                // Upload file - stream will be converted to byte array in service
                var result = await DoctorOnboardingService.UploadAadhaarCardAsync(stream, file.Name);

                if (!string.IsNullOrEmpty(result))
                {
                    uploadedAadhaarPath = result;
                    ToastService.ShowSuccess("Aadhaar card uploaded successfully");
                }
                else
                {
                    ToastService.ShowError("Failed to upload Aadhaar card. Please try again.");
                }
            }
            catch (Exception ex)
            {
                ToastService.ShowError($"Error uploading file: {ex.Message}");
            }
            finally
            {
                isLoading = false;
                loadingMessage = string.Empty;
                StateHasChanged();
            }
        }
    }

