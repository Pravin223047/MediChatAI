@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@using MediChatAI_BlazorWebAssembly.Features.Admin.Components
@inject IPatientManagementService PatientService
@inject IToastService ToastService

<ModalBase IsOpen="@IsOpen"
           Title="Manage Patient Tags"
           Subtitle="@patientName"
           Size="md"
           OnClose="@Close">
    <ChildContent>
        @if (isLoading)
        {
            <div class="flex justify-center items-center py-12">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary"></div>
                <span class="ml-3 text-gray-600 dark:text-gray-400">Loading tags...</span>
            </div>
        }
        else
        {
            <div class="space-y-6">
                <!-- Current Tags -->
                <div>
                    <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">Current Tags</h4>
                    @if (currentTags.Any())
                    {
                        <div class="flex flex-wrap gap-2">
                            @foreach (var tag in currentTags)
                            {
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary/10 text-primary dark:bg-accent/20 dark:text-accent border border-primary/20 dark:border-accent/30">
                                    @tag
                                    <button type="button" @onclick="() => RemoveTag(tag)"
                                            class="ml-2 inline-flex items-center p-0.5 rounded-full hover:bg-primary/20 dark:hover:bg-accent/30 transition-colors">
                                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-500 dark:text-gray-400 text-sm italic">No tags assigned</p>
                    }
                </div>

                <!-- Add New Tag -->
                <div>
                    <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">Add Tag</h4>
                    <select @bind="selectedTag"
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary dark:bg-gray-700 dark:text-white">
                        <option value="">Select a tag...</option>
                        @foreach (var tag in availableTags.Where(t => !currentTags.Contains(t)))
                        {
                            <option value="@tag">@tag</option>
                        }
                    </select>
                    <button type="button" @onclick="AddTag" disabled="@(string.IsNullOrEmpty(selectedTag) || isAdding)"
                            class="mt-3 w-full inline-flex justify-center items-center px-4 py-2 bg-gradient-to-r from-primary to-accent text-white rounded-lg hover:shadow-lg transition-all font-semibold disabled:opacity-50">
                        @if (isAdding)
                        {
                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Adding...</span>
                        }
                        else
                        {
                            <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                            </svg>
                            <span>Add Tag</span>
                        }
                    </button>
                </div>

                <!-- Available Tags Legend -->
                <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                    <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3">Available Tags</h4>
                    <div class="grid grid-cols-2 gap-2 text-sm text-gray-600 dark:text-gray-400">
                        @foreach (var tag in availableTags)
                        {
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-primary dark:text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                                </svg>
                                @tag
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </ChildContent>
    <FooterContent>
        <button type="button" @onclick="SaveChanges"
                class="inline-flex justify-center px-6 py-2 bg-gradient-to-r from-primary to-accent text-white rounded-lg hover:shadow-lg transition-all font-semibold">
            Done
        </button>
        <button type="button" @onclick="Close"
                class="inline-flex justify-center px-6 py-2 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-500 transition-all font-semibold">
            Cancel
        </button>
    </FooterContent>
</ModalBase>

@code {
    [Parameter] public string PatientId { get; set; } = string.Empty;
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private string patientName = "";
    private List<string> currentTags = new();
    private List<string> availableTags = new();
    private string selectedTag = "";
    private bool isLoading = false;
    private bool isAdding = false;
    private bool tagsChanged = false;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && !string.IsNullOrEmpty(PatientId))
        {
            await LoadData();
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            // Load patient name
            var patient = await PatientService.GetPatientByIdAsync(PatientId);
            if (patient != null)
            {
                patientName = $"{patient.FirstName} {patient.LastName}";
                // Initialize empty tags list - actual tags will be managed through add/remove actions
                currentTags = new List<string>();
            }

            // Load available tags
            availableTags = await PatientService.GetAvailableTagsAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task AddTag()
    {
        if (string.IsNullOrEmpty(selectedTag)) return;

        isAdding = true;
        try
        {
            await PatientService.AddPatientTagAsync(PatientId, selectedTag);
            currentTags.Add(selectedTag);
            selectedTag = "";
            tagsChanged = true;
            ToastService.ShowSuccess("Tag added successfully!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error adding tag: {ex.Message}");
        }
        finally
        {
            isAdding = false;
        }
    }

    private async Task RemoveTag(string tag)
    {
        try
        {
            await PatientService.RemovePatientTagAsync(PatientId, tag);
            currentTags.Remove(tag);
            tagsChanged = true;
            ToastService.ShowSuccess("Tag removed successfully!");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error removing tag: {ex.Message}");
        }
    }

    private async Task SaveChanges()
    {
        await OnClose.InvokeAsync(tagsChanged);
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync(tagsChanged);
    }
}
