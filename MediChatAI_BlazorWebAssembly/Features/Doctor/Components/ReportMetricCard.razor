<div class="group relative overflow-hidden bg-gradient-to-br @GradientColors rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105 p-6">
    <!-- Animated background -->
    <div class="absolute inset-0 bg-white/10 dark:bg-black/10"></div>

    <!-- Decorative blob -->
    <div class="absolute -right-10 -top-10 w-40 h-40 bg-white/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>

    <div class="relative">
        <!-- Icon and Title -->
        <div class="flex items-start justify-between mb-4">
            <div class="flex items-center gap-3">
                <div class="p-3 bg-white/20 dark:bg-black/20 backdrop-blur-sm rounded-xl">
                    <svg class="w-6 h-6 @IconColor" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        @((MarkupString)IconPath)
                    </svg>
                </div>
                <div>
                    <p class="text-sm font-medium @TextColor opacity-90">@Title</p>
                    @if (!string.IsNullOrEmpty(Subtitle))
                    {
                        <p class="text-xs @TextColor opacity-75 mt-0.5">@Subtitle</p>
                    }
                </div>
            </div>

            @if (ShowMenu)
            {
                <button class="p-1.5 hover:bg-white/20 dark:hover:bg-black/20 rounded-lg transition-colors">
                    <svg class="w-5 h-5 @TextColor" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                    </svg>
                </button>
            }
        </div>

        <!-- Main Value -->
        <div class="mb-3">
            @if (IsLoading)
            {
                <div class="h-10 bg-white/20 dark:bg-black/20 rounded-lg animate-pulse"></div>
            }
            else
            {
                <div class="flex items-baseline gap-2">
                    <h2 class="text-4xl font-bold @TextColor">@Value</h2>
                    @if (!string.IsNullOrEmpty(Unit))
                    {
                        <span class="text-lg @TextColor opacity-75">@Unit</span>
                    }
                </div>
            }
        </div>

        <!-- Comparison/Trend -->
        @if (ShowComparison && PercentageChange.HasValue)
        {
            <div class="flex items-center gap-2 mb-3">
                @if (PercentageChange.Value > 0)
                {
                    <div class="flex items-center gap-1 px-2 py-1 bg-green-500/20 rounded-lg">
                        <svg class="w-4 h-4 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                        </svg>
                        <span class="text-sm font-semibold text-green-300">@PercentageChange.Value%</span>
                    </div>
                }
                else if (PercentageChange.Value < 0)
                {
                    <div class="flex items-center gap-1 px-2 py-1 bg-red-500/20 rounded-lg">
                        <svg class="w-4 h-4 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                        </svg>
                        <span class="text-sm font-semibold text-red-300">@Math.Abs(PercentageChange.Value)%</span>
                    </div>
                }
                else
                {
                    <div class="flex items-center gap-1 px-2 py-1 bg-gray-500/20 rounded-lg">
                        <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14"/>
                        </svg>
                        <span class="text-sm font-semibold text-gray-300">0%</span>
                    </div>
                }
                <span class="text-xs @TextColor opacity-75">vs @ComparisonPeriod</span>
            </div>
        }

        <!-- Progress Bar -->
        @if (ShowProgress && ProgressPercentage.HasValue)
        {
            <div class="mb-3">
                <div class="flex items-center justify-between text-xs @TextColor opacity-75 mb-1">
                    <span>Progress</span>
                    <span>@ProgressPercentage.Value%</span>
                </div>
                <div class="w-full bg-white/20 dark:bg-black/20 rounded-full h-2 overflow-hidden">
                    <div class="h-full bg-white dark:bg-white rounded-full transition-all duration-1000"
                         style="width: @ProgressPercentage.Value%"></div>
                </div>
            </div>
        }

        <!-- Footer Info -->
        @if (!string.IsNullOrEmpty(FooterText))
        {
            <p class="text-xs @TextColor opacity-75">@FooterText</p>
        }

        <!-- Action Button -->
        @if (ShowAction && OnActionClicked.HasDelegate)
        {
            <button @onclick="HandleActionClick"
                    class="mt-3 w-full py-2 bg-white/20 dark:bg-black/20 hover:bg-white/30 dark:hover:bg-black/30 backdrop-blur-sm rounded-lg @TextColor font-medium text-sm transition-all duration-300 flex items-center justify-center gap-2">
                <span>@ActionText</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </button>
        }
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Subtitle { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = "0";
    [Parameter] public string Unit { get; set; } = string.Empty;
    [Parameter] public string IconPath { get; set; } = "<path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z\"/>";
    [Parameter] public string GradientColors { get; set; } = "from-blue-500 to-blue-600";
    [Parameter] public string IconColor { get; set; } = "text-white";
    [Parameter] public string TextColor { get; set; } = "text-white";
    [Parameter] public bool ShowComparison { get; set; } = false;
    [Parameter] public double? PercentageChange { get; set; }
    [Parameter] public string ComparisonPeriod { get; set; } = "last period";
    [Parameter] public bool ShowProgress { get; set; } = false;
    [Parameter] public double? ProgressPercentage { get; set; }
    [Parameter] public string FooterText { get; set; } = string.Empty;
    [Parameter] public bool ShowMenu { get; set; } = false;
    [Parameter] public bool ShowAction { get; set; } = false;
    [Parameter] public string ActionText { get; set; } = "View Details";
    [Parameter] public EventCallback OnActionClicked { get; set; }
    [Parameter] public bool IsLoading { get; set; } = false;

    private async Task HandleActionClick()
    {
        await OnActionClicked.InvokeAsync();
    }
}
