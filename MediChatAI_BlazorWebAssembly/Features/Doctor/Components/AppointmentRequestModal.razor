@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@inject IToastService ToastService

@if (IsVisible && Request != null)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4" @onclick="Close">
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-hidden" @onclick:stopPropagation="true">
            <!-- Header -->
            <div class="bg-gradient-to-r from-primary to-accent px-6 py-4 flex items-center justify-between">
                <h2 class="text-2xl font-bold text-white">Appointment Request Details</h2>
                <button @onclick="Close" class="text-white hover:bg-white hover:bg-opacity-20 rounded-lg p-2 transition-all">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <!-- Content -->
            <div class="overflow-y-auto max-h-[calc(90vh-180px)] p-6">
                <!-- Patient Info -->
                <div class="mb-6">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                        Patient Information
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div><strong>Name:</strong> @Request.FullName</div>
                        <div><strong>Age:</strong> @Request.Age years</div>
                        <div><strong>Gender:</strong> @Request.Gender</div>
                        <div><strong>Blood Type:</strong> @Request.BloodType</div>
                        <div><strong>Email:</strong> @Request.Email</div>
                        <div><strong>Phone:</strong> @Request.PhoneNumber</div>
                    </div>
                </div>

                <!-- Symptoms & Medical History -->
                <div class="mb-6">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Medical Information
                    </h3>
                    <div class="space-y-3">
                        @if (!string.IsNullOrEmpty(Request.SymptomDescription))
                        {
                            <div>
                                <strong>Symptoms:</strong>
                                <p class="mt-1 text-gray-700 dark:text-gray-300">@Request.SymptomDescription</p>
                                @if (!string.IsNullOrEmpty(Request.SymptomSeverity))
                                {
                                    <span class="inline-block mt-2 px-3 py-1 rounded-full text-sm font-semibold @GetSeverityClass(Request.SymptomSeverity)">
                                        Severity: @Request.SymptomSeverity
                                    </span>
                                }
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Request.Allergies))
                        {
                            <div><strong>Allergies:</strong> @Request.Allergies</div>
                        }
                        @if (!string.IsNullOrEmpty(Request.InsuranceProvider))
                        {
                            <div><strong>Insurance:</strong> @Request.InsuranceProvider</div>
                        }
                    </div>
                </div>

                <!-- Appointment Preferences -->
                <div class="mb-6">
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Preferred Schedule</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        @if (Request.PreferredDate.HasValue)
                        {
                            <div><strong>Date:</strong> @Request.PreferredDate.Value.ToString("MMMM dd, yyyy")</div>
                        }
                        @if (!string.IsNullOrEmpty(Request.PreferredTimeSlot))
                        {
                            <div><strong>Time:</strong> @Request.PreferredTimeSlot</div>
                        }
                        @if (Request.IsUrgent)
                        {
                            <div class="col-span-2">
                                <span class="px-3 py-1 bg-red-500 text-white rounded-full text-sm font-semibold">
                                    ðŸš¨ URGENT REQUEST
                                </span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Approval Form -->
                @if (Request.Status == "PENDING" || Request.Status == "Pending")
                {
                    <div class="border-t border-gray-200 dark:border-gray-700 pt-6">
                        <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Schedule Appointment</h3>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-semibold mb-2">Appointment Date & Time</label>
                                <input type="datetime-local" @bind="appointmentDateTime"
                                       class="w-full px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-semibold mb-2">Duration (minutes)</label>
                                    <input type="number" @bind="durationMinutes"
                                           class="w-full px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                           min="15" max="180" step="15" />
                                </div>
                                <div>
                                    <label class="block text-sm font-semibold mb-2">Room Number</label>
                                    <input type="text" @bind="roomNumber"
                                           class="w-full px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                           placeholder="e.g., Room 101" />
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold mb-2">Notes (Optional)</label>
                                <textarea @bind="reviewNotes" rows="3"
                                          class="w-full px-4 py-2 border rounded-lg dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                          placeholder="Any additional notes for the patient..."></textarea>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Footer Actions -->
            @if (Request.Status == "PENDING" || Request.Status == "Pending")
            {
                <div class="bg-gray-50 dark:bg-gray-900 px-6 py-4 flex items-center justify-end space-x-3 border-t border-gray-200 dark:border-gray-700">
                    <button @onclick="RejectRequest" disabled="@isProcessing"
                            class="px-6 py-3 bg-red-500 text-white rounded-xl hover:bg-red-600 font-semibold transition-all disabled:opacity-50">
                        @if (isProcessing && isRejecting)
                        {
                            <span>Rejecting...</span>
                        }
                        else
                        {
                            <span>Reject</span>
                        }
                    </button>
                    <button @onclick="ApproveRequest" disabled="@isProcessing"
                            class="px-6 py-3 bg-green-500 text-white rounded-xl hover:bg-green-600 font-semibold transition-all disabled:opacity-50">
                        @if (isProcessing && !isRejecting)
                        {
                            <span>Approving...</span>
                        }
                        else
                        {
                            <span>Approve & Schedule</span>
                        }
                    </button>
                </div>
            }
            else
            {
                <div class="bg-gray-50 dark:bg-gray-900 px-6 py-4 flex items-center justify-end border-t border-gray-200 dark:border-gray-700">
                    <button @onclick="Close" class="px-6 py-3 bg-gray-500 text-white rounded-xl hover:bg-gray-600 font-semibold transition-all">
                        Close
                    </button>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public AppointmentRequestDto? Request { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<bool> OnRequestProcessed { get; set; }

    private DateTime appointmentDateTime = DateTime.Now.AddDays(1);
    private int durationMinutes = 30;
    private string roomNumber = "";
    private string reviewNotes = "";
    private bool isProcessing = false;
    private bool isRejecting = false;

    protected override void OnParametersSet()
    {
        if (Request != null && Request.PreferredDate.HasValue)
        {
            appointmentDateTime = Request.PreferredDate.Value;
        }
    }

    private async Task ApproveRequest()
    {
        if (Request == null) return;

        isProcessing = true;
        isRejecting = false;
        StateHasChanged();

        try
        {
            await OnRequestProcessed.InvokeAsync(true);
            ToastService.ShowSuccess("Appointment request approved successfully!");
            await Close();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to approve request: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task RejectRequest()
    {
        if (Request == null) return;

        isProcessing = true;
        isRejecting = true;
        StateHasChanged();

        try
        {
            await OnRequestProcessed.InvokeAsync(false);
            ToastService.ShowError("Appointment request rejected");
            await Close();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to reject request: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task Close()
    {
        IsVisible = false;
        await OnClose.InvokeAsync();
    }

    private string GetSeverityClass(string severity) => severity?.ToLower() switch
    {
        "severe" or "high" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
        "moderate" or "medium" => "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300",
        _ => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300"
    };

    public DateTime GetAppointmentDateTime() => appointmentDateTime;
    public int GetDurationMinutes() => durationMinutes;
    public string GetRoomNumber() => roomNumber;
    public string GetReviewNotes() => reviewNotes;
}
