        StateHasChanged();

        try
        {
            var notifications = await NotificationService.GetNotificationsAsync(new GetNotificationsInput
            {
                Skip = 0,
                Take = 1000
            });

            if (notifications != null)
            {
                totalNotifications = notifications.TotalCount;
                var readCount = notifications.Notifications.Count(n => n.IsRead);
                readRate = totalNotifications > 0 ? (readCount * 100 / totalNotifications) : 0;
            }
            else
            {
                totalNotifications = 0;
                readRate = 0;
            }

