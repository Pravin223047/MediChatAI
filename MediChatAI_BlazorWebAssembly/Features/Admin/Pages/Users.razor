    private async Task ExportAllUsers()
    {
        try
        {
            isLoading = true;

            var result = await AdminService.ExportUserDataAsync();

            if (result?.Success == true && !string.IsNullOrEmpty(result.Message))
            {
                // The message contains the base64-encoded CSV data
                var base64Data = result.Message;
                var fileName = $"Users_Export_{DateTime.Now:yyyyMMdd_HHmmss}.csv";

                // Trigger download using JavaScript
                await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64Data, "text/csv");

                ToastService.ShowSuccess($"Successfully exported {totalCount} users to {fileName}");
            }
            else
            {
                ToastService.ShowError(string.Join(", ", result?.Errors ?? new[] { "Failed to export user data" }));
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error exporting user data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private string GetUserInitials(string? firstName, string? lastName)
    {
        var first = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString() : "";
        var last = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString() : "";
        return (first + last).ToUpper();
    }

