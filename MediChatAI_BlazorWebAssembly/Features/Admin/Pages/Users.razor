    private async Task ConfirmDelete(string notes)
    {
        if (string.IsNullOrEmpty(selectedUserId)) return;

        try
        {
            var result = await AdminService.DeleteUserAsync(selectedUserId);

            if (result?.Success == true)
            {
                ToastService.ShowSuccess($"User {selectedUserEmail} has been deleted successfully.");
                CloseDeleteModal();
                await LoadUsers();
            }
            else
            {
                ToastService.ShowError(string.Join(", ", result?.Errors ?? new[] { "Failed to delete user" }));
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error deleting user: {ex.Message}");
        }
    }

