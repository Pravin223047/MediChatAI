@code {
    private bool isLoading = true;
    private List<AdminAppointmentDto> appointments = new();
    private int totalAppointments = 0;
    private int pendingCount = 0;
    private int confirmedCount = 0;
    private int completedTodayCount = 0;
    private int requestCount = 0;
    
    // Modal state
    private bool showDetailsModal = false;
    private AdminAppointmentDto? selectedAppointment = null;
    
    // Filters
    private string searchTerm = "";
    private string statusFilter = "";
    private DateTime? fromDate;
    private DateTime? toDate;
    
    // Pagination
    private int currentPage = 1;
    private int pageSize = 20;
    private int totalPages => (int)Math.Ceiling(totalAppointments / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadAppointments();
    }

    private async Task LoadAppointments()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            Console.WriteLine($"Loading appointments: skip={(currentPage - 1) * pageSize}, take={pageSize}, status={statusFilter}");
            
            var result = await AdminService.GetAllAppointmentsAsync(
                skip: (currentPage - 1) * pageSize,
                take: pageSize,
                searchTerm: string.IsNullOrEmpty(searchTerm) ? null : searchTerm,
                status: string.IsNullOrEmpty(statusFilter) ? null : statusFilter,
                fromDate: fromDate,
                toDate: toDate
            );

            if (result != null)
            {
                Console.WriteLine($"Appointments loaded: count={result.Appointments.Count}, total={result.TotalCount}, pending={result.PendingCount}, requests={result.RequestCount}");
                appointments = result.Appointments;
                totalAppointments = result.TotalCount;
                pendingCount = result.PendingCount;
                confirmedCount = result.ConfirmedCount;
                completedTodayCount = result.CompletedTodayCount;
                requestCount = result.RequestCount;
            }
            else
            {
                Console.WriteLine("GetAllAppointmentsAsync returned null");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading appointments: {ex}");
            ToastService.ShowError($"Failed to load appointments: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData()
    {
        await LoadAppointments();
        ToastService.ShowSuccess("Data refreshed successfully!");
    }

    private async Task HandleSearch()
    {
        currentPage = 1;
        await LoadAppointments();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadAppointments();
    }

    private async Task ClearFilters()
    {
        searchTerm = "";
        statusFilter = "";
        fromDate = null;
        toDate = null;
        currentPage = 1;
        await LoadAppointments();
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadAppointments();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadAppointments();
        }
    }

    private async Task GoToPage(int page)
    {
        currentPage = page;
        await LoadAppointments();
    }

    private void ViewAppointmentDetails(string appointmentId)
    {
        selectedAppointment = appointments.FirstOrDefault(a => a.Id == appointmentId);
        if (selectedAppointment != null)
        {
            showDetailsModal = true;
            StateHasChanged();
        }
        else
        {
            ToastService.ShowError("Appointment not found");
        }
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        selectedAppointment = null;
        StateHasChanged();
    }

