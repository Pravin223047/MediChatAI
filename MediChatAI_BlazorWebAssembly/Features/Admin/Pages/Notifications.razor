@page "/admin/notifications"
@using Microsoft.AspNetCore.Authorization
@inject INotificationService NotificationService
@inject IToastService ToastService
@attribute [Authorize(Roles = "Admin")]

<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50/30 to-purple-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-8">
    <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Modern Header Card -->
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-8 mb-6 border border-white/50 dark:border-gray-700/50"
             style="box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08), 0 0 0 1px rgba(255, 255, 255, 0.3) inset;">
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div class="flex items-center space-x-4">
                    <div class="w-14 h-14 bg-gradient-to-br from-red-500 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 via-red-600 to-pink-600 dark:from-gray-100 dark:via-red-400 dark:to-pink-400 bg-clip-text text-transparent">
                            All Notifications (Admin)
                        </h1>
                        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 font-medium">
                            Manage all notifications across all users
                        </p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <span class="px-4 py-2 bg-gradient-to-r from-red-100 to-pink-100 dark:from-red-900/50 dark:to-pink-900/50 text-red-700 dark:text-red-400 rounded-xl font-semibold text-sm shadow-sm">
                        Admin View
                    </span>
                </div>
            </div>

            <!-- Advanced Filters -->
            <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Category Filter -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Category</label>
                    <select @bind="selectedCategory" @bind:after="ApplyFilters"
                            class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl text-sm focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                        <option value="">All Categories</option>
                        @foreach (var category in Enum.GetValues<NotificationCategory>())
                        {
                            <option value="@category">@category.ToString()</option>
                        }
                    </select>
                </div>

                <!-- Type Filter -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Type</label>
                    <select @bind="selectedType" @bind:after="ApplyFilters"
                            class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl text-sm focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                        <option value="">All Types</option>
                        @foreach (var type in Enum.GetValues<NotificationType>())
                        {
                            <option value="@type">@type.ToString()</option>
                        }
                    </select>
                </div>

                <!-- Start Date Filter -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Start Date</label>
                    <input type="date" @bind="startDate" @bind:after="ApplyFilters"
                           class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl text-sm focus:ring-2 focus:ring-primary focus:border-transparent transition-all" />
                </div>

                <!-- End Date Filter -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">End Date</label>
                    <input type="date" @bind="endDate" @bind:after="ApplyFilters"
                           class="w-full px-4 py-2.5 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-xl text-sm focus:ring-2 focus:ring-primary focus:border-transparent transition-all" />
                </div>
            </div>

            <!-- Stats -->
            <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-4 border border-blue-200 dark:border-blue-800">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-blue-600 dark:text-blue-400">Total Notifications</p>
                            <p class="text-2xl font-bold text-blue-900 dark:text-blue-100 mt-1">@totalCount</p>
                        </div>
                        <svg class="w-10 h-10 text-blue-500 dark:text-blue-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                        </svg>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-4 border border-green-200 dark:border-green-800">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-green-600 dark:text-green-400">Current Page</p>
                            <p class="text-2xl font-bold text-green-900 dark:text-green-100 mt-1">@currentPage</p>
                        </div>
                        <svg class="w-10 h-10 text-green-500 dark:text-green-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-4 border border-purple-200 dark:border-purple-800">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-purple-600 dark:text-purple-400">Items Per Page</p>
                            <p class="text-2xl font-bold text-purple-900 dark:text-purple-100 mt-1">@pageSize</p>
                        </div>
                        <svg class="w-10 h-10 text-purple-500 dark:text-purple-400 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications List -->
        <div class="space-y-4">
            @if (isLoading)
            {
                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-16 text-center border border-white/50 dark:border-gray-700/50">
                    <div class="inline-block animate-spin rounded-full h-16 w-16 border-4 border-primary border-t-transparent"></div>
                    <p class="mt-6 text-lg text-gray-600 dark:text-gray-400 font-medium">Loading notifications...</p>
                </div>
            }
            else if (notifications.Count == 0)
            {
                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-16 text-center border border-white/50 dark:border-gray-700/50">
                    <div class="mx-auto w-24 h-24 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-full flex items-center justify-center mb-6">
                        <svg class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">No Notifications Found</h3>
                    <p class="text-base text-gray-600 dark:text-gray-400 max-w-md mx-auto">
                        No notifications match the selected filters. Try adjusting your filter criteria.
                    </p>
                </div>
            }
            else
            {
                @foreach (var item in notifications)
                {
                    var notification = item.Notification;
                    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-lg hover:shadow-2xl border border-gray-200 dark:border-gray-700 transition-all duration-300 overflow-hidden group"
                         style="box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);">
                        <div class="p-6">
                            <div class="flex items-start space-x-4">
                                <!-- Icon -->
                                <div class="flex-shrink-0">
                                    @GetNotificationIcon(notification)
                                </div>

                                <!-- Content -->
                                <div class="flex-1 min-w-0">
                                    <!-- Header with User Info -->
                                    <div class="flex items-start justify-between mb-3">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-3 mb-2">
                                                <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                                                    @notification.Title
                                                </h3>
                                                @if (notification.Priority == NotificationPriority.Urgent)
                                                {
                                                    <span class="px-2.5 py-1 text-xs font-bold text-red-700 dark:text-red-400 bg-gradient-to-r from-red-100 to-pink-100 dark:from-red-900/50 dark:to-pink-900/50 rounded-full shadow-sm animate-pulse">
                                                        ðŸ”¥ URGENT
                                                    </span>
                                                }
                                                @if (!notification.IsRead)
                                                {
                                                    <span class="px-2.5 py-1 text-xs font-bold text-blue-700 dark:text-blue-400 bg-blue-100 dark:bg-blue-900/50 rounded-full">NEW</span>
                                                }
                                            </div>

                                            <!-- User Info Badge -->
                                            <div class="flex items-center space-x-3 mb-3">
                                                <div class="flex items-center space-x-2 px-3 py-1.5 bg-gradient-to-r from-indigo-100 to-purple-100 dark:from-indigo-900/30 dark:to-purple-900/30 rounded-lg border border-indigo-200 dark:border-indigo-800">
                                                    <svg class="w-4 h-4 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                    </svg>
                                                    <span class="text-sm font-semibold text-indigo-900 dark:text-indigo-200">@item.UserName</span>
                                                </div>
                                                <span class="text-sm font-medium text-gray-600 dark:text-gray-400">@item.UserEmail</span>
                                                <span class="px-2.5 py-1 text-xs font-bold rounded-full @GetRoleBadgeClass(item.UserRole)">
                                                    @item.UserRole
                                                </span>
                                            </div>

                                            <p class="text-sm text-gray-700 dark:text-gray-300 mb-3 leading-relaxed">
                                                @notification.Message
                                            </p>

                                            <!-- Metadata -->
                                            <div class="flex items-center flex-wrap gap-3 text-xs font-medium">
                                                <span class="flex items-center text-gray-500 dark:text-gray-400">
                                                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    @FormatDateTime(notification.CreatedAt)
                                                </span>
                                                <span class="px-3 py-1 bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-full text-gray-700 dark:text-gray-300 font-semibold">
                                                    @GetCategoryEmoji(notification.Category) @notification.Category.ToString()
                                                </span>
                                                <span class="px-3 py-1 @GetTypeBadgeClass(notification.Type) rounded-full font-semibold">
                                                    @notification.Type.ToString()
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if (totalCount > pageSize)
                {
                    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-lg p-6 border border-white/50 dark:border-gray-700/50 flex items-center justify-between flex-wrap gap-4">
                        <div class="text-sm text-gray-600 dark:text-gray-400 font-medium">
                            Showing <span class="font-bold text-gray-900 dark:text-white">@((currentPage - 1) * pageSize + 1)</span> to <span class="font-bold text-gray-900 dark:text-white">@Math.Min(currentPage * pageSize, totalCount)</span> of <span class="font-bold text-gray-900 dark:text-white">@totalCount</span> notifications
                        </div>
                        <div class="flex space-x-3">
                            <button @onclick="PreviousPage"
                                    disabled="@(currentPage == 1)"
                                    class="px-5 py-2.5 border-2 border-gray-300 dark:border-gray-600 rounded-xl text-sm font-semibold text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-primary-50 hover:to-accent-50 dark:hover:from-primary-900/30 dark:hover:to-accent-900/30 hover:border-primary-300 dark:hover:border-primary-600 disabled:opacity-40 disabled:cursor-not-allowed transition-all duration-300 flex items-center space-x-2">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                </svg>
                                <span>Previous</span>
                            </button>
                            <button @onclick="NextPage"
                                    disabled="@(currentPage * pageSize >= totalCount)"
                                    class="px-5 py-2.5 border-2 border-gray-300 dark:border-gray-600 rounded-xl text-sm font-semibold text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-primary-50 hover:to-accent-50 dark:hover:from-primary-900/30 dark:hover:to-accent-900/30 hover:border-primary-300 dark:hover:border-primary-600 disabled:opacity-40 disabled:cursor-not-allowed transition-all duration-300 flex items-center space-x-2">
                                <span>Next</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private List<AdminNotificationView> notifications = new();
    private int totalCount = 0;
    private int currentPage = 1;
    private int pageSize = 50;
    private bool isLoading = false;

    // Filters
    private string selectedCategory = "";
    private string selectedType = "";
    private DateTime? startDate;
    private DateTime? endDate;

    protected override async Task OnInitializedAsync()
    {
        await LoadNotifications();
    }

    private async Task LoadNotifications()
    {
        Console.WriteLine("AdminNotifications: LoadNotifications called");
        isLoading = true;
        StateHasChanged();

        try
        {
            NotificationCategory? categoryFilter = null;
            if (!string.IsNullOrEmpty(selectedCategory) && Enum.TryParse<NotificationCategory>(selectedCategory, out var cat))
                categoryFilter = cat;

            NotificationType? typeFilter = null;
            if (!string.IsNullOrEmpty(selectedType) && Enum.TryParse<NotificationType>(selectedType, out var type))
                typeFilter = type;

            DateTime? start = startDate;
            DateTime? end = endDate?.AddDays(1).AddSeconds(-1); // End of day

            Console.WriteLine($"AdminNotifications: Filters - Category: {categoryFilter}, Type: {typeFilter}, Start: {start}, End: {end}");
            Console.WriteLine($"AdminNotifications: Pagination - Skip: {(currentPage - 1) * pageSize}, Take: {pageSize}");

            var input = new GetAllNotificationsInput(
                UserId: null,
                Category: categoryFilter,
                Type: typeFilter,
                StartDate: start,
                EndDate: end,
                Skip: (currentPage - 1) * pageSize,
                Take: pageSize
            );

            Console.WriteLine("AdminNotifications: Calling GetAllNotificationsAsync...");
            var response = await NotificationService.GetAllNotificationsAsync(input);
            Console.WriteLine($"AdminNotifications: Response = {(response != null ? "not null" : "NULL")}");

            if (response != null)
            {
                Console.WriteLine($"AdminNotifications: Received {response.Notifications.Count} notifications, TotalCount = {response.TotalCount}");
                notifications = response.Notifications;
                totalCount = response.TotalCount;

                if (response.Notifications.Count == 0)
                {
                    Console.WriteLine("AdminNotifications: No notifications returned - this may indicate no data in database or filters are too restrictive");
                }
            }
            else
            {
                Console.WriteLine("AdminNotifications: Response was NULL - check GraphQL query and backend logs");
                ToastService.ShowWarning("No response from server. Please check your connection and try again.");
                notifications = new();
                totalCount = 0;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"AdminNotifications: ERROR - {ex.Message}");
            Console.WriteLine($"AdminNotifications: Stack trace: {ex.StackTrace}");
            ToastService.ShowError($"Failed to load notifications: {ex.Message}");
            notifications = new();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
            Console.WriteLine("AdminNotifications: LoadNotifications completed");
        }
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadNotifications();
    }

    private void PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            _ = LoadNotifications();
        }
    }

    private void NextPage()
    {
        if (currentPage * pageSize < totalCount)
        {
            currentPage++;
            _ = LoadNotifications();
        }
    }

