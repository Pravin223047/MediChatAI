@page "/admin/dashboard"
@using Microsoft.AspNetCore.Components.Authorization
@inject IAdminService AdminService
@inject IDoctorOnboardingService DoctorOnboardingService
@inject NavigationManager Navigation
@inject AppSettingsState AppSettings
@inject ThemeState ThemeState
@implements IDisposable

<PageTitle>Admin Dashboard - @AppSettings.Settings.SiteName</PageTitle>

<AuthorizeRouteGuard RequiredRole="Admin">

<div class="min-h-screen bg-theme dark:bg-gray-900">
    <!-- Modern Header with Glassmorphism -->
    <header class="backdrop-blur-md bg-card/80 dark:bg-gray-800/80 border-b border-gray-200/50 dark:border-gray-700/50 shadow-xl">
        <div class="py-8 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="p-3 bg-primary rounded-2xl shadow-lg">
                        <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900 dark:text-white">
                            Admin Dashboard
                        </h1>
                        <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">Welcome back, Administrator ‚ú®</p>
                    </div>
                </div>
                <div class="flex items-center space-x-6">
                    <AuthorizeView>
                        <Authorized>
                            <a href="/admin/profile" class="group flex items-center px-4 py-2 rounded-xl bg-card/60 dark:bg-gray-800/60 backdrop-blur-sm border border-gray-200/50 dark:border-gray-700/50 text-primary hover:bg-card dark:hover:bg-gray-700 font-medium transition-all duration-300 shadow-lg hover:shadow-xl">
                                <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                My Profile
                            </a>
                            <div class="flex items-center space-x-3">
                                <div class="text-right">
                                    <p class="text-sm font-medium text-gray-900 dark:text-gray-200">
                                        @context.User.FindFirst("firstName")?.Value @context.User.FindFirst("lastName")?.Value
                                    </p>
                                    <p class="text-xs text-gray-500 dark:text-gray-100">System Administrator</p>
                                </div>
                                <div class="relative">
                                    <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center shadow-lg">
                                        <span class="text-white font-bold text-lg">A</span>
                                    </div>
                                    <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-400 rounded-full border-2 border-white animate-pulse"></div>
                                </div>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </header>

    <!-- Modern Content Area -->
    <main class="py-8 px-4 sm:px-6 lg:px-8">
        <!-- Enhanced Stats Cards with Modern Design -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5 mb-12">
            <!-- Total Users Card -->
            <div class="group relative overflow-hidden bg-card dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
                <div class="absolute inset-0 bg-primary/5 dark:bg-primary/10"></div>
                <div class="relative p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider">Total Users</dt>
                            <dd class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">@(adminStats?.TotalUsers ?? 0)</dd>
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">üë• All system users</p>
                        </div>
                        <div class="p-3 bg-primary rounded-xl shadow-lg group-hover:scale-110 transition-transform duration-300">
                            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-4 h-1 bg-primary rounded-full"></div>
                </div>
            </div>

            <!-- Doctors Card -->
            <div class="group relative overflow-hidden bg-card dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
                <div class="absolute inset-0 bg-emerald-500/5 dark:bg-emerald-500/10"></div>
                <div class="relative p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider">Doctors</dt>
                            <dd class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">@(adminStats?.TotalDoctors ?? 0)</dd>
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">ü©∫ Medical professionals</p>
                        </div>
                        <div class="p-3 bg-emerald-500 rounded-xl shadow-lg group-hover:scale-110 transition-transform duration-300">
                            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-4 h-1 bg-emerald-500 rounded-full"></div>
                </div>
            </div>

            <!-- Patients Card -->
            <div class="group relative overflow-hidden bg-card dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
                <div class="absolute inset-0 bg-cyan-500/5 dark:bg-cyan-500/10"></div>
                <div class="relative p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider">Patients</dt>
                            <dd class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">@(adminStats?.TotalPatients ?? 0)</dd>
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">üè• Registered patients</p>
                        </div>
                        <div class="p-3 bg-cyan-500 rounded-xl shadow-lg group-hover:scale-110 transition-transform duration-300">
                            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-4 h-1 bg-cyan-500 rounded-full"></div>
                </div>
            </div>

            <!-- Active Today Card -->
            <div class="group relative overflow-hidden bg-card dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
                <div class="absolute inset-0 bg-green-500/5 dark:bg-green-500/10"></div>
                <div class="relative p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider">Active Today</dt>
                            <dd class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">@(adminStats?.ActiveUsersToday ?? 0)</dd>
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">‚ö° Online users</p>
                        </div>
                        <div class="p-3 bg-green-500 rounded-xl shadow-lg group-hover:scale-110 transition-transform duration-300">
                            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-4 h-1 bg-green-500 rounded-full animate-pulse"></div>
                </div>
            </div>

            <!-- Appointments Card -->
            <div class="group relative overflow-hidden bg-card dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105">
                <div class="absolute inset-0 bg-purple-500/5 dark:bg-purple-500/10"></div>
                <div class="relative p-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wider">Appointments</dt>
                            <dd class="mt-2 text-3xl font-bold text-gray-900 dark:text-white">@(adminStats?.TotalAppointments ?? 0)</dd>
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">üìÖ Total bookings</p>
                        </div>
                        <div class="p-3 bg-purple-500 rounded-xl shadow-lg group-hover:scale-110 transition-transform duration-300">
                            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-4 h-1 bg-purple-500 rounded-full"></div>
                </div>
            </div>
        </div>

        <!-- Modern Quick Actions with Beautiful Grid -->
        <div class="relative mb-12">
            <div class="absolute inset-0 bg-primary/5 dark:bg-primary/10 rounded-3xl"></div>
            <div class="relative bg-card/80 dark:bg-gray-800/80 backdrop-blur-lg border border-gray-200 dark:border-gray-700 rounded-3xl shadow-2xl p-8">
                <div class="text-center mb-8">
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
                        üöÄ Quick Actions
                    </h3>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">Manage your system with these powerful tools</p>
                </div>

                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5">
                    <!-- User Management -->
                    <button @onclick="NavigateToUsers" class="group relative overflow-hidden bg-card dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6 text-center hover:border-primary hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <div class="absolute inset-0 bg-primary/5 dark:bg-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative">
                            <div class="mx-auto w-16 h-16 bg-primary rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">User Management</h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Manage users, roles & permissions</p>
                        </div>
                    </button>

                    <!-- Analytics -->
                    <button @onclick="NavigateToAnalytics" class="group relative overflow-hidden bg-card dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6 text-center hover:border-emerald-500 hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <div class="absolute inset-0 bg-emerald-500/5 dark:bg-emerald-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative">
                            <div class="mx-auto w-16 h-16 bg-emerald-500 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Analytics</h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400">View system analytics & reports</p>
                        </div>
                    </button>

                    <!-- Settings -->
                    <button @onclick="NavigateToSettings" class="group relative overflow-hidden bg-card dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6 text-center hover:border-accent hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <div class="absolute inset-0 bg-accent/5 dark:bg-accent/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative">
                            <div class="mx-auto w-16 h-16 bg-accent rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Settings</h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Configure system settings</p>
                        </div>
                    </button>

                    <!-- Audit Logs -->
                    <button @onclick="NavigateToAuditLogs" class="group relative overflow-hidden bg-card dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6 text-center hover:border-orange-500 hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <div class="absolute inset-0 bg-orange-500/5 dark:bg-orange-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative">
                            <div class="mx-auto w-16 h-16 bg-orange-500 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Audit Logs</h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Monitor system activity logs</p>
                        </div>
                    </button>

                    <!-- Appointments -->
                    <button @onclick="NavigateToAppointments" class="group relative overflow-hidden bg-card dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 rounded-2xl p-6 text-center hover:border-purple-500 hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                        <div class="absolute inset-0 bg-purple-500/5 dark:bg-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="relative">
                            <div class="mx-auto w-16 h-16 bg-purple-500 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Appointments</h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Manage all appointments</p>
                        </div>
                    </button>
                </div>
            </div>
        </div>

        <!-- Modern Recent Activity Section - Top 3 Only -->
        <div class="relative">
            <div class="absolute inset-0 bg-primary/5 dark:bg-primary/10 rounded-3xl"></div>
            <div class="relative bg-card/80 dark:bg-gray-800/80 backdrop-blur-lg border border-gray-200 dark:border-gray-700 rounded-3xl shadow-2xl overflow-hidden">
                <!-- Beautiful Header -->
                <div class="bg-primary px-8 py-6">
                    <div class="flex justify-between items-center">
                        <div class="flex items-center space-x-3">
                            <div class="p-2 bg-white/20 dark:bg-white/10 rounded-xl backdrop-blur-sm">
                                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white">üìà Recent Activity</h3>
                                <p class="text-indigo-100 text-sm">Latest 3 system activities</p>
                            </div>
                        </div>
                        <button @onclick="NavigateToAuditLogs" class="group flex items-center px-4 py-2 bg-white/20 dark:bg-white/10 backdrop-blur-sm rounded-xl text-white hover:bg-white/30 dark:hover:bg-white/20 transition-all duration-300 border border-white/20 dark:border-white/10">
                            <span class="text-sm font-medium mr-2">View All</span>
                            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Activity Content -->
                <div class="p-8">
                    @if (isLoadingActivities)
                    {
                        <div class="flex justify-center items-center py-12">
                            <div class="relative">
                                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
                                <div class="absolute inset-0 animate-ping rounded-full h-8 w-8 border border-indigo-400 opacity-20"></div>
                            </div>
                            <span class="ml-3 text-gray-600 font-medium">Loading activities...</span>
                        </div>
                    }
                    else if (recentActivities?.Any() == true)
                    {
                        <div class="space-y-6">
                            @{
                                var displayActivities = recentActivities.Take(3).ToList();
                            }
                            @for (int i = 0; i < displayActivities.Count; i++)
                            {
                                var activity = displayActivities[i];
                                var isLast = i == displayActivities.Count - 1;

                                <div class="group relative overflow-hidden bg-card dark:bg-gray-800 rounded-2xl p-6 border border-gray-200 dark:border-gray-700 hover:shadow-lg hover:scale-[1.02] transition-all duration-300">
                                    <div class="flex items-start space-x-4">
                                        <!-- Enhanced Activity Icon -->
                                        <div class="relative">
                                            <div class="w-12 h-12 rounded-2xl @GetActivityIconColor(activity.ActivityType) flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
                                                @((MarkupString)GetActivityIcon(activity.ActivityType))
                                            </div>
                                            @if (i == 0)
                                            {
                                                <div class="absolute -top-1 -right-1 w-4 h-4 bg-green-400 rounded-full border-2 border-white animate-pulse"></div>
                                            }
                                        </div>

                                        <!-- Activity Details -->
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-start justify-between">
                                                <div class="flex-1">
                                                    <div class="flex items-center space-x-2 mb-2">
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @GetActivityBadgeColor(activity.ActivityType)">
                                                            @activity.ActivityType
                                                        </span>
                                                        @if (i == 0)
                                                        {
                                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                                Latest
                                                            </span>
                                                        }
                                                    </div>
                                                    <p class="text-sm text-gray-900 dark:text-gray-200 font-medium mb-1">
                                                        <span class="text-primary dark:text-primary font-semibold">@activity.UserName</span>
                                                        @activity.Description
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(activity.Details))
                                                    {
                                                        <p class="text-xs text-gray-500 bg-gray-50 px-3 py-1 rounded-lg inline-block">
                                                            @activity.Details
                                                        </p>
                                                    }
                                                </div>
                                                <div class="text-right ml-4">
                                                    <time class="text-sm font-medium text-gray-900 dark:text-gray-200">@GetRelativeTime(activity.Timestamp)</time>
                                                    <p class="text-xs text-gray-500 dark:text-gray-100 mt-1">@activity.Timestamp.ToString("MMM dd, HH:mm")</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Decorative Line -->
                                    @if (!isLast)
                                    {
