@page "/admin/audit-logs"
@using Microsoft.AspNetCore.Components.Authorization
@inject IAdminService AdminService
@inject NavigationManager Navigation
@inject ThemeState ThemeState
@implements IDisposable

<PageTitle>Audit Logs - MediChat.AI Admin</PageTitle>

<AuthorizeRouteGuard RequiredRole="Admin">

<div class="min-h-screen bg-theme dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-card dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
        <div class="py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div>
                    <nav class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                        <a href="/admin/dashboard" class="hover:text-gray-700 dark:hover:text-gray-300 transition-colors">Admin</a>
                        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                        </svg>
                        <span class="text-gray-900 dark:text-white font-medium">Audit Logs</span>
                    </nav>
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">Audit Logs</h1>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Monitor all user activities and system events</p>
                </div>
                <div class="flex items-center space-x-3">
                    <button @onclick="ExportLogs" disabled="@isLoading"
                            class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary disabled:opacity-50 transition-colors">
                        <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                        Export
                    </button>
                    <button @onclick="RefreshLogs" disabled="@isLoading"
                            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:opacity-90 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary disabled:opacity-50 transition-all">
                        <svg class="h-4 w-4 mr-2 @(isLoading ? "animate-spin" : "")" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        Refresh
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="py-6 sm:px-6 lg:px-8">
        <!-- Filters Section -->
        <div class="bg-card dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 mb-6">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Filters</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Filter audit logs by various criteria</p>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <!-- Activity Type Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Activity Type</label>
                        <select @bind="selectedActivityType" @oninput="OnFilterChanged"
                                class="block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
                            <option value="">All Activities</option>
                            <option value="Login">Login</option>
                            <option value="Register">Registration</option>
                            <option value="ProfileUpdate">Profile Update</option>
                            <option value="PasswordChange">Password Change</option>
                            <option value="EmailVerification">Email Verification</option>
                            <option value="AccountLocked">Account Locked</option>
                            <option value="AccountUnlocked">Account Unlocked</option>
                            <option value="RoleChanged">Role Changed</option>
                            <option value="AccountDeleted">Account Deleted</option>
                        </select>
                    </div>

                    <!-- User Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">User Email</label>
                        <input type="text" @bind="userEmailFilter" @oninput="OnFilterChanged" placeholder="Search by email..."
                               class="block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
                    </div>

                    <!-- Date From Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">From Date</label>
                        <input type="date" @bind="fromDate" @oninput="OnFilterChanged"
                               class="block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
                    </div>

                    <!-- Date To Filter -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">To Date</label>
                        <input type="date" @bind="toDate" @oninput="OnFilterChanged"
                               class="block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
                    </div>
                </div>

                <!-- Search Bar -->
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </div>
                        <input type="text" @bind="searchTerm" @oninput="OnFilterChanged" placeholder="Search in descriptions, details, or user names..."
                               class="block w-full pl-10 pr-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md leading-5 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-primary focus:border-primary sm:text-sm">
                    </div>
                </div>

                <!-- Quick Filter Buttons -->
                <div class="mt-4 flex flex-wrap gap-2">
                    <button @onclick="ApplyTodayFilter"
                            class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary hover:bg-primary/20 dark:bg-primary/20 dark:hover:bg-primary/30 transition-colors">
                        Today
                    </button>
                    <button @onclick="ApplyWeekFilter"
                            class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 dark:bg-emerald-900/30 text-emerald-800 dark:text-emerald-300 hover:bg-emerald-200 dark:hover:bg-emerald-900/50 transition-colors">
                        This Week
                    </button>
                    <button @onclick="ApplyMonthFilter"
                            class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-accent/10 text-accent hover:bg-accent/20 dark:bg-accent/20 dark:hover:bg-accent/30 transition-colors">
                        This Month
                    </button>
                    <button @onclick="ClearFilters"
                            class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
                        Clear All
                    </button>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-card dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-primary dark:text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Activities</p>
                        <p class="text-2xl font-semibold text-gray-900 dark:text-white">@totalActivities</p>
                    </div>
                </div>
            </div>

            <div class="bg-card dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Logins Today</p>
                        <p class="text-2xl font-semibold text-gray-900 dark:text-white">@loginsToday</p>
                    </div>
                </div>
            </div>

            <div class="bg-card dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.99-.833-2.76 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Security Events</p>
                        <p class="text-2xl font-semibold text-gray-900 dark:text-white">@securityEvents</p>
                    </div>
                </div>
            </div>

            <div class="bg-card dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-4">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-accent dark:text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Users</p>
                        <p class="text-2xl font-semibold text-gray-900 dark:text-white">@activeUsers</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activities Table -->
        <div class="bg-card dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
                <div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">Activity Log</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                        @if (isLoading)
                        {
                            <span>Loading activities...</span>
                        }
                        else
                        {
                            <span>Showing @activities.Count of @totalActivities activities</span>
                        }
                    </p>
                </div>
                <div class="flex items-center space-x-2">
                    <select @bind="pageSize" @bind:after="OnPageSizeChanged"
                            class="text-sm border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white rounded px-2 py-1 focus:outline-none focus:ring-1 focus:ring-primary">
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                        <option value="100">100 per page</option>
                    </select>
                </div>
            </div>

            @if (isLoading)
            {
                <div class="flex justify-center items-center py-12">
                    <div class="flex items-center space-x-2">
                        <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-primary"></div>
                        <span class="text-gray-600 dark:text-gray-400">Loading audit logs...</span>
                    </div>
                </div>
            }
            else if (activities?.Any() == true)
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-gray-700">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Activity</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">User</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Description</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Details</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Time</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">IP Address</th>
                            </tr>
                        </thead>
                        <tbody class="bg-card dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                            @foreach (var activity in activities)
                            {
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <span class="inline-flex items-center justify-center h-8 w-8 rounded-full @GetActivityIconColor(activity.ActivityType) text-white text-xs font-medium">
                                                @((MarkupString)GetActivityIcon(activity.ActivityType))
                                            </span>
                                            <div class="ml-3">
                                                <div class="text-sm font-medium text-gray-900 dark:text-white">@GetActivityDisplayName(activity.ActivityType)</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">@activity.ActivityType</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div>
                                            <div class="text-sm font-medium text-gray-900 dark:text-white">@activity.UserName</div>
                                            <div class="text-sm text-gray-500 dark:text-gray-400">@activity.UserEmail</div>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium @GetRoleBadgeColor(activity.UserRole)">
                                                @activity.UserRole
                                            </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-gray-900 dark:text-white">@activity.Description</div>
                                    </td>
                                    <td class="px-6 py-4">
                                        @if (!string.IsNullOrEmpty(activity.Details))
                                        {
                                            <div class="text-sm text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-gray-700 rounded px-2 py-1 max-w-xs">
                                                @activity.Details
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400 dark:text-gray-500 text-sm">â€”</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900 dark:text-white">@activity.Timestamp.ToString("MMM dd, yyyy")</div>
                                        <div class="text-xs text-gray-500 dark:text-gray-400">@activity.Timestamp.ToString("HH:mm:ss UTC")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="text-sm text-gray-600 dark:text-gray-400 font-mono">@activity.IpAddress</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="bg-white dark:bg-gray-900 px-4 py-3 border-t border-gray-200 dark:border-gray-900 sm:px-6">
                    <div class="flex items-center justify-between">
                        <div class="flex-1 flex justify-between sm:hidden">
                            <button @onclick="PreviousPage" disabled="@(currentPage <= 1)"
                                    class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                Previous
                            </button>
                            <button @onclick="NextPage" disabled="@(currentPage >= totalPages)"
                                    class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                Next
                            </button>
                        </div>
                        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                            <div>
                                <p class="text-sm text-gray-700 dark:text-gray-100">
                                    Showing <span class="font-medium">@((currentPage - 1) * pageSize + 1)</span> to
                                    <span class="font-medium">@Math.Min(currentPage * pageSize, totalActivities)</span> of
                                    <span class="font-medium">@totalActivities</span> results
                                </p>
                            </div>
                            <div>
                                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                                    <button @onclick="PreviousPage" disabled="@(currentPage <= 1)"
                                            class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                        <span class="sr-only">Previous</span>
                                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                    </button>

                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        var pageNumber = i;
                                        <button @onclick="() => GoToPage(pageNumber)"
                                                class="relative inline-flex items-center px-4 py-2 border @(pageNumber == currentPage ? "bg-indigo-50 dark:bg-indigo-900 border-primary text-primary dark:text-primary" : "bg-white dark:bg-gray-900 border-gray-300 text-gray-500 hover:bg-gray-50") text-sm font-medium">
                                            @pageNumber
                                        </button>
                                    }

                                    <button @onclick="NextPage" disabled="@(currentPage >= totalPages)"
                                            class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                                        <span class="sr-only">Next</span>
                                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                        </svg>
                                    </button>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No activities found</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">No activities match your current filters.</p>
                    <div class="mt-6">
                        <button @onclick="ClearFilters"
                                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary hover:opacity-90 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all">
                            Clear Filters
                        </button>
                    </div>
                </div>
            }
        </div>
    </main>
</div>

</AuthorizeRouteGuard>

@code {
    private List<UserActivityDto> activities = new();
    private bool isLoading = false;
    private int currentPage = 1;
    private int pageSize = 25;
    private int totalActivities = 0;
    private int totalPages = 0;

    // Filter properties
    private string selectedActivityType = "";
    private string userEmailFilter = "";
    private DateTime? fromDate;
    private DateTime? toDate;
    private string searchTerm = "";

    // Statistics
    private int loginsToday = 0;
    private int securityEvents = 0;
    private int activeUsers = 0;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to theme changes
        ThemeState.OnChange += OnThemeChanged;

        await LoadActivities();
        await LoadStatistics();
    }

    private void OnThemeChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task LoadActivities()
    {
        isLoading = true;
        try
        {
            var input = new GetUserActivitiesInput(
                Skip: (currentPage - 1) * pageSize,
                Take: pageSize,
                ActivityType: string.IsNullOrEmpty(selectedActivityType) ? null : selectedActivityType,
                FromDate: fromDate,
                ToDate: toDate,
                SortBy: "Timestamp",
                SortDescending: true
            );

            var result = await AdminService.GetUserActivitiesAsync(input);
            if (result?.Success == true)
            {
                activities = result.Activities;
                totalActivities = result.TotalCount;
                totalPages = (int)Math.Ceiling((double)totalActivities / pageSize);

                // Apply client-side filtering for user email and search term
                if (!string.IsNullOrEmpty(userEmailFilter) || !string.IsNullOrEmpty(searchTerm))
                {
                    activities = activities.Where(a =>
                        (string.IsNullOrEmpty(userEmailFilter) || a.UserEmail.Contains(userEmailFilter, StringComparison.OrdinalIgnoreCase)) &&
                        (string.IsNullOrEmpty(searchTerm) ||
                         a.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                         a.Details?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) == true ||
                         a.UserName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                    ).ToList();
                }
            }
            else
            {
                activities = new List<UserActivityDto>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading activities: {ex.Message}");
            activities = new List<UserActivityDto>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

