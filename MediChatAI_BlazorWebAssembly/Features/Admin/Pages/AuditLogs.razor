    private async Task ApplyQuickFilter(string filterType)
    {
        var now = DateTime.UtcNow;
        switch (filterType)
        {
            case "today":
                fromDate = now.Date;
                toDate = now.Date.AddDays(1);
                break;
            case "week":
                fromDate = now.Date.AddDays(-(int)now.DayOfWeek);
                toDate = fromDate.Value.AddDays(7);
                break;
            case "month":
                fromDate = new DateTime(now.Year, now.Month, 1);
                toDate = fromDate.Value.AddMonths(1);
                break;
        }
        await OnFilterChanged();
    }

