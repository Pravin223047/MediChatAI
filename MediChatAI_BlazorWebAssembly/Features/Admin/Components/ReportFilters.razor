@inject IToastService ToastService

<div class="bg-card/80 dark:bg-gray-800/80 backdrop-blur-lg border border-gray-200 dark:border-gray-700 rounded-2xl shadow-xl overflow-hidden">

    <!-- Filter Header -->
    <div class="p-4 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-primary/5 to-accent/5">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                </svg>
                <h3 class="font-semibold text-gray-900 dark:text-white">Advanced Filters</h3>
            </div>
            <div class="flex items-center space-x-2">
                <button @onclick="SaveFilterPreset" class="text-sm text-primary hover:underline">
                    Save Preset
                </button>
                <button @onclick="ClearFilters" class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
                    Clear All
                </button>
            </div>
        </div>
    </div>

    <!-- Filter Content -->
    <div class="p-4 space-y-4 max-h-[600px] overflow-y-auto custom-scrollbar">

        <!-- Date Range Filter -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Date Range</label>
            <div class="grid grid-cols-2 gap-2">
                <input type="date" @bind="FromDate" @bind:event="oninput" @onchange="OnFilterChange"
                       class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary" />
                <input type="date" @bind="ToDate" @bind:event="oninput" @onchange="OnFilterChange"
                       class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary" />
            </div>
            <div class="flex flex-wrap gap-2 mt-2">
                <button @onclick='() => SetDateRange(7)' class="px-3 py-1 text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">Last 7 Days</button>
                <button @onclick='() => SetDateRange(30)' class="px-3 py-1 text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">Last 30 Days</button>
                <button @onclick='() => SetDateRange(90)' class="px-3 py-1 text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">Last 90 Days</button>
                <button @onclick='() => SetDateRange(365)' class="px-3 py-1 text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">Last Year</button>
            </div>
        </div>

        <!-- User Role Filter -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">User Role</label>
            <select value="@SelectedRole" @onchange="@(e => { SelectedRole = e.Value?.ToString() ?? ""; _ = OnFilterChange(); })"
                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary">
                <option value="">All Roles</option>
                <option value="Admin">Admin</option>
                <option value="Doctor">Doctor</option>
                <option value="Patient">Patient</option>
            </select>
        </div>

        <!-- Activity Type Filter -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Activity Type</label>
            <select value="@SelectedActivityType" @onchange="@(e => { SelectedActivityType = e.Value?.ToString() ?? ""; _ = OnFilterChange(); })"
                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary">
                <option value="">All Activities</option>
                <option value="Login">Login</option>
                <option value="Register">Register</option>
                <option value="ProfileUpdate">Profile Update</option>
                <option value="PasswordChange">Password Change</option>
                <option value="Logout">Logout</option>
            </select>
        </div>

        <!-- Status Filter -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">User Status</label>
            <select value="@SelectedStatus" @onchange="@(e => { SelectedStatus = e.Value?.ToString() ?? ""; _ = OnFilterChange(); })"
                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary">
                <option value="">All Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>

        <!-- Report Type Filter -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Report Type</label>
            <div class="space-y-2">
                <label class="flex items-center space-x-2 cursor-pointer">
                    <input type="checkbox" checked="@IncludeCharts" @onchange="@(e => { IncludeCharts = (bool)(e.Value ?? false); _ = OnFilterChange(); })"
                           class="w-4 h-4 text-primary rounded focus:ring-2 focus:ring-primary" />
                    <span class="text-sm text-gray-700 dark:text-gray-300">Include Charts</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                    <input type="checkbox" checked="@IncludeTables" @onchange="@(e => { IncludeTables = (bool)(e.Value ?? false); _ = OnFilterChange(); })"
                           class="w-4 h-4 text-primary rounded focus:ring-2 focus:ring-primary" />
                    <span class="text-sm text-gray-700 dark:text-gray-300">Include Tables</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                    <input type="checkbox" checked="@IncludeMetrics" @onchange="@(e => { IncludeMetrics = (bool)(e.Value ?? false); _ = OnFilterChange(); })"
                           class="w-4 h-4 text-primary rounded focus:ring-2 focus:ring-primary" />
                    <span class="text-sm text-gray-700 dark:text-gray-300">Include Metrics</span>
                </label>
            </div>
        </div>

        <!-- Grouping Options -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Group By</label>
            <select value="@GroupBy" @onchange="@(e => { GroupBy = e.Value?.ToString() ?? "none"; _ = OnFilterChange(); })"
                    class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary">
                <option value="none">No Grouping</option>
                <option value="day">By Day</option>
                <option value="week">By Week</option>
                <option value="month">By Month</option>
                <option value="quarter">By Quarter</option>
                <option value="year">By Year</option>
            </select>
        </div>

        <!-- Sorting Options -->
        <div class="space-y-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Sort By</label>
            <div class="grid grid-cols-2 gap-2">
                <select value="@SortBy" @onchange="@(e => { SortBy = e.Value?.ToString() ?? "date"; _ = OnFilterChange(); })"
                        class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary">
                    <option value="date">Date</option>
                    <option value="count">Count</option>
                    <option value="name">Name</option>
                    <option value="type">Type</option>
                </select>
                <select value="@SortOrder" @onchange="@(e => { SortOrder = e.Value?.ToString() ?? "desc"; _ = OnFilterChange(); })"
                        class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary">
                    <option value="desc">Descending</option>
                    <option value="asc">Ascending</option>
                </select>
            </div>
        </div>

        <!-- Saved Presets -->
        @if (SavedPresets.Any())
        {
            <div class="space-y-2 pt-4 border-t border-gray-200 dark:border-gray-700">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Saved Presets</label>
                <div class="space-y-2">
                    @foreach (var preset in SavedPresets)
                    {
                        <button @onclick="() => LoadPreset(preset)"
                                class="w-full flex items-center justify-between p-2 text-sm bg-gray-50 dark:bg-gray-700/50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors">
                            <span class="text-gray-900 dark:text-white">@preset.Name</span>
                            <button @onclick:stopPropagation @onclick="() => DeletePreset(preset)" class="text-red-500 hover:text-red-700">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </button>
                    }
                </div>
            </div>
        }

    </div>

    <!-- Filter Actions -->
    <div class="p-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/50">
        <button @onclick="ApplyFilters"
                class="w-full px-4 py-2 bg-primary text-white rounded-lg hover:opacity-90 transition-all font-medium">
            Apply Filters
        </button>
    </div>

</div>

@code {
    [Parameter] public DateTime FromDate { get; set; } = DateTime.UtcNow.AddDays(-30);
    [Parameter] public DateTime ToDate { get; set; } = DateTime.UtcNow;
    [Parameter] public string SelectedRole { get; set; } = "";
    [Parameter] public string SelectedActivityType { get; set; } = "";
    [Parameter] public string SelectedStatus { get; set; } = "";
    [Parameter] public bool IncludeCharts { get; set; } = true;
    [Parameter] public bool IncludeTables { get; set; } = true;
    [Parameter] public bool IncludeMetrics { get; set; } = true;
    [Parameter] public string GroupBy { get; set; } = "none";
    [Parameter] public string SortBy { get; set; } = "date";
    [Parameter] public string SortOrder { get; set; } = "desc";
    [Parameter] public EventCallback<ReportFilterModel> OnApplyFilters { get; set; }
    [Parameter] public EventCallback OnFilterChanged { get; set; }

    private List<FilterPreset> SavedPresets = new();

    protected override void OnInitialized()
    {
        // Load saved presets from local storage or service
        SavedPresets = new List<FilterPreset>
        {
            new FilterPreset { Id = "1", Name = "Last Week Activity", Description = "Activity from last 7 days" },
            new FilterPreset { Id = "2", Name = "New Users This Month", Description = "Registrations this month" }
        };
    }

    private async Task SetDateRange(int days)
    {
        FromDate = DateTime.UtcNow.AddDays(-days);
        ToDate = DateTime.UtcNow;
        await OnFilterChange();
    }

    private async Task OnFilterChange()
    {
        await OnFilterChanged.InvokeAsync();
    }

    private async Task ApplyFilters()
    {
        var filterModel = new ReportFilterModel
        {
            FromDate = FromDate,
            ToDate = ToDate,
            Role = SelectedRole,
            ActivityType = SelectedActivityType,
            Status = SelectedStatus,
            IncludeCharts = IncludeCharts,
            IncludeTables = IncludeTables,
            IncludeMetrics = IncludeMetrics,
            GroupBy = GroupBy,
            SortBy = SortBy,
            SortOrder = SortOrder
        };

        await OnApplyFilters.InvokeAsync(filterModel);
        ToastService.ShowSuccess("Filters applied successfully!");
    }

    private async Task ClearFilters()
    {
        FromDate = DateTime.UtcNow.AddDays(-30);
        ToDate = DateTime.UtcNow;
        SelectedRole = "";
        SelectedActivityType = "";
        SelectedStatus = "";
        IncludeCharts = true;
        IncludeTables = true;
        IncludeMetrics = true;
        GroupBy = "none";
        SortBy = "date";
        SortOrder = "desc";

        ToastService.ShowSuccess("Filters cleared!");
        await OnFilterChange();
    }

    private void SaveFilterPreset()
    {
        ToastService.ShowInfo("Save filter preset feature coming soon!");
    }

    private void LoadPreset(FilterPreset preset)
    {
        ToastService.ShowInfo($"Loading preset: {preset.Name}");
        // Load preset values
    }

    private void DeletePreset(FilterPreset preset)
    {
        SavedPresets.Remove(preset);
        ToastService.ShowSuccess("Preset deleted");
        StateHasChanged();
    }

    public class FilterPreset
    {
        public string Id { get; set; } = "";
        public string Name { get; set; } = "";
        public string Description { get; set; } = "";
    }

    public class ReportFilterModel
    {
        public DateTime FromDate { get; set; }
        public DateTime ToDate { get; set; }
        public string Role { get; set; } = "";
        public string ActivityType { get; set; } = "";
        public string Status { get; set; } = "";
        public bool IncludeCharts { get; set; }
        public bool IncludeTables { get; set; }
        public bool IncludeMetrics { get; set; }
        public string GroupBy { get; set; } = "";
        public string SortBy { get; set; } = "";
        public string SortOrder { get; set; } = "";
    }
}
