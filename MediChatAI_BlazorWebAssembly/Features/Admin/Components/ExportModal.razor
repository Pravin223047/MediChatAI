@* Export Modal Component for Analytics Data *@

<ModalBase IsOpen="@IsOpen"
           Title="Export Analytics Data"
           Subtitle="Choose a format to download your data"
           Size="lg"
           ShowCloseButton="true"
           CloseOnBackdropClick="true"
           CloseOnEscape="true"
           OnClose="@OnClose">
