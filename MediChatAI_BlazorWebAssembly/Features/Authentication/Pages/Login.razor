@page "/login"
@using Microsoft.AspNetCore.Components.Authorization
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject AppSettingsState AppSettings
@inject IToastService ToastService

<PageTitle>Login - @AppSettings.Settings.SiteName</PageTitle>

<AnonymousOnly>

<div class="flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-8 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
    <div class="max-w-xl w-full">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-2xl mb-4">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">@AppSettings.Settings.SiteName</h1>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                Welcome Back
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">
                New here?
                <a href="/register" class="font-semibold text-primary hover:text-primary transition-colors">
                    Create an account
                </a>
            </p>
        </div>

        <!-- Auth Card -->
        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-lg rounded-2xl shadow-xl dark:shadow-2xl border border-gray-200 dark:border-gray-700 p-8 transition-all duration-300">

            <EditForm Model="@loginRequest" OnValidSubmit="@HandleLogin" class="space-y-5">
                <DataAnnotationsValidator />

                <!-- Email Input -->
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email Address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                            </svg>
                        </div>
                        <InputText id="email" @bind-Value="loginRequest.Email"
                                  class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                  placeholder="your@email.com" />
                    </div>
                    <ValidationMessage For="@(() => loginRequest.Email)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                </div>

                <!-- Password Input -->
                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                        <InputText type="password" id="password" @bind-Value="loginRequest.Password"
                                  class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                  placeholder="Enter your password" />
                    </div>
                    <ValidationMessage For="@(() => loginRequest.Password)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" name="remember-me" type="checkbox" @bind="loginRequest.RememberMe"
                               class="h-4 w-4 text-primary focus:ring-primary border-gray-300 dark:border-gray-600 rounded cursor-pointer">
                        <label for="remember-me" class="ml-2 block text-sm text-gray-700 dark:text-gray-300 cursor-pointer">
                            Remember me
                        </label>
                    </div>
                    <div class="text-sm">
                        <a href="/forgot-password" class="font-medium text-primary hover:text-primary transition-colors">
                            Forgot password?
                        </a>
                    </div>
                </div>


                <!-- Email Verification Prompt -->
                @if (showEmailVerificationPrompt)
                {
                    <div class="rounded-xl bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 p-5">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-amber-500 dark:text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3 flex-1">
                                <h3 class="text-sm font-semibold text-amber-800 dark:text-amber-300">Email Verification Required</h3>
                                <p class="text-sm text-amber-700 dark:text-amber-400 mt-1">Your email address needs to be verified before you can log in.</p>
                                <div class="mt-4 flex flex-col sm:flex-row gap-2">
                                    <button type="button" @onclick="SendVerificationOtp" disabled="@isLoading"
                                            class="inline-flex items-center justify-center px-4 py-2 bg-amber-600 hover:bg-amber-700 dark:bg-amber-500 dark:hover:bg-amber-600 text-white font-medium rounded-lg text-sm disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                                        @if (isLoading)
                                        {
                                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            <span>Sending...</span>
                                        }
                                        else
                                        {
                                            <span>Send Verification Code</span>
                                        }
                                    </button>
                                    <button type="button" @onclick="() => showEmailVerificationPrompt = false"
                                            class="inline-flex items-center justify-center px-4 py-2 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium rounded-lg text-sm transition-colors">
                                        Back to Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- 2FA Authenticator Prompt -->
                @if (showAuthenticatorPrompt)
                {
                    <div class="rounded-xl bg-blue-50 dark:bg-blue-900/20 border-2 border-blue-200 dark:border-blue-800 p-5">
                        <div class="flex flex-col space-y-4">
                            <div class="flex items-start">
                                <div class="flex-shrink-0">
                                    <div class="w-12 h-12 bg-primary/10 dark:bg-primary/20 rounded-xl flex items-center justify-center">
                                        <svg class="h-6 w-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                        </svg>
                                    </div>
                                </div>
                                <div class="ml-3 flex-1">
                                    <h3 class="text-base font-semibold text-gray-900 dark:text-white">Two-Factor Authentication</h3>
                                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Enter the 6-digit code from your authenticator app</p>
                                </div>
                            </div>
                            <div>
                                <input type="text" @bind="authenticatorCode" @bind:event="oninput" maxlength="6"
                                       placeholder="000000"
                                       class="w-full px-4 py-4 text-center text-2xl font-mono tracking-widest border-2 border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-200"
                                       disabled="@isVerifyingAuthenticator" />
                                @if (!string.IsNullOrEmpty(authenticatorError))
                                {
                                    <p class="text-red-500 dark:text-red-400 text-sm mt-2 ml-1">@authenticatorError</p>
                                }
                            </div>
                            <div class="flex flex-col sm:flex-row gap-2">
                                <button type="button" @onclick="VerifyAuthenticatorCode" disabled="@(isVerifyingAuthenticator || authenticatorCode.Length != 6)"
                                        class="flex-1 inline-flex items-center justify-center bg-primary hover:bg-primary dark:hover:bg-primary text-white font-semibold py-3 px-4 rounded-xl text-sm disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200">
                                    @if (isVerifyingAuthenticator)
                                    {
                                        <span class="flex items-center justify-center">
                                            <svg class="animate-spin -ml-1 mr-2 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                            </svg>
                                            Verifying...
                                        </span>
                                    }
                                    else
                                    {
                                        <span>Verify Code</span>
                                    }
                                </button>
                                <button type="button" @onclick="CancelAuthenticator"
                                        class="inline-flex items-center justify-center bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-semibold py-3 px-4 rounded-xl text-sm transition-all duration-200">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                }


                <!-- Submit Button -->
                <div class="pt-2">
                    <button type="submit" disabled="@isLoading"
                            class="group relative w-full flex items-center justify-center py-3.5 px-4 border border-transparent text-base font-semibold rounded-xl text-white bg-primary hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 shadow-lg hover:shadow-xl">
                        @if (isLoading)
                        {
                            <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Signing in...</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                            </svg>
                            <span>Sign in</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {

    private LoginRequest loginRequest = new();

    private bool isLoading = false;
    private bool showEmailVerificationPrompt = false;
    private bool showAuthenticatorPrompt = false;
    private bool isVerifyingAuthenticator = false;
    private string authenticatorCode = string.Empty;
    private string authenticatorError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            // User is already logged in, redirect to dashboard
            RedirectToDashboard(authState);
        }
        else
        {
            // Load remembered credentials if available
            var (rememberedEmail, rememberedPassword, rememberMe) = await AuthService.GetRememberedCredentialsAsync();
            if (rememberMe && !string.IsNullOrEmpty(rememberedEmail) && !string.IsNullOrEmpty(rememberedPassword))
            {
                loginRequest.Email = rememberedEmail;
                loginRequest.Password = rememberedPassword;
                loginRequest.RememberMe = true;
                StateHasChanged();
            }
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        showEmailVerificationPrompt = false;
        showAuthenticatorPrompt = false;

        try
        {
            var result = await AuthService.LoginAsync(loginRequest);

            if (result.Success && result.User != null)
            {
                // Clear remembered credentials if remember me is not checked
                if (!loginRequest.RememberMe)
                {
                    await AuthService.ClearRememberedCredentialsAsync();
                }

                // Navigate to dashboard - session notification will be shown by MainLayout
                var dashboardUrl = result.User.Role switch
                {
                    "Admin" => "/admin/dashboard",
                    "Doctor" => "/doctor/dashboard",
                    "Patient" => "/patient/dashboard",
                    _ => "/patient/dashboard"
                };

                // Force reload to ensure fresh component state and onboarding status
                Navigation.NavigateTo(dashboardUrl, forceLoad: true);
            }
            else
            {
                var errors = string.Join(", ", result.Errors);
                if (errors.Contains("EMAIL_NOT_VERIFIED"))
                {
                    showEmailVerificationPrompt = true;
                }
                else if (errors.Contains("AUTHENTICATOR_REQUIRED"))
                {
                    showAuthenticatorPrompt = true;
                    authenticatorCode = string.Empty;
                    authenticatorError = string.Empty;
                }
                else
                {
                    ToastService.ShowError(errors.Replace("EMAIL_NOT_VERIFIED", "Please verify your email before logging in")
                                         .Replace("AUTHENTICATOR_REQUIRED", "Two-factor authentication required"));
                }
            }
        }
        catch (Exception)
        {
            ToastService.ShowError("An unexpected error occurred. Please try again.");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SendVerificationOtp()
    {
        if (string.IsNullOrEmpty(loginRequest.Email))
        {
            ToastService.ShowError("Please enter your email address first.");
            showEmailVerificationPrompt = false;
            return;
        }

        isLoading = true;

        try
        {
            var result = await AuthService.SendOtpAsync(loginRequest.Email);

            if (result.Success)
            {
                Navigation.NavigateTo($"/verify-otp?email={Uri.EscapeDataString(loginRequest.Email)}");
            }
            else
            {
                ToastService.ShowError(string.Join(", ", result.Errors));
                showEmailVerificationPrompt = false;
            }
        }
        catch (Exception)
        {
            ToastService.ShowError("Failed to send verification code. Please try again.");
            showEmailVerificationPrompt = false;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task VerifyAuthenticatorCode()
    {
        if (string.IsNullOrWhiteSpace(authenticatorCode) || authenticatorCode.Length != 6)
        {
            authenticatorError = "Please enter a valid 6-digit code.";
            return;
        }

        isVerifyingAuthenticator = true;
        authenticatorError = string.Empty;

        try
        {
            var result = await AuthService.VerifyAuthenticatorCodeAsync(loginRequest.Email, authenticatorCode);

            if (result.Success && result.User != null)
            {
                // Clear remembered credentials if remember me is not checked
                if (!loginRequest.RememberMe)
                {
                    await AuthService.ClearRememberedCredentialsAsync();
                }

                // Navigate to dashboard - session notification will be shown by MainLayout
                var dashboardUrl = result.User.Role switch
                {
                    "Admin" => "/admin/dashboard",
                    "Doctor" => "/doctor/dashboard",
                    "Patient" => "/patient/dashboard",
                    _ => "/patient/dashboard"
                };

                // Force reload to ensure fresh component state and onboarding status
                Navigation.NavigateTo(dashboardUrl, forceLoad: true);
            }
            else
            {
                authenticatorError = string.Join(", ", result.Errors);
                if (string.IsNullOrEmpty(authenticatorError))
                {
                    authenticatorError = "Invalid authenticator code. Please try again.";
                }
            }
        }
        catch (Exception)
        {
            authenticatorError = "Failed to verify authenticator code. Please try again.";
        }
        finally
        {
            isVerifyingAuthenticator = false;
            StateHasChanged();
        }
    }

    private void CancelAuthenticator()
    {
        showAuthenticatorPrompt = false;
        authenticatorCode = string.Empty;
        authenticatorError = string.Empty;
        ToastService.ShowError("Two-factor authentication cancelled. Please try logging in again.");
        StateHasChanged();
    }

    private void RedirectToDashboard(AuthenticationState authState)
    {
        var role = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
        var dashboardUrl = role switch
        {
            "Admin" => "/admin/dashboard",
            "Doctor" => "/doctor/dashboard",
            "Patient" => "/patient/dashboard",
            _ => "/patient/dashboard"
        };

        Navigation.NavigateTo(dashboardUrl);
    }
}

</AnonymousOnly>