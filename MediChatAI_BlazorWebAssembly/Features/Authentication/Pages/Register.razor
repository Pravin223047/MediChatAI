@page "/register"
@using System.ComponentModel.DataAnnotations
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AppSettingsState AppSettings
@inject IToastService ToastService

<PageTitle>Register - @AppSettings.Settings.SiteName</PageTitle>

<AnonymousOnly>

<div class="flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-8 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
    <div class="max-w-xl w-full">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 dark:bg-primary/20 rounded-2xl mb-4">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">@AppSettings.Settings.SiteName</h1>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                Create Account
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-400">
                Already have an account?
                <a href="/login" class="font-semibold text-primary hover:text-primary dark:text-primary dark:hover:text-primary transition-colors">
                    Sign in
                </a>
            </p>
        </div>

        @if (!showSuccessMessage)
        {
            <!-- Auth Card -->
            <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-lg rounded-2xl shadow-xl dark:shadow-2xl border border-gray-200 dark:border-gray-700 p-8 transition-all duration-300">
                <EditForm Model="@registerRequest" OnValidSubmit="@HandleRegister" class="space-y-4">
                    <DataAnnotationsValidator />

                    <!-- Name Fields Row -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div class="space-y-2">
                            <label for="firstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">First Name</label>
                            <InputText id="firstName" @bind-Value="registerRequest.FirstName"
                                      class="block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                      placeholder="John" />
                            <ValidationMessage For="@(() => registerRequest.FirstName)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                        </div>

                        <div class="space-y-2">
                            <label for="lastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Last Name</label>
                            <InputText id="lastName" @bind-Value="registerRequest.LastName"
                                      class="block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                      placeholder="Doe" />
                            <ValidationMessage For="@(() => registerRequest.LastName)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                        </div>
                    </div>

                    <!-- Email Input -->
                    <div class="space-y-2">
                        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                                </svg>
                            </div>
                            <InputText id="email" @bind-Value="registerRequest.Email"
                                      class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                      placeholder="your@email.com" />
                        </div>
                        <ValidationMessage For="@(() => registerRequest.Email)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                    </div>

                    <!-- Role Select -->
                    <div class="space-y-2">
                        <label for="role" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Register As</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <InputSelect id="role" @bind-Value="registerRequest.Role"
                                        class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 appearance-none cursor-pointer">
                                <option value="" class="text-gray-400">Select your role</option>
                                <option value="Patient">Patient</option>
                                <option value="Doctor">Doctor</option>
                            </InputSelect>
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                </svg>
                            </div>
                        </div>
                        <ValidationMessage For="@(() => registerRequest.Role)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                    </div>

                    <!-- Password Input -->
                    <div class="space-y-2">
                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                            </div>
                            <InputText type="password" id="password" @bind-Value="registerRequest.Password"
                                      class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                      placeholder="Create a strong password" />
                        </div>
                        <ValidationMessage For="@(() => registerRequest.Password)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                        <p class="text-xs text-gray-500 dark:text-gray-400 ml-1">
                            Must be 8+ characters with uppercase, lowercase, number and special character
                        </p>
                    </div>

                    <!-- Confirm Password Input -->
                    <div class="space-y-2">
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Confirm Password</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            </div>
                            <InputText type="password" id="confirmPassword" @bind-Value="registerRequest.ConfirmPassword"
                                      class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-xl bg-white dark:bg-gray-700/50 text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
                                      placeholder="Re-enter your password" />
                        </div>
                        <ValidationMessage For="@(() => registerRequest.ConfirmPassword)" class="text-red-500 dark:text-red-400 text-xs mt-1 ml-1" />
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-2">
                        <button type="submit" disabled="@isLoading"
                                class="group relative w-full flex items-center justify-center py-3.5 px-4 border border-transparent text-base font-semibold rounded-xl text-white bg-primary hover:bg-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 shadow-lg hover:shadow-xl">
                            @if (isLoading)
                            {
                                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                </svg>
                                <span>Creating account...</span>
                            }
                            else
                            {
                                <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                                </svg>
                                <span>Create Account</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        }
    </div>
</div>

@code {
    private RegisterModel registerRequest = new();
    private bool isLoading = false;
    private bool showSuccessMessage = false;

    public class RegisterModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email format")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "Password must be at least 8 characters long")]
        [RegularExpression(@"^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[^\da-zA-Z]).{8,}$", 
            ErrorMessage = "Password must contain uppercase, lowercase, number and special character")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Confirm password is required")]
        [Compare(nameof(Password), ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;

        [Required(ErrorMessage = "First name is required")]
        [StringLength(100, ErrorMessage = "First name cannot exceed 100 characters")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Last name is required")]
        [StringLength(100, ErrorMessage = "Last name cannot exceed 100 characters")]
        public string LastName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Role is required")]
        public string Role { get; set; } = string.Empty;
    }

    private async Task HandleRegister()
    {
        isLoading = true;

        try
        {
            var request = new RegisterRequest
            {
                Email = registerRequest.Email,
                Password = registerRequest.Password,
                ConfirmPassword = registerRequest.ConfirmPassword,
                FirstName = registerRequest.FirstName,
                LastName = registerRequest.LastName,
                Role = registerRequest.Role
            };

            var result = await AuthService.RegisterAsync(request);

            if (result.Success)
            {
                ToastService.ShowSuccess("Registration successful! Please check your email to verify your account before signing in.");
                await Task.Delay(500); // Brief delay for toast to display
                Navigation.NavigateTo("/login");
            }
            else
            {
                ToastService.ShowError(string.Join(", ", result.Errors));
            }
        }
        catch (Exception)
        {
            ToastService.ShowError("An unexpected error occurred. Please try again.");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}

</AnonymousOnly>