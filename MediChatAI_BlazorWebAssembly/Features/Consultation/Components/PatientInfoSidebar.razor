@using MediChatAI_BlazorWebAssembly.Features.Doctor.Services
@using MediChatAI_BlazorWebAssembly.Features.Doctor.Models
@inject IPatientManagementService PatientService
@inject IPrescriptionService PrescriptionService

<div class="patient-info-sidebar h-full overflow-y-auto bg-gray-850">

    @if (isLoading)
    {
        <div class="flex items-center justify-center h-64">
            <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-primary-500"></div>
        </div>
    }
    else if (patient == null)
    {
        <div class="p-4">
            <div class="bg-red-900/20 border border-red-500 rounded-lg p-4">
                <p class="text-red-400 text-sm">Failed to load patient information</p>
            </div>
        </div>
    }
    else
    {
        <!-- Patient Header -->
        <div class="bg-gray-800 border-b border-gray-700 p-4">
            <div class="flex items-center space-x-3 mb-3">
                <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <span class="text-white font-bold text-xl">@GetInitials(patient.FullName)</span>
                </div>
                <div class="flex-1 min-w-0">
                    <h3 class="text-white font-semibold text-lg truncate">@patient.FullName</h3>
                    <p class="text-gray-400 text-sm">@patient.Age years • @patient.Gender</p>
                    <p class="text-gray-500 text-xs">ID: @patient.PatientId</p>
                </div>
            </div>

            <!-- Critical Info Badges -->
            <div class="flex flex-wrap gap-2">
                @if (!string.IsNullOrEmpty(patient.BloodGroup))
                {
                    <span class="badge bg-red-900/30 text-red-400 border border-red-700 text-xs">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                        </svg>
                        @patient.BloodGroup
                    </span>
                }
                @if (patient.Allergies?.Any() == true)
                {
                    <span class="badge bg-yellow-900/30 text-yellow-400 border border-yellow-700 text-xs">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        @patient.Allergies.Count Allergies
                    </span>
                }
            </div>
        </div>

        <!-- Sub-Tabs -->
        <div class="flex border-b border-gray-700 bg-gray-800 sticky top-0 z-10">
            <button @onclick="@(() => activeSubTab = "overview")"
                    class="@GetSubTabClass("overview")">
                Overview
            </button>
            <button @onclick="@(() => activeSubTab = "history")"
                    class="@GetSubTabClass("history")">
                History
            </button>
            <button @onclick="@(() => activeSubTab = "vitals")"
                    class="@GetSubTabClass("vitals")">
                Vitals
            </button>
        </div>

        <!-- Tab Content -->
        <div class="p-4">
            @if (activeSubTab == "overview")
            {
                <!-- Overview Tab -->
                <div class="space-y-4">

                    <!-- Contact Information -->
                    <div class="bg-gray-800 rounded-lg p-3 border border-gray-700">
                        <h4 class="text-white font-semibold text-sm mb-3 flex items-center">
                            <svg class="w-4 h-4 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            Contact
                        </h4>
                        <div class="space-y-2 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-400">Email:</span>
                                <span class="text-white">@patient.Email</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-400">Phone:</span>
                                <span class="text-white">@patient.PhoneNumber</span>
                            </div>
                        </div>
                    </div>

                    <!-- Allergies -->
                    @if (patient.Allergies?.Any() == true)
                    {
                        <div class="bg-yellow-900/10 border border-yellow-700 rounded-lg p-3">
                            <h4 class="text-yellow-400 font-semibold text-sm mb-3 flex items-center">
                                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                </svg>
                                Known Allergies
                            </h4>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var allergy in patient.Allergies)
                                {
                                    <span class="px-2 py-1 bg-yellow-900/30 text-yellow-300 rounded text-xs border border-yellow-700">
                                        @allergy
                                    </span>
                                }
                            </div>
                        </div>
                    }

                    <!-- Chronic Conditions -->
                    @if (patient.ChronicConditions?.Any() == true)
                    {
                        <div class="bg-gray-800 rounded-lg p-3 border border-gray-700">
                            <h4 class="text-white font-semibold text-sm mb-3 flex items-center">
                                <svg class="w-4 h-4 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                Chronic Conditions
                            </h4>
                            <ul class="space-y-1">
                                @foreach (var condition in patient.ChronicConditions)
                                {
                                    <li class="text-gray-300 text-sm flex items-start">
                                        <span class="text-primary-400 mr-2">•</span>
                                        @condition
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- Emergency Contact -->
                    @if (!string.IsNullOrEmpty(patient.EmergencyContactName))
                    {
                        <div class="bg-gray-800 rounded-lg p-3 border border-gray-700">
                            <h4 class="text-white font-semibold text-sm mb-3 flex items-center">
                                <svg class="w-4 h-4 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                </svg>
                                Emergency Contact
                            </h4>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-gray-400">Name:</span>
                                    <span class="text-white">@patient.EmergencyContactName</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-gray-400">Phone:</span>
                                    <span class="text-white">@patient.EmergencyContactPhone</span>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            }
            else if (activeSubTab == "history")
            {
                <!-- History Tab -->
                <div class="space-y-4">

                    <!-- Recent Consultations -->
                    <div class="bg-gray-800 rounded-lg p-3 border border-gray-700">
                        <h4 class="text-white font-semibold text-sm mb-3 flex items-center">
                            <svg class="w-4 h-4 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Recent Consultations
                        </h4>
                        @* @if (patient.LastVisitDate.HasValue) *@
                        @if (patient.LastVisitDate != default)
                        {
                            <div class="space-y-2">
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-400">Last Visit:</span>
                                    <span class="text-white">@patient.LastVisitDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-400">Total Visits:</span>
                                    <span class="text-white">@patient.TotalVisits</span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-gray-500 text-sm">No previous consultations</p>
                        }
                    </div>

                    <!-- Active Prescriptions -->
                    <div class="bg-gray-800 rounded-lg p-3 border border-gray-700">
                        <h4 class="text-white font-semibold text-sm mb-3 flex items-center">
                            <svg class="w-4 h-4 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                            Active Prescriptions
                        </h4>
                        @if (activePrescriptions.Any())
                        {
                            <div class="space-y-2">
                                @foreach (var rx in activePrescriptions.Take(3))
                                {
                                    <div class="bg-gray-750 rounded p-2 border border-gray-600">
                                        <div class="flex justify-between items-start mb-1">
                                            <span class="text-white text-sm font-medium">@rx.Items.FirstOrDefault()?.DrugName</span>
                                            <span class="text-xs text-gray-400">@rx.PrescriptionDate.ToString("MMM dd")</span>
                                        </div>
                                        <p class="text-gray-400 text-xs">@rx.Items.FirstOrDefault()?.Frequency</p>
                                    </div>
                                }
                                @if (activePrescriptions.Count > 3)
                                {
                                    <p class="text-primary-400 text-xs text-center mt-2">+@(activePrescriptions.Count - 3) more</p>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-gray-500 text-sm">No active prescriptions</p>
                        }
                    </div>

                </div>
            }
            else if (activeSubTab == "vitals")
            {
                <!-- Vitals Tab -->
                <div class="space-y-4">

                    <div class="bg-gray-800 rounded-lg p-3 border border-gray-700">
                        <h4 class="text-white font-semibold text-sm mb-3 flex items-center">
                            <svg class="w-4 h-4 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            Latest Vitals
                        </h4>

                        <!-- Vital Signs Grid -->
                        <div class="grid grid-cols-2 gap-3">
                            <div class="bg-gray-750 rounded-lg p-3 border border-gray-600">
                                <div class="text-gray-400 text-xs mb-1">Blood Pressure</div>
                                <div class="text-white text-lg font-semibold">--/--</div>
                                <div class="text-gray-500 text-xs">mmHg</div>
                            </div>
                            <div class="bg-gray-750 rounded-lg p-3 border border-gray-600">
                                <div class="text-gray-400 text-xs mb-1">Heart Rate</div>
                                <div class="text-white text-lg font-semibold">--</div>
                                <div class="text-gray-500 text-xs">bpm</div>
                            </div>
                            <div class="bg-gray-750 rounded-lg p-3 border border-gray-600">
                                <div class="text-gray-400 text-xs mb-1">Temperature</div>
                                <div class="text-white text-lg font-semibold">--</div>
                                <div class="text-gray-500 text-xs">°F</div>
                            </div>
                            <div class="bg-gray-750 rounded-lg p-3 border border-gray-600">
                                <div class="text-gray-400 text-xs mb-1">SpO2</div>
                                <div class="text-white text-lg font-semibold">--</div>
                                <div class="text-gray-500 text-xs">%</div>
                            </div>
                        </div>

                        <p class="text-gray-500 text-xs mt-3 text-center italic">
                            Vitals integration coming soon
                        </p>
                    </div>

                </div>
            }
        </div>
    }

</div>

@code {
    [Parameter]
    public string PatientId { get; set; } = string.Empty;

    private PatientDetailModel? patient;
    private List<PrescriptionModel> activePrescriptions = new();
    private bool isLoading = true;
    private string activeSubTab = "overview";

    protected override async Task OnInitializedAsync()
    {
        await LoadPatientData();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(PatientId))
        {
            await LoadPatientData();
        }
    }

    private async Task LoadPatientData()
    {
        isLoading = true;
        try
        {
            patient = await PatientService.GetPatientByIdAsync(PatientId);

            if (patient != null)
            {
                // Load active prescriptions
                activePrescriptions = await PrescriptionService.GetActivePrescriptionsForPatientAsync(PatientId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading patient data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetInitials(string fullName)
    {
        if (string.IsNullOrWhiteSpace(fullName)) return "?";

        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();

        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }

    private string GetSubTabClass(string tabName)
    {
        var baseClass = "flex-1 px-3 py-2 text-xs font-medium transition-colors";
        var activeClass = "text-primary-400 bg-gray-750 border-b-2 border-primary-400";
        var inactiveClass = "text-gray-400 hover:text-white hover:bg-gray-750";

        return $"{baseClass} {(activeSubTab == tabName ? activeClass : inactiveClass)}";
    }
}
