@using MediChatAI_BlazorWebAssembly.Core.Services.State
@using MediChatAI_BlazorWebAssembly.Features.Patient.DTOs
@inject ConsultationState ConsultationState
@inject IJSRuntime JSRuntime
@implements IDisposable

<div class="video-call-interface relative w-full h-full bg-gray-950">

    @if (participants.Count == 0)
    {
        <!-- No Participants - Waiting State -->
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
                <div class="w-32 h-32 bg-gray-800 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
                <p class="text-gray-400 text-lg">Waiting for participants to join...</p>
            </div>
        </div>
    }
    else if (participants.Count == 1)
    {
        <!-- Single Remote Participant (1-on-1) -->
        <div class="absolute inset-0">
            <!-- Remote Video (Full Screen) -->
            <div class="w-full h-full bg-gray-900 flex items-center justify-center relative">
                <video id="remote-video-@participants[0].Id"
                       class="w-full h-full object-cover"
                       autoplay
                       playsinline></video>

                <!-- Participant Name Overlay -->
                <div class="absolute bottom-4 left-4 bg-gray-900/80 backdrop-blur-sm px-3 py-2 rounded-lg flex items-center space-x-2">
                    <span class="text-white font-medium">@participants[0].Name</span>
                    @if (!participants[0].IsOnline)
                    {
                        <span class="w-2 h-2 bg-gray-500 rounded-full"></span>
                    }
                    else
                    {
                        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                    }
                </div>

                <!-- Muted Indicator -->
                @if (IsParticipantMuted(participants[0].Id))
                {
                    <div class="absolute top-4 right-4 bg-red-600 rounded-full p-2">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
                        </svg>
                    </div>
                }
            </div>

            <!-- Local Video (Picture-in-Picture) -->
            <div class="absolute bottom-24 right-6 w-48 h-36 bg-gray-800 rounded-xl overflow-hidden shadow-2xl border-2 border-gray-700 @(isDragging ? "cursor-move" : "cursor-pointer")"
                 style="@localVideoPosition"
                 @onmousedown="StartDrag"
                 @onmousemove="Drag"
                 @onmouseup="EndDrag"
                 @onmouseleave="EndDrag">
                <video id="local-video"
                       class="w-full h-full object-cover mirror"
                       autoplay
                       muted
                       playsinline></video>

                <!-- Local Muted Indicator -->
                @if (!isAudioEnabled)
                {
                    <div class="absolute bottom-2 left-2 bg-red-600 rounded-full p-1.5">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
                        </svg>
                    </div>
                }

                @if (!isVideoEnabled)
                {
                    <div class="absolute inset-0 bg-gray-800 flex items-center justify-center">
                        <div class="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center">
                            <span class="text-white font-semibold text-xl">You</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Multiple Participants (Grid View) -->
        <div class="absolute inset-0 p-4">
            <div class="grid @GetGridClass() gap-3 h-full">
                @foreach (var participant in participants)
                {
                    <div class="bg-gray-900 rounded-xl overflow-hidden relative flex items-center justify-center @(activeSpeakerId == participant.Id ? "ring-4 ring-primary-500 ring-opacity-75" : "")">
                        <video id="remote-video-@participant.Id"
                               class="w-full h-full object-cover"
                               autoplay
                               playsinline></video>

                        <!-- Participant Info -->
                        <div class="absolute bottom-2 left-2 right-2 flex items-center justify-between">
                            <div class="bg-gray-900/80 backdrop-blur-sm px-2 py-1 rounded flex items-center space-x-2">
                                <span class="text-white text-sm font-medium">@participant.Name</span>
                                @if (participant.IsOnline)
                                {
                                    <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                                }
                            </div>

                            @if (IsParticipantMuted(participant.Id))
                            {
                                <div class="bg-red-600 rounded-full p-1">
                                    <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
                                    </svg>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Local Video in Grid -->
                <div class="bg-gray-800 rounded-xl overflow-hidden relative flex items-center justify-center">
                    <video id="local-video-grid"
                           class="w-full h-full object-cover mirror"
                           autoplay
                           muted
                           playsinline></video>

                    <div class="absolute bottom-2 left-2 right-2 flex items-center justify-between">
                        <div class="bg-gray-900/80 backdrop-blur-sm px-2 py-1 rounded">
                            <span class="text-white text-sm font-medium">You</span>
                        </div>

                        @if (!isAudioEnabled)
                        {
                            <div class="bg-red-600 rounded-full p-1">
                                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
                                </svg>
                            </div>
                        }
                    </div>

                    @if (!isVideoEnabled)
                    {
                        <div class="absolute inset-0 bg-gray-800 flex items-center justify-center">
                            <div class="w-20 h-20 bg-gray-700 rounded-full flex items-center justify-center">
                                <span class="text-white font-semibold text-2xl">You</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Top Bar: Duration & Network Quality -->
    <div class="absolute top-4 left-1/2 transform -translate-x-1/2 flex items-center space-x-4">
        <!-- Call Duration -->
        <div class="bg-gray-900/80 backdrop-blur-sm px-4 py-2 rounded-lg">
            <span class="text-white font-mono text-sm">@callDuration</span>
        </div>

        <!-- Network Quality Indicator -->
        @if (showNetworkQuality)
        {
            <div class="bg-gray-900/80 backdrop-blur-sm px-3 py-2 rounded-lg flex items-center space-x-2">
                @if (networkQuality == "good")
                {
                    <div class="flex space-x-0.5">
                        <div class="w-1 h-3 bg-green-500 rounded-sm"></div>
                        <div class="w-1 h-4 bg-green-500 rounded-sm"></div>
                        <div class="w-1 h-5 bg-green-500 rounded-sm"></div>
                    </div>
                    <span class="text-green-400 text-xs font-medium">Good</span>
                }
                else if (networkQuality == "fair")
                {
                    <div class="flex space-x-0.5">
                        <div class="w-1 h-3 bg-yellow-500 rounded-sm"></div>
                        <div class="w-1 h-4 bg-yellow-500 rounded-sm"></div>
                        <div class="w-1 h-5 bg-gray-600 rounded-sm"></div>
                    </div>
                    <span class="text-yellow-400 text-xs font-medium">Fair</span>
                }
                else
                {
                    <div class="flex space-x-0.5">
                        <div class="w-1 h-3 bg-red-500 rounded-sm"></div>
                        <div class="w-1 h-4 bg-gray-600 rounded-sm"></div>
                        <div class="w-1 h-5 bg-gray-600 rounded-sm"></div>
                    </div>
                    <span class="text-red-400 text-xs font-medium">Poor</span>
                }
            </div>
        }
    </div>

    <!-- Control Bar (Bottom) -->
    <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 z-10">
        <div class="bg-gray-800/90 backdrop-blur-lg rounded-2xl border border-gray-700 px-6 py-4 shadow-2xl">
            <div class="flex items-center space-x-3">

                <!-- Microphone Toggle -->
                <button @onclick="ToggleAudio"
                        class="control-button @(isAudioEnabled ? "bg-gray-700 hover:bg-gray-600" : "bg-red-600 hover:bg-red-700")"
                        title="@(isAudioEnabled ? "Mute" : "Unmute")">
                    @if (isAudioEnabled)
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"></path>
                        </svg>
                    }
                </button>

                <!-- Camera Toggle -->
                <button @onclick="ToggleVideo"
                        class="control-button @(isVideoEnabled ? "bg-gray-700 hover:bg-gray-600" : "bg-red-600 hover:bg-red-700")"
                        title="@(isVideoEnabled ? "Turn off camera" : "Turn on camera")">
                    @if (isVideoEnabled)
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                    }
                    else
                    {
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"></path>
                        </svg>
                    }
                </button>

                <!-- Screen Share -->
                <button @onclick="ToggleScreenShare"
                        class="control-button @(isScreenSharing ? "bg-primary-600 hover:bg-primary-700" : "bg-gray-700 hover:bg-gray-600")"
                        title="@(isScreenSharing ? "Stop sharing" : "Share screen")">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </button>

                <!-- Divider -->
                <div class="w-px h-8 bg-gray-600"></div>

                <!-- More Options -->
                <button @onclick="ToggleMoreOptions"
                        class="control-button bg-gray-700 hover:bg-gray-600"
                        title="More options">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                    </svg>
                </button>

                <!-- Settings -->
                <button @onclick="OpenSettings"
                        class="control-button bg-gray-700 hover:bg-gray-600"
                        title="Settings">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </button>

                <!-- Divider -->
                <div class="w-px h-8 bg-gray-600"></div>

                <!-- End Call -->
                <button @onclick="EndCall"
                        class="control-button-large bg-red-600 hover:bg-red-700"
                        title="End call">
                    <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2M5 3a2 2 0 00-2 2v1c0 8.284 6.716 15 15 15h1a2 2 0 002-2v-3.28a1 1 0 00-.684-.948l-4.493-1.498a1 1 0 00-1.21.502l-1.13 2.257a11.042 11.042 0 01-5.516-5.517l2.257-1.128a1 1 0 00.502-1.21L9.228 3.683A1 1 0 008.279 3H5z"></path>
                    </svg>
                </button>

            </div>
        </div>
    </div>

</div>

<style>
    .video-call-interface {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    .control-button {
        width: 3rem;
        height: 3rem;
        border-radius: 9999px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .control-button:hover {
        transform: scale(1.05);
    }

    .control-button:active {
        transform: scale(0.95);
    }

    .control-button-large {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 9999px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
    }

    .control-button-large:hover {
        transform: scale(1.05);
    }

    .control-button-large:active {
        transform: scale(0.95);
    }

    .mirror {
        transform: scaleX(-1);
    }

    video {
        background-color: #1f2937;
    }
</style>

