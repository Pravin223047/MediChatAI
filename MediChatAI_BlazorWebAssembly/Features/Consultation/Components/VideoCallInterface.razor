    private bool isAudioEnabled = true;
    private bool isVideoEnabled = true;
    private bool isScreenSharing = false;
    private bool showNetworkQuality = true;
    private string networkQuality = "good"; // good, fair, poor
    private int? activeSpeakerId = null;
    private string callDuration = "00:00:00";

