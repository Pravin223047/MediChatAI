            Console.WriteLine($"Toggle screen share error: {ex.Message}");
        }
    }

    private void ToggleMoreOptions()
    {
        // TODO: Show more options menu
    }

    private void OpenSettings()
    {
        // TODO: Open settings modal
    }

    private async Task EndCall()
    {
        await OnEndCall.InvokeAsync();
    }

    private void OnParticipantJoined(ConsultationParticipantDto participant)
    {
        if (!participants.Any(p => p.Id == participant.Id))
        {
            participants.Add(participant);
            StateHasChanged();
        }
    }

    private void OnParticipantLeft(int participantId)
    {
        var participant = participants.FirstOrDefault(p => p.Id == participantId);
        if (participant != null)
        {
            participants.Remove(participant);
            StateHasChanged();
        }
    }

    private string GetGridClass()
    {
        var count = participants.Count + 1; // +1 for local video

        if (count <= 2) return "grid-cols-1";
        if (count <= 4) return "grid-cols-2";
        if (count <= 6) return "grid-cols-3";
        if (count <= 9) return "grid-cols-3";
        return "grid-cols-4";
    }

    private bool IsParticipantMuted(int participantId)
    {
        return participantMutedStates.TryGetValue(participantId, out var isMuted) && isMuted;
    }

    private void StartDrag(MouseEventArgs e)
