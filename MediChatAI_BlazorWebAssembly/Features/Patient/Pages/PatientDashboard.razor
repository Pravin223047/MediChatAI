@page "/patient/dashboard"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.SignalR.Client
@using MediChatAI_BlazorWebAssembly.Features.Patient.Components
@using MediChatAI_BlazorWebAssembly.Core.Services.Theme
@using MediChatAI_BlazorWebAssembly.Features.Notifications.Services
@using MediChatAI_BlazorWebAssembly.Features.Patient.DTOs
@using Blazored.LocalStorage
@using Microsoft.JSInterop
@inject AppSettingsState AppSettings
@inject IThemeService ThemeService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject INotificationService NotificationService
@inject ILocalStorageService LocalStorage
@inject ILogger<PatientDashboard> Logger
@inject ThemeState ThemeState
@inject IJSRuntime JS
@inject MediChatAI_BlazorWebAssembly.Features.Patient.Services.IDashboardService DashboardService
@implements IDisposable

<PageTitle>Patient Dashboard - @AppSettings.Settings.SiteName</PageTitle>

<AuthorizeRouteGuard RequiredRole="Patient">

<!-- Modern Dashboard with Theme Support -->
<div class="min-h-screen transition-colors duration-300 @(IsDarkMode ? "bg-gray-900" : "bg-gradient-to-br from-gray-50 to-gray-100")">

    <!-- Header with Theme Toggle -->
    <header class="@(IsDarkMode ? "bg-gray-800/90 border-gray-700" : "bg-white/80") backdrop-blur-md shadow-lg border-b sticky top-0 z-10">
        <div class="w-full py-4 px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-bold @(IsDarkMode ? "text-white" : "text-gray-900")">
                        Welcome back, <span class="text-primary">@patientName</span>
                    </h1>
                    <p class="mt-1 text-sm @(IsDarkMode ? "text-gray-400" : "text-gray-600")">
                        Your health dashboard at a glance
                    </p>
                </div>
                <div class="flex items-center space-x-4">
                    <!-- Theme Toggle Component -->
                    <PatientThemeToggle OnOpenModal="@OpenThemeModal" />

                    <!-- Profile Link -->
                    <a href="/patient/profile"
                       class="@(IsDarkMode ? "text-primary-400 hover:text-primary-300" : "text-primary hover:text-primary-700") font-medium transition-colors flex items-center gap-2">
                        <i class="fas fa-user-circle text-xl"></i>
                        <span class="hidden sm:inline">My Profile</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="w-full py-6 px-4 sm:px-6 lg:px-8">

        @if (isLoading)
        {
            <!-- Loading Skeleton -->
            <div class="animate-pulse space-y-6">
                <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="h-32 bg-gray-300 dark:bg-gray-700 rounded-lg"></div>
                    }
                </div>
            </div>
        }
        else
        {
            <!-- Quick Stats Cards -->
            <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">

                <!-- Next Appointment Card -->
                <div class="@GetCardClasses() group hover:scale-105 transition-transform duration-200">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <p class="text-sm font-medium @(IsDarkMode ? "text-gray-400" : "text-gray-500")">
                                    Next Appointment
                                </p>
                                <p class="text-2xl font-bold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                    @(upcomingAppointmentCount > 0 ? upcomingAppointments.First().AppointmentDate.ToString("MMM dd") : "None")
                                </p>
                                @if (upcomingAppointmentCount > 0)
                                {
                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600") mt-1">
                                        Dr. @upcomingAppointments.First().DoctorName
                                    </p>
                                }
                            </div>
                            <div class="p-3 rounded-full bg-gradient-to-br from-primary to-accent opacity-80 group-hover:opacity-100 transition-opacity">
                                <i class="fas fa-calendar-alt text-white text-2xl"></i>
                            </div>
                        </div>
                        @if (upcomingAppointmentCount > 1)
                        {
                            <div class="mt-3 text-xs @(IsDarkMode ? "text-gray-500" : "text-gray-400")">
                                +@(upcomingAppointmentCount - 1) more upcoming
                            </div>
                        }
                    </div>
                </div>

                <!-- Active Prescriptions Card -->
                <div class="@GetCardClasses() group hover:scale-105 transition-transform duration-200">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <p class="text-sm font-medium @(IsDarkMode ? "text-gray-400" : "text-gray-500")">
                                    Active Prescriptions
                                </p>
                                <p class="text-2xl font-bold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                    @activePrescriptionCount
                                </p>
                                @if (expiringPrescriptionCount > 0)
                                {
                                    <p class="text-xs text-yellow-500 mt-1">
                                        <i class="fas fa-exclamation-triangle"></i> @expiringPrescriptionCount expiring soon
                                    </p>
                                }
                            </div>
                            <div class="p-3 rounded-full bg-gradient-to-br from-yellow-400 to-orange-500 opacity-80 group-hover:opacity-100 transition-opacity">
                                <i class="fas fa-pills text-white text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Vitals Card -->
                <div class="@GetCardClasses() group hover:scale-105 transition-transform duration-200">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <p class="text-sm font-medium @(IsDarkMode ? "text-gray-400" : "text-gray-500")">
                                    Health Status
                                </p>
                                <p class="text-2xl font-bold text-green-600 mt-1">
                                    @healthStatus
                                </p>
                                @if (!string.IsNullOrEmpty(latestVitalReading))
                                {
                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600") mt-1">
                                        @latestVitalReading
                                    </p>
                                }
                            </div>
                            <div class="p-3 rounded-full bg-gradient-to-br from-green-400 to-emerald-500 opacity-80 group-hover:opacity-100 transition-opacity">
                                <i class="fas fa-heartbeat text-white text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Documents Card -->
                <div class="@GetCardClasses() group hover:scale-105 transition-transform duration-200">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <p class="text-sm font-medium @(IsDarkMode ? "text-gray-400" : "text-gray-500")">
                                    My Documents
                                </p>
                                <p class="text-2xl font-bold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                    @totalDocumentsCount
                                </p>
                                @if (unverifiedDocumentsCount > 0)
                                {
                                    <p class="text-xs text-blue-500 mt-1">
                                        <i class="fas fa-clock"></i> @unverifiedDocumentsCount pending review
                                    </p>
                                }
                            </div>
                            <div class="p-3 rounded-full bg-gradient-to-br from-purple-400 to-pink-500 opacity-80 group-hover:opacity-100 transition-opacity">
                                <i class="fas fa-folder text-white text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">

                <!-- Left Column (2/3 width) -->
                <div class="lg:col-span-2 space-y-6">

                    <!-- Quick Actions Card -->
                    <div class="@GetCardClasses()">
                        <div class="p-6">
                            <h3 class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mb-4 flex items-center gap-2">
                                <i class="fas fa-bolt text-primary"></i>
                                Quick Actions
                            </h3>
                            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                                <button @onclick="OpenBookingWizard"
                                        class="group relative overflow-hidden rounded-lg bg-gradient-to-br from-primary to-accent p-6 text-white shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                    <i class="fas fa-calendar-plus text-3xl mb-2"></i>
                                    <p class="font-semibold">Book Appointment</p>
                                    <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity"></div>
                                </button>

                                <button @onclick='() => Navigation.NavigateTo("/patient/messages")'
                                        class="group relative overflow-hidden rounded-lg @(IsDarkMode ? "bg-gray-700 hover:bg-gray-600" : "bg-gray-100 hover:bg-gray-200") p-6 transition-all duration-300 transform hover:-translate-y-1">
                                    <i class="fas fa-comments text-3xl mb-2 text-primary"></i>
                                    <p class="font-semibold @(IsDarkMode ? "text-white" : "text-gray-900")">Message Doctor</p>
                                </button>

                                <button @onclick='() => Navigation.NavigateTo("/patient/health-records")'
                                        class="group relative overflow-hidden rounded-lg @(IsDarkMode ? "bg-gray-700 hover:bg-gray-600" : "bg-gray-100 hover:bg-gray-200") p-6 transition-all duration-300 transform hover:-translate-y-1">
                                    <i class="fas fa-file-medical text-3xl mb-2 text-primary"></i>
                                    <p class="font-semibold @(IsDarkMode ? "text-white" : "text-gray-900")">View Records</p>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Appointments Section with Status Grouping -->
                    <div class="@GetCardClasses()">
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-6">
                                <h3 class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") flex items-center gap-2">
                                    <i class="fas fa-calendar-check text-primary"></i>
                                    My Appointments
                                </h3>
                                @if (upcomingAppointmentCount > 0)
                                {
                                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary text-white">
                                        @upcomingAppointmentCount Total
                                    </span>
                                }
                            </div>

                            @if (upcomingAppointmentCount == 0)
                            {
                                <div class="text-center py-12">
                                    <i class="fas fa-calendar-times text-6xl @(IsDarkMode ? "text-gray-700" : "text-gray-300") mb-4"></i>
                                    <p class="@(IsDarkMode ? "text-gray-400" : "text-gray-500") mb-4">No upcoming appointments</p>
                                    <button @onclick="OpenBookingWizard" class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-700 transition-colors">
                                        Schedule an Appointment
                                    </button>
                                </div>
                            }
                            else
                            {
                                <!-- Unconfirmed/Pending Appointments -->
                                @if (pendingAppointments.Count > 0)
                                {
                                    <div class="mb-6">
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                <i class="fas fa-clock mr-1"></i>
                                                Pending Confirmation (@pendingAppointments.Count)
                                            </span>
                                        </div>
                                        <div class="space-y-3">
                                            @foreach (var appointment in pendingAppointments.Take(2))
                                            {
                                                <div class="@(IsDarkMode ? "bg-yellow-900/20 border-yellow-700" : "bg-yellow-50 border-yellow-200") border rounded-lg p-4">
                                                    <div class="flex items-start justify-between">
                                                        <div class="flex-1">
                                                            <p class="font-semibold @(IsDarkMode ? "text-white" : "text-gray-900")">
                                                                Dr. @appointment.DoctorName
                                                            </p>
                                                            <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600") mt-1">
                                                                @appointment.Specialization
                                                            </p>
                                                            <p class="text-sm @(IsDarkMode ? "text-gray-300" : "text-gray-700") mt-2">
                                                                <i class="fas fa-calendar mr-1"></i>
                                                                @appointment.AppointmentDate.ToString("MMMM dd, yyyy") at @appointment.AppointmentTime
                                                            </p>
                                                            @if (!string.IsNullOrEmpty(appointment.ReasonForVisit))
                                                            {
                                                                <p class="text-xs @(IsDarkMode ? "text-gray-500" : "text-gray-600") mt-2">
                                                                    <i class="fas fa-info-circle mr-1"></i>
                                                                    @appointment.ReasonForVisit
                                                                </p>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- Confirmed Appointments -->
                                @if (confirmedAppointments.Count > 0)
                                {
                                    <div class="mb-6">
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                <i class="fas fa-check-circle mr-1"></i>
                                                Confirmed (@confirmedAppointments.Count)
                                            </span>
                                        </div>
                                        <div class="space-y-3">
                                            @foreach (var appointment in confirmedAppointments.Take(2))
                                            {
                                                <div class="@(IsDarkMode ? "bg-green-900/20 border-green-700" : "bg-green-50 border-green-200") border rounded-lg p-4">
                                                    <div class="flex items-start justify-between">
                                                        <div class="flex-1">
                                                            <p class="font-semibold @(IsDarkMode ? "text-white" : "text-gray-900")">
                                                                Dr. @appointment.DoctorName
                                                            </p>
                                                            <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600") mt-1">
                                                                @appointment.Specialization
                                                            </p>
                                                            <p class="text-sm @(IsDarkMode ? "text-gray-300" : "text-gray-700") mt-2">
                                                                <i class="fas fa-calendar mr-1"></i>
                                                                @appointment.AppointmentDate.ToString("MMMM dd, yyyy") at @appointment.AppointmentTime
                                                            </p>
                                                            @if (appointment.IsVirtual && !string.IsNullOrEmpty(appointment.MeetingLink))
                                                            {
                                                                <p class="text-xs text-blue-600 mt-2">
                                                                    <i class="fas fa-video mr-1"></i>
                                                                    Virtual Appointment
                                                                </p>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                <!-- All Scheduled Appointments (Combined View) -->
                                @if (scheduledAppointments.Count > confirmedAppointments.Count + pendingAppointments.Count)
                                {
                                    <div>
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                <i class="fas fa-calendar-alt mr-1"></i>
                                                Other Scheduled
                                            </span>
                                        </div>
                                        <div class="space-y-3">
                                            @foreach (var appointment in scheduledAppointments.Except(confirmedAppointments).Except(pendingAppointments).Take(2))
                                            {
                                                <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-4">
                                                    <div class="flex items-start justify-between">
                                                        <div class="flex-1">
                                                            <p class="font-semibold @(IsDarkMode ? "text-white" : "text-gray-900")">
                                                                Dr. @appointment.DoctorName
                                                            </p>
                                                            <p class="text-sm @(IsDarkMode ? "text-gray-400" : "text-gray-600") mt-1">
                                                                <i class="fas fa-calendar mr-1"></i>
                                                                @appointment.AppointmentDate.ToString("MMMM dd, yyyy") at @appointment.AppointmentTime
                                                            </p>
                                                        </div>
                                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                            @appointment.Status
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>

                    <!-- Active Prescriptions -->
                    <div class="@GetCardClasses()">
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") flex items-center gap-2">
                                    <i class="fas fa-prescription text-primary"></i>
                                    Active Prescriptions
                                </h3>
                                @if (activePrescriptionCount > 0)
                                {
                                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                        @activePrescriptionCount Active
                                    </span>
                                }
                            </div>

                            @if (activePrescriptionCount == 0)
                            {
                                <div class="text-center py-8">
                                    <i class="fas fa-pills text-4xl @(IsDarkMode ? "text-gray-700" : "text-gray-300") mb-3"></i>
                                    <p class="@(IsDarkMode ? "text-gray-400" : "text-gray-500")">No active prescriptions</p>
                                </div>
                            }
                            else
                            {
                                <div class="space-y-3">
                                    @foreach (var prescription in activePrescriptions.Take(3))
                                    {
                                        <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-4">
                                            <div class="flex items-start justify-between">
                                                <div class="flex-1">
                                                    <p class="font-semibold @(IsDarkMode ? "text-white" : "text-gray-900")">
                                                        @prescription.MedicationName
                                                    </p>
                                                    <p class="text-sm @(IsDarkMode ? "text-gray-400" : "text-gray-600") mt-1">
                                                        @prescription.Dosage - @prescription.Frequency
                                                    </p>
                                                    <p class="text-xs @(IsDarkMode ? "text-gray-500" : "text-gray-500") mt-1">
                                                        Prescribed by Dr. @prescription.DoctorName
                                                    </p>
                                                </div>
                                                @if (prescription.RefillsRemaining > 0)
                                                {
                                                    <button class="px-3 py-1 text-xs bg-primary text-white rounded hover:bg-primary-700 transition-colors">
                                                        Refill
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Right Column (1/3 width) -->
                <div class="space-y-6">

                    <!-- Recent Activity -->
                    <div class="@GetCardClasses()">
                        <div class="p-6">
                            <h3 class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mb-4 flex items-center gap-2">
                                <i class="fas fa-history text-primary"></i>
                                Recent Activity
                            </h3>

                            <RecentActivityTimeline
                                Appointments="@upcomingAppointments"
                                Prescriptions="@activePrescriptions"
                                Documents="@recentDocuments"
                                Notifications="@recentNotifications"
                                LatestVitals="@latestVitals"
                                MaxItems="2" />
                        </div>
                    </div>

                    <!-- Health Summary / Vitals -->
                    <div class="@GetCardClasses()">
                        <div class="p-6">
                            <h3 class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mb-4 flex items-center gap-2">
                                <i class="fas fa-heartbeat text-primary"></i>
                                Health Metrics
                            </h3>

                            @if (latestVitals != null && latestVitals.LastRecorded != DateTime.MinValue)
                            {
                                <div class="space-y-4">
                                    <!-- Blood Pressure -->
                                    @if (!string.IsNullOrEmpty(latestVitals.BloodPressure))
                                    {
                                        <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-3">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600")">Blood Pressure</p>
                                                    <p class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                                        @latestVitals.BloodPressure <span class="text-xs font-normal">mmHg</span>
                                                    </p>
                                                </div>
                                                <i class="fas fa-heartbeat text-2xl text-red-500"></i>
                                            </div>
                                        </div>
                                    }

                                    <!-- Heart Rate -->
                                    @if (!string.IsNullOrEmpty(latestVitals.HeartRate))
                                    {
                                        <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-3">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600")">Heart Rate</p>
                                                    <p class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                                        @latestVitals.HeartRate <span class="text-xs font-normal">bpm</span>
                                                    </p>
                                                </div>
                                                <i class="fas fa-heart text-2xl text-pink-500"></i>
                                            </div>
                                        </div>
                                    }

                                    <!-- Temperature -->
                                    @if (!string.IsNullOrEmpty(latestVitals.Temperature))
                                    {
                                        <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-3">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600")">Temperature</p>
                                                    <p class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                                        @latestVitals.Temperature <span class="text-xs font-normal">Â°F</span>
                                                    </p>
                                                </div>
                                                <i class="fas fa-thermometer-half text-2xl text-orange-500"></i>
                                            </div>
                                        </div>
                                    }

                                    <!-- Oxygen Saturation -->
                                    @if (!string.IsNullOrEmpty(latestVitals.OxygenSaturation))
                                    {
                                        <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-3">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600")">Oxygen Saturation</p>
                                                    <p class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                                        @latestVitals.OxygenSaturation <span class="text-xs font-normal">%</span>
                                                    </p>
                                                </div>
                                                <i class="fas fa-lungs text-2xl text-blue-500"></i>
                                            </div>
                                        </div>
                                    }

                                    <!-- Weight -->
                                    @if (!string.IsNullOrEmpty(latestVitals.Weight))
                                    {
                                        <div class="@(IsDarkMode ? "bg-gray-700/50" : "bg-gray-50") rounded-lg p-3">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <p class="text-xs @(IsDarkMode ? "text-gray-400" : "text-gray-600")">Weight</p>
                                                    <p class="text-lg font-semibold @(IsDarkMode ? "text-white" : "text-gray-900") mt-1">
                                                        @latestVitals.Weight <span class="text-xs font-normal">lbs</span>
                                                    </p>
                                                </div>
                                                <i class="fas fa-weight text-2xl text-purple-500"></i>
                                            </div>
                                        </div>
                                    }

                                    <div class="pt-2 border-t @(IsDarkMode ? "border-gray-700" : "border-gray-200")">
                                        <p class="text-xs @(IsDarkMode ? "text-gray-500" : "text-gray-400") text-center">
                                            Last recorded: @latestVitals.LastRecorded.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-8">
                                    <i class="fas fa-chart-area text-4xl @(IsDarkMode ? "text-gray-700" : "text-gray-300") mb-3"></i>
                                    <p class="text-sm @(IsDarkMode ? "text-gray-400" : "text-gray-600")">
