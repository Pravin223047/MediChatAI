    private async Task InitializeSignalR()
    {
        try
        {
            // Get access token from local storage
            var token = await LocalStorage.GetItemAsync<string>("token");

            if (string.IsNullOrEmpty(token))
            {
                Logger.LogWarning("Cannot initialize SignalR: No access token found");
                return;
            }

            // Subscribe to appointment-specific events before starting connection
            NotificationService.OnAppointmentApproved += HandleAppointmentApproved;
            NotificationService.OnAppointmentRejected += HandleAppointmentRejected;
            NotificationService.OnAppointmentCancelled += HandleAppointmentCancelled;
            NotificationService.OnAppointmentUpdated += HandleAppointmentUpdated;
            NotificationService.OnAppointmentReminder += HandleAppointmentReminder;
            NotificationService.OnNewPrescription += HandleNewPrescription;
            NotificationService.OnVitalRecorded += HandleVitalRecorded;

            // Start SignalR connection (non-blocking)
            if (!NotificationService.IsConnected)
            {
                // Don't await - let it connect in the background
                _ = Task.Run(async () =>
                {
                    try
                    {
                        await NotificationService.StartAsync(token);
                        Logger.LogInformation("SignalR connection initialized successfully");
                    }
                    catch (Exception ex)
                    {
                        Logger.LogDebug(ex, "SignalR connection unavailable - real-time notifications disabled. The app will continue to work without real-time updates.");
                    }
                });
            }
        }
        catch (Exception ex)
        {
            Logger.LogDebug(ex, "SignalR initialization failed - continuing without real-time notifications");
        }
    }

