@code {
    private enum TabType { All, Unread }

    private TabType selectedTab = TabType.All;
    private NotificationCategory? selectedCategory = null;
    private List<NotificationDto> notifications = new();
    private int unreadCount = 0;
    private int totalCount = 0;
    private int currentPage = 1;
    private int pageSize = 15;
    private bool isLoading = false;
    private bool isMarkingAllRead = false;

    protected override async Task OnInitializedAsync()
    {
        NotificationService.OnNotificationsUpdated += HandleNotificationsUpdated;
        NotificationService.OnUnreadCountChanged += HandleUnreadCountChanged;
        await LoadNotifications();
    }

    private void HandleNotificationsUpdated()
    {
        _ = LoadNotifications();
    }

    private async Task LoadNotifications()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var input = new GetNotificationsInput(
                Skip: (currentPage - 1) * pageSize,
                Take: pageSize,
                IsRead: selectedTab == TabType.Unread ? false : null,
                Category: selectedCategory
            );

            var response = await NotificationService.GetNotificationsAsync(input);
            if (response != null)
            {
                notifications = response.Notifications;
                totalCount = response.TotalCount;
            }

            unreadCount = await NotificationService.GetUnreadCountAsync();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to load notifications: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SelectTab(TabType tab)
    {
        selectedTab = tab;
        selectedCategory = null;
        currentPage = 1;
        _ = LoadNotifications();
    }

    private void SelectCategory(NotificationCategory category)
    {
        selectedTab = TabType.All;
        selectedCategory = category;
        currentPage = 1;
        _ = LoadNotifications();
    }

    private async Task HandleNotificationClick(NotificationDto notification)
    {
        if (!notification.IsRead)
        {
            await NotificationService.MarkAsReadAsync(notification.Id);
        }

        if (!string.IsNullOrEmpty(notification.ActionUrl))
        {
            Navigation.NavigateTo(notification.ActionUrl);
        }
    }

    private async Task HandleMarkAsRead(MouseEventArgs e, Guid notificationId)
    {
        try
        {
            await NotificationService.MarkAsReadAsync(notificationId);
            ToastService.ShowSuccess("Notification marked as read");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to mark as read: {ex.Message}");
        }
    }

    private async Task HandleDelete(MouseEventArgs e, Guid notificationId)
    {
        try
        {
            await NotificationService.DeleteNotificationAsync(notificationId);
            ToastService.ShowSuccess("Notification deleted");
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to delete notification: {ex.Message}");
        }
    }

    private async Task MarkAllAsRead()
    {
        isMarkingAllRead = true;
        try
        {
            var count = await NotificationService.MarkAllAsReadAsync();
            ToastService.ShowSuccess($"Marked {count} notifications as read");
            await LoadNotifications();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Failed to mark all as read: {ex.Message}");
        }
        finally
        {
            isMarkingAllRead = false;
        }
    }

    private void HandleUnreadCountChanged(int count)
    {
        unreadCount = count;
        StateHasChanged();
    }

    private void PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            _ = LoadNotifications();
        }
    }

    private void NextPage()
    {
        if (currentPage * pageSize < totalCount)
        {
            currentPage++;
            _ = LoadNotifications();
        }
    }

    private string GetTabClass(TabType tab)
    {
        return tab == selectedTab && !selectedCategory.HasValue
            ? "border-primary text-primary bg-gradient-to-t from-primary-50/50 to-transparent dark:from-primary-900/30 dark:to-transparent"
            : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600";
    }

    private string GetCategoryTabClass(NotificationCategory category)
    {
        return selectedCategory == category
            ? "border-primary text-primary bg-gradient-to-t from-primary-50/50 to-transparent dark:from-primary-900/30 dark:to-transparent"
            : "border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600";
    }

    private RenderFragment GetCategoryIcon(NotificationCategory category)
    {
        var iconPath = category switch
        {
            NotificationCategory.Appointment => "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
            NotificationCategory.Doctor => "M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z",
            NotificationCategory.Admin => "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z",
            NotificationCategory.Security => "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z",
            NotificationCategory.System => "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
            NotificationCategory.Medical => "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
            _ => "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
        };

        return @<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="@iconPath"></path>
                </svg>;
    }

    private RenderFragment GetNotificationIcon(NotificationDto notification)
    {
        var (iconPath, gradientFrom, gradientTo) = notification.Type switch
