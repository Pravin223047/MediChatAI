@page "/patient/notifications"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Patient")]
@inject INotificationService NotificationService
@inject NavigationManager Navigation
@inject IToastService ToastService
@implements IDisposable

<AuthorizeRouteGuard RequiredRole="Patient">
    <div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50/30 to-purple-50/30 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-4">
        <div class="w-full mx-auto px-4">
            <!-- Modern Header Card -->
            <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-8 mb-6 border border-white/50 dark:border-gray-700/50"
                 style="box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08), 0 0 0 1px rgba(255, 255, 255, 0.3) inset;">
                <div class="flex items-center justify-between flex-wrap gap-4">
                    <div class="flex items-center space-x-4">
                        <div class="w-14 h-14 bg-gradient-to-br from-primary to-accent rounded-2xl flex items-center justify-center shadow-lg">
                            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 via-primary to-accent dark:from-gray-100 dark:via-primary dark:to-accent bg-clip-text text-transparent">
                                My Notifications
                            </h1>
                            <p class="mt-1 text-sm text-gray-600 dark:text-gray-400 font-medium">
                                Stay updated with your health and appointment notifications
                            </p>
                        </div>
                    </div>
                    @if (unreadCount > 0)
                    {
                        <button @onclick="MarkAllAsRead"
                                disabled="@isMarkingAllRead"
                                class="px-6 py-3 bg-gradient-to-r from-primary to-accent text-white rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all duration-300 font-semibold shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed flex items-center space-x-2 group">
                            @if (isMarkingAllRead)
                            {
                                <div class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
                                <span>Marking...</span>
                            }
                            else
                            {
                                <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                <span>Mark all as read (@unreadCount)</span>
                            }
                        </button>
                    }
                </div>

                <!-- Advanced Filter Tabs -->
                <div class="mt-8 border-b border-gray-200 dark:border-gray-700">
                    <nav class="-mb-px flex space-x-6 overflow-x-auto custom-scrollbar-thin">
                        <button @onclick="() => SelectTab(TabType.All)"
                                class="@GetTabClass(TabType.All) whitespace-nowrap pb-4 px-2 border-b-2 font-semibold text-sm transition-all duration-300 flex items-center space-x-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            <span>All</span>
                            @if (totalCount > 0)
                            {
                                <span class="px-2 py-0.5 rounded-full text-xs font-bold bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300">@totalCount</span>
                            }
                        </button>
                        <button @onclick="() => SelectTab(TabType.Unread)"
                                class="@GetTabClass(TabType.Unread) whitespace-nowrap pb-4 px-2 border-b-2 font-semibold text-sm transition-all duration-300 flex items-center space-x-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76"></path>
                            </svg>
                            <span>Unread</span>
                            @if (unreadCount > 0)
                            {
                                <span class="px-2 py-0.5 rounded-full text-xs font-bold bg-gradient-to-r from-primary to-accent text-white shadow-sm animate-pulse">@unreadCount</span>
                            }
                        </button>
                        @foreach (var category in Enum.GetValues<NotificationCategory>().Where(c => c != NotificationCategory.General))
                        {
                            <button @onclick="() => SelectCategory(category)"
                                    class="@GetCategoryTabClass(category) whitespace-nowrap pb-4 px-2 border-b-2 font-semibold text-sm transition-all duration-300 flex items-center space-x-2">
                                @GetCategoryIcon(category)
                                <span>@category.ToString()</span>
                            </button>
                        }
                    </nav>
                </div>
            </div>

            <!-- Notifications Grid -->
            <div class="space-y-4">
                @if (isLoading)
                {
                    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-16 text-center border border-white/50 dark:border-gray-700/50">
                        <div class="inline-block animate-spin rounded-full h-16 w-16 border-4 border-primary border-t-transparent"></div>
                        <p class="mt-6 text-lg text-gray-600 dark:text-gray-400 font-medium">Loading your notifications...</p>
                    </div>
                }
                else if (notifications.Count == 0)
                {
                    <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-xl p-16 text-center border border-white/50 dark:border-gray-700/50">
                        <div class="mx-auto w-24 h-24 bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-full flex items-center justify-center mb-6">
                            <svg class="h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                            </svg>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">All Clear!</h3>
                        <p class="text-base text-gray-600 dark:text-gray-400 max-w-md mx-auto">
                            @if (selectedTab == TabType.Unread)
                            {
                                <text>You're all caught up! No unread notifications at the moment.</text>
                            }
                            else if (selectedCategory.HasValue)
                            {
                                <text>No @selectedCategory.Value.ToString().ToLower() notifications found. Check back later!</text>
                            }
                            else
                            {
                                <text>No notifications yet. We'll notify you when something important happens.</text>
                            }
                        </p>
                    </div>
                }
                else
                {
                    @foreach (var notification in notifications)
                    {
                        <div @onclick="() => HandleNotificationClick(notification)"
                             class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-lg hover:shadow-2xl border @(notification.IsRead ? "border-gray-200 dark:border-gray-700" : "border-primary-200 dark:border-primary-700") cursor-pointer transition-all duration-300 overflow-hidden group @(notification.IsRead ? "" : "ring-2 ring-indigo-500/20 dark:ring-indigo-400/20")"
                             style="@(notification.IsRead ? "" : "box-shadow: 0 10px 40px rgba(99, 102, 241, 0.1);")">
                            <div class="p-6">
                                <div class="flex items-start space-x-4">
                                    <!-- Modern Icon -->
                                    <div class="flex-shrink-0">
                                        @GetNotificationIcon(notification)
                                    </div>

                                    <!-- Content -->
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-start justify-between mb-2">
                                            <div class="flex-1">
                                                <div class="flex items-center space-x-3 mb-1">
                                                    <h3 class="text-lg font-bold text-gray-900 dark:text-white @(notification.IsRead ? "" : "text-primary dark:text-primary") group-hover:text-primary dark:group-hover:text-primary transition-colors">
                                                        @notification.Title
                                                    </h3>
                                                    @if (notification.Priority == NotificationPriority.Urgent)
                                                    {
                                                        <span class="px-2.5 py-1 text-xs font-bold text-red-700 dark:text-red-400 bg-gradient-to-r from-red-100 to-pink-100 dark:from-red-900/50 dark:to-pink-900/50 rounded-full shadow-sm ring-2 ring-red-200 dark:ring-red-800 animate-pulse">
                                                            ðŸ”¥ URGENT
                                                        </span>
                                                    }
                                                    else if (notification.Priority == NotificationPriority.High)
                                                    {
                                                        <span class="px-2.5 py-1 text-xs font-bold text-orange-700 dark:text-orange-400 bg-gradient-to-r from-orange-100 to-yellow-100 dark:from-orange-900/50 dark:to-yellow-900/50 rounded-full shadow-sm ring-2 ring-orange-200 dark:ring-orange-800">
                                                            âš¡ HIGH PRIORITY
                                                        </span>
                                                    }
                                                    @if (!notification.IsRead)
                                                    {
                                                        <span class="px-2.5 py-1 text-xs font-bold text-blue-700 dark:text-blue-400 bg-blue-100 dark:bg-blue-900/50 rounded-full">NEW</span>
                                                    }
                                                </div>
                                                <p class="text-sm text-gray-700 dark:text-gray-300 mb-3 leading-relaxed">
                                                    @notification.Message
                                                </p>
                                                <div class="flex items-center justify-between flex-wrap gap-3">
                                                    <div class="flex items-center space-x-4 text-xs font-medium">
                                                        <span class="flex items-center text-gray-500 dark:text-gray-400">
                                                            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                            </svg>
                                                            @FormatDateTime(notification.CreatedAt)
                                                        </span>
                                                        <span class="px-3 py-1 bg-gradient-to-r from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-600 rounded-full text-gray-700 dark:text-gray-300 font-semibold">
                                                            @GetCategoryEmoji(notification.Category) @notification.Category.ToString()
                                                        </span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(notification.ActionText))
                                                    {
                                                        <div class="flex items-center text-sm text-primary font-semibold group-hover:text-primary dark:group-hover:text-primary transition-colors">
                                                            <span>@notification.ActionText</span>
                                                            <svg class="w-4 h-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                                                            </svg>
                                                        </div>
                                                    }
                                                </div>
                                            </div>

                                            <!-- Action Buttons -->
                                            <div class="flex items-center space-x-2 ml-4">
                                                @if (!notification.IsRead)
                                                {
                                                    <button @onclick="(e) => HandleMarkAsRead(e, notification.Id)"
                                                            @onclick:stopPropagation="true"
                                                            class="p-2.5 text-primary hover:bg-primary rounded-xl transition-all duration-200 hover:scale-110 group/button"
                                                            title="Mark as read">
                                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                                        </svg>
                                                    </button>
                                                }
                                                <button @onclick="(e) => HandleDelete(e, notification.Id)"
                                                        @onclick:stopPropagation="true"
                                                        class="p-2.5 text-red-600 dark:text-red-400 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-xl transition-all duration-200 hover:scale-110 group/button"
                                                        title="Delete notification">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Modern Pagination -->
                    @if (totalCount > pageSize)
                    {
                        <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl rounded-2xl shadow-lg p-6 border border-white/50 dark:border-gray-700/50 flex items-center justify-between flex-wrap gap-4">
                            <div class="text-sm text-gray-600 dark:text-gray-400 font-medium">
                                Showing <span class="font-bold text-gray-900 dark:text-white">@((currentPage - 1) * pageSize + 1)</span> to <span class="font-bold text-gray-900 dark:text-white">@Math.Min(currentPage * pageSize, totalCount)</span> of <span class="font-bold text-gray-900 dark:text-white">@totalCount</span> notifications
                            </div>
                            <div class="flex space-x-3">
                                <button @onclick="PreviousPage"
                                        disabled="@(currentPage == 1)"
                                        class="px-5 py-2.5 border-2 border-gray-300 dark:border-gray-600 rounded-xl text-sm font-semibold text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-primary-50 hover:to-accent-50 dark:hover:from-primary-900/30 dark:hover:to-accent-900/30 hover:border-primary-300 dark:hover:border-primary-600 disabled:opacity-40 disabled:cursor-not-allowed transition-all duration-300 flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                                    </svg>
                                    <span>Previous</span>
                                </button>
                                <button @onclick="NextPage"
                                        disabled="@(currentPage * pageSize >= totalCount)"
                                        class="px-5 py-2.5 border-2 border-gray-300 dark:border-gray-600 rounded-xl text-sm font-semibold text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-primary-50 hover:to-accent-50 dark:hover:from-primary-900/30 dark:hover:to-accent-900/30 hover:border-primary-300 dark:hover:border-primary-600 disabled:opacity-40 disabled:cursor-not-allowed transition-all duration-300 flex items-center space-x-2">
                                    <span>Next</span>
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</AuthorizeRouteGuard>

