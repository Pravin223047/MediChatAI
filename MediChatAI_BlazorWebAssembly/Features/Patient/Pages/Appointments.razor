    private int? selectedRequestId = null;
    private PatientAppointmentRequestDto? selectedRequestForDetails = null;
    private string cancellationReason = "";

    // Data - Appointments and Requests
    private List<PatientAppointmentDto> allAppointments = new();
    private List<PatientAppointmentDto> filteredAppointments = new();
    private List<PatientAppointmentRequestDto> allRequests = new();
    private List<PatientAppointmentRequestDto> filteredRequests = new();
    
    // Counts
    private int totalCount => allAppointments.Count + allRequests.Count(r => r.Status != RequestStatus.Cancelled && r.Status != RequestStatus.Approved);
    private int pendingCount => allRequests.Count(r => r.Status == RequestStatus.Pending || r.Status == RequestStatus.UnderReview);
    private int upcomingCount => allAppointments.Count(a => a.Status == AppointmentStatus.Confirmed && a.AppointmentDateTime >= DateTime.Now);
    private int pastCount => allAppointments.Count(a => a.Status == AppointmentStatus.Completed || (a.Status != AppointmentStatus.Pending && a.Status != AppointmentStatus.Cancelled && a.AppointmentDateTime < DateTime.Now));
    private int cancelledCount => allAppointments.Count(a => a.Status == AppointmentStatus.Cancelled) + allRequests.Count(r => r.Status == RequestStatus.Cancelled || r.Status == RequestStatus.Rejected);
    private int totalPages => currentFilter == "pending" 
        ? (int)Math.Ceiling(filteredRequests.Count / (double)pageSize)
        : (int)Math.Ceiling(filteredAppointments.Count / (double)pageSize);

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadAppointments();
            isLoading = false;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading appointments");
            ToastService.ShowError("Failed to load appointments");
            isLoading = false;
        }
    }

    private async Task LoadAppointments()
    {
        // Fetch both appointments and appointment requests
        var appointmentsTask = AppointmentService.GetMyAppointmentsAsync();
        var requestsTask = AppointmentService.GetMyAppointmentRequestsAsync();
        
        await Task.WhenAll(appointmentsTask, requestsTask);
        
        allAppointments = await appointmentsTask;
        allRequests = await requestsTask;
        
        // Debug: Log counts
        Logger.LogInformation("Loaded {AppointmentCount} appointments and {RequestCount} requests",
            allAppointments.Count, allRequests.Count);
        
        foreach (var req in allRequests)
        {
            Logger.LogInformation("Request {Id}: Status={Status}, RequestedAt={RequestedAt}", 
                req.Id, req.Status, req.RequestedAt);
        }
        
        FilterAppointments();
    }

    private void SelectFilter(string filter)
    {
        currentFilter = filter;
        currentPage = 1;
        FilterAppointments();
    }

    private void FilterAppointments()
    {
        // Filter requests for pending tab and all tab
        var filteredReqs = allRequests.AsEnumerable();
        if (currentFilter == "pending" || currentFilter == "all")
        {
            filteredReqs = filteredReqs.Where(r => r.Status == RequestStatus.Pending || r.Status == RequestStatus.UnderReview);
        }
        else if (currentFilter == "cancelled")
        {
            filteredReqs = filteredReqs.Where(r => r.Status == RequestStatus.Cancelled || r.Status == RequestStatus.Rejected);
        }
        else
        {
            filteredReqs = Enumerable.Empty<PatientAppointmentRequestDto>();
        }
        
        // Apply search to requests
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredReqs = filteredReqs.Where(r =>
                (r.PreferredDoctorName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (r.SymptomDescription?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (r.ReasonForVisit?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false));
        }
        
        filteredRequests = filteredReqs.OrderByDescending(r => r.RequestedAt).ToList();

        // Filter appointments
        var filtered = allAppointments.AsEnumerable();

        // Apply filter
        if (currentFilter == "pending")
        {
            // For pending tab, we show requests only, not appointments
            filteredAppointments = new List<PatientAppointmentDto>();
            return;
        }
        else if (currentFilter == "upcoming")
            filtered = filtered.Where(a => a.Status == AppointmentStatus.Confirmed && a.AppointmentDateTime >= DateTime.Now);
        else if (currentFilter == "past")
            filtered = filtered.Where(a => a.Status == AppointmentStatus.Completed || (a.Status != AppointmentStatus.Pending && a.Status != AppointmentStatus.Cancelled && a.AppointmentDateTime < DateTime.Now));
        else if (currentFilter == "cancelled")
            filtered = filtered.Where(a => a.Status == AppointmentStatus.Cancelled);

        // Apply search
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            filtered = filtered.Where(a =>
                a.DoctorName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                (a.DoctorSpecialization != null && a.DoctorSpecialization.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) ||
                a.AppointmentDateTime.ToString("MMMM dd, yyyy").Contains(searchQuery, StringComparison.OrdinalIgnoreCase));
        }

        filteredAppointments = filtered.OrderBy(a => a.AppointmentDateTime).ToList();
    }

