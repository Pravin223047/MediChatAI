@inject IJSRuntime JSRuntime

@* Reusable Profile Image Component with Automatic Fallback *@

@if (!string.IsNullOrWhiteSpace(ImageUrl))
{
    <img src="@GetImageUrl(ImageUrl)"
         alt="@AltText"
         class="profile-image @CssClass"
         data-initials="@Initials"
         @onerror="HandleImageError"
         style="@Style" />
}
else
{
    @* Show fallback when no image URL *@
    <div class="@CssClass @GetFallbackClasses()" style="@Style">
        @if (!string.IsNullOrWhiteSpace(Initials))
        {
            <span class="@GetInitialsFontSize()">@Initials</span>
        }
        else
        {
            @* Default user icon SVG *@
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-full h-full p-2">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
            </svg>
        }
    </div>
}

@code {
    /// <summary>
    /// The profile image URL
    /// </summary>
    [Parameter]
    public string? ImageUrl { get; set; }

    /// <summary>
    /// Initials to display as fallback (e.g., "JD" for John Doe)
    /// </summary>
    [Parameter]
    public string? Initials { get; set; }

    /// <summary>
    /// Alt text for the image
    /// </summary>
    [Parameter]
    public string AltText { get; set; } = "Profile Image";

    /// <summary>
    /// Additional CSS classes to apply
    /// </summary>
    [Parameter]
    public string CssClass { get; set; } = "w-10 h-10 rounded-full object-cover";

    /// <summary>
    /// Additional inline styles
    /// </summary>
    [Parameter]
    public string? Style { get; set; }

    /// <summary>
    /// Size variant for auto-sizing (small, medium, large, xlarge)
    /// </summary>
    [Parameter]
    public string Size { get; set; } = "medium";

    /// <summary>
    /// Background gradient for fallback (default uses primary color)
    /// </summary>
    [Parameter]
    public string FallbackGradient { get; set; } = "from-primary to-accent";

    private string GetImageUrl(string url)
    {
        if (string.IsNullOrWhiteSpace(url))
            return string.Empty;

        // If URL is already absolute, return as-is
        if (url.StartsWith("http://") || url.StartsWith("https://") || url.StartsWith("data:"))
            return url;

        // Otherwise, treat as relative path
        return url.StartsWith("/") ? url : $"/{url}";
    }

    private string GetFallbackClasses()
    {
        return $"flex items-center justify-center bg-gradient-to-br {FallbackGradient} text-white font-semibold";
    }

    private string GetInitialsFontSize()
    {
        return Size switch
        {
            "small" => "text-xs",
            "medium" => "text-sm",
            "large" => "text-lg",
            "xlarge" => "text-2xl",
            _ => "text-sm"
        };
    }

    private async Task HandleImageError(Microsoft.AspNetCore.Components.Web.ErrorEventArgs args)
    {
        // JavaScript will handle the actual fallback rendering
        await Task.CompletedTask;
    }
}
