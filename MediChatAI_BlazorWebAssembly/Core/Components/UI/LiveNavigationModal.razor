    public void OnLocationError(LocationError error)
    {
        Console.Error.WriteLine($"Location error: {error.Message}");

        hasLocationError = true;
        errorMessage = error.Code switch
        {
            1 => "Location permission denied. Please enable location access in your browser settings and try again.",
            2 => "Location information is unavailable. Please check your device's location settings.",
            3 => error.Message, // Use the enhanced message from JS with retry info
            _ => $"Location error: {error.Message}"
        };

        StateHasChanged();
    }

    private void UpdateLocationData(LocationData data)
    {
        CurrentLatitude = data.Latitude;
        CurrentLongitude = data.Longitude;
        CurrentSpeed = data.Speed;
        CurrentAccuracy = data.Accuracy;
        LastUpdateTime = DateTime.Now.ToString("HH:mm:ss");

        // Calculate distance to destination
        if (CurrentLatitude.HasValue && CurrentLongitude.HasValue)
        {
            CurrentDistance = CalculateDistance(
                CurrentLatitude.Value,
                CurrentLongitude.Value,
                DestinationLatitude,
                DestinationLongitude
            );

            // Calculate ETA
            if (CurrentDistance.HasValue)
            {
                CurrentETA = CalculateETA(CurrentDistance.Value);
            }
        }
    }

    private double CalculateDistance(double lat1, double lon1, double lat2, double lon2)
    {
        const double R = 6371; // Earth's radius in km
        var dLat = (lat2 - lat1) * Math.PI / 180;
        var dLon = (lon2 - lon1) * Math.PI / 180;
        var a =
            Math.Sin(dLat / 2) * Math.Sin(dLat / 2) +
            Math.Cos(lat1 * Math.PI / 180) * Math.Cos(lat2 * Math.PI / 180) *
            Math.Sin(dLon / 2) * Math.Sin(dLon / 2);
        var c = 2 * Math.Atan2(Math.Sqrt(a), Math.Sqrt(1 - a));
        return R * c;
    }

    private string CalculateETA(double distanceKm)
    {
        // Use actual speed if available, otherwise use default 40 km/h for urban emergency driving
        var speedKmh = CurrentSpeed.HasValue && CurrentSpeed.Value > 0
            ? CurrentSpeed.Value * 3.6  // Convert m/s to km/h
            : 40.0;

        var timeInMinutes = Math.Round((distanceKm / speedKmh) * 60);

        if (timeInMinutes < 1) return "< 1 min";
        if (timeInMinutes < 60) return $"{timeInMinutes} min";

        var hours = Math.Floor(timeInMinutes / 60);
        var minutes = timeInMinutes % 60;

        return minutes > 0 ? $"{hours}h {minutes}m" : $"{hours}h";
    }

    private async Task RefreshNavigation()
    {
        await StartNavigation();
    }

    private async Task RetryNavigation()
    {
        // Stop any existing tracking
        await StopNavigationInternal();

        // Wait a moment before retrying
        await Task.Delay(500);

        // Restart navigation
        await StartNavigation();
    }

    private async Task ShareCurrentLocation()
    {
        if (CurrentLatitude.HasValue && CurrentLongitude.HasValue)
        {
            var message = $"I'm currently navigating to {DestinationName}. My current location:";
            await JS.InvokeVoidAsync("geolocationHelper.shareLocation",
                CurrentLatitude.Value,
                CurrentLongitude.Value,
                message);
        }
    }

    private async Task OpenInGoogleMaps()
    {
        if (CurrentLatitude.HasValue && CurrentLongitude.HasValue)
        {
            await JS.InvokeVoidAsync("geolocationHelper.navigateToDestination",
                DestinationLatitude,
                DestinationLongitude,
                DestinationName);
        }
    }

    private async Task StopNavigation()
    {
        await StopNavigationInternal();
        await CloseModal();
    }

    private async Task StopNavigationInternal()
    {
        if (isWatching)
        {
            await JS.InvokeVoidAsync("geolocationHelper.stopWatchingPosition");
            isWatching = false;
        }

        dotNetReference?.Dispose();
        dotNetReference = null;
    }

    private async Task CloseModal()
    {
        IsOpen = false;
        await IsOpenChanged.InvokeAsync(false);
    }

    public async ValueTask DisposeAsync()
    {
        await StopNavigationInternal();
    }

